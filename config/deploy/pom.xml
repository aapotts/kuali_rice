<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.rice</groupId>
    <artifactId>rice-config</artifactId>
    <version>2.0.0-m9-SNAPSHOT</version>
  </parent>
  <artifactId>rice-deploy</artifactId>
  <packaging>jar</packaging>
  <name>Rice Deploy</name>
  <properties>
    <maven.test.skip>true</maven.test.skip>
    <war.file>../../sampleapp/target/rice-sampleapp-${project.version}.war</war.file>
    <impex.dir>../../db/impex/master</impex.dir>
    <config.resource>${deploy.env}-app-config.xml</config.resource>
    <config.file>${project.build.directory}/classes/${config.resource}</config.file>
    <impex.database>${db.instance}</impex.database>
    <impex.username>${db.instance}</impex.username>
    <impex.password>${db.instance}</impex.password>
    <deploy.server.1>deploy1.rice.kuali.org</deploy.server.1>
    <deploy.server.2>deploy2.rice.kuali.org</deploy.server.2>
    <impex.oracle.url>jdbc:oracle:thin:@oracle.rice.kuali.org:1521:ORACLE</impex.oracle.url>
    <impex.mysql.dba.url>jdbc:mysql://mysql.rice.kuali.org</impex.mysql.dba.url>
    <impex.mysql.url>${impex.mysql.dba.url}/${impex.database}</impex.mysql.url>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>${config.resource}</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>gmaven-plugin</artifactId>
        <executions>
          <execution>
            <id>gmaven-compile-stubs</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>gmaven-generate-stubs</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-banned-dependencies</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>env1</id>
      <properties>
        <deploy.env>env1</deploy.env>
        <deploy.server>${deploy.server.1}</deploy.server>
        <public.url>http://dev1.rice.kuali.org</public.url>
        <tomcat.instance>tomcat1</tomcat.instance>
        <db.instance>RICEENV1</db.instance>
        <db.vendor>oracle</db.vendor>
        <impex.url>${impex.oracle.url}</impex.url>
        <impex.dba.url>${impex.oracle.url}</impex.dba.url>
      </properties>
    </profile>
    <profile>
      <id>env2</id>
      <properties>
        <deploy.env>env2</deploy.env>
        <deploy.server>${deploy.server.1}</deploy.server>
        <public.url>http://dev2.rice.kuali.org</public.url>
        <tomcat.instance>tomcat2</tomcat.instance>
        <db.instance>RICEENV2</db.instance>
        <db.vendor>mysql</db.vendor>
        <impex.dba.url>${impex.mysql.dba.url}</impex.dba.url>
        <impex.url>${impex.mysql.url}</impex.url>
      </properties>
    </profile>
    <profile>
      <id>env3</id>
      <properties>
        <deploy.env>env3</deploy.env>
        <deploy.server>${deploy.server.1}</deploy.server>
        <public.url>http://env3.rice.kuali.org</public.url>
        <tomcat.instance>tomcat3</tomcat.instance>
        <db.instance>RICEENV3</db.instance>
        <db.vendor>oracle</db.vendor>
        <impex.url>${impex.oracle.url}</impex.url>
        <impex.dba.url>${impex.oracle.url}</impex.dba.url>
      </properties>
    </profile>
    <profile>
      <id>env4</id>
      <properties>
        <deploy.env>env4</deploy.env>
        <deploy.server>${deploy.server.2}</deploy.server>
        <public.url>http://env4.rice.kuali.org</public.url>
        <tomcat.instance>tomcat1</tomcat.instance>
        <db.instance>RICEENV4</db.instance>
        <db.vendor>oracle</db.vendor>
        <impex.url>${impex.oracle.url}</impex.url>
        <impex.dba.url>${impex.oracle.url}</impex.dba.url>
      </properties>
    </profile>
    <profile>
      <id>env5</id>
      <properties>
        <deploy.env>env5</deploy.env>
        <deploy.server>${deploy.server.2}</deploy.server>
        <public.url>http://env5.rice.kuali.org</public.url>
        <tomcat.instance>tomcat2</tomcat.instance>
        <db.instance>RICEENV5</db.instance>
        <db.vendor>oracle</db.vendor>
        <impex.url>${impex.oracle.url}</impex.url>
        <impex.dba.url>${impex.oracle.url}</impex.dba.url>
        <war.file>../../standalone/target/rice-standalone-${project.version}.war</war.file>
      </properties>
    </profile>
    <profile>
      <id>env6</id>
      <properties>
        <deploy.env>env6</deploy.env>
        <deploy.server>${deploy.server.2}</deploy.server>
        <public.url>http://env6.rice.kuali.org</public.url>
        <tomcat.instance>tomcat3</tomcat.instance>
        <db.instance>RICEENV6</db.instance>
        <db.vendor>oracle</db.vendor>
        <impex.url>${impex.oracle.url}</impex.url>
        <impex.dba.url>${impex.oracle.url}</impex.dba.url>
      </properties>
    </profile>
    <profile>
      <id>reset</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.6</version>
            <executions>
              <execution>
                <id>reset</id>
                <phase>install</phase>
                <configuration>
                  <target>
                    <ant antfile="build.xml" target="reset" />
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>maven-http-plugin</artifactId>
            <version>1.0.1</version>
            <executions>
              <execution>
                <id>wait-for-tomcat-startup</id>
                <phase>install</phase>
                <goals>
                  <goal>wait</goal>
                </goals>
                <configuration>
                  <url>${public.url}</url>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>getwar</id>
      <properties>
        <deploy.groupId>org.kuali.rice</deploy.groupId>
        <deploy.artifactId>rice-core-api</deploy.artifactId>
        <!--
          <deploy.version>2.0.0-m9-20110929.153209-25</deploy.version>
        -->
        <deploy.version>2.0.0-m9-20110929.070450-24</deploy.version>
        <deploy.type>jar</deploy.type>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.3</version>
            <configuration>
              <localRepositoryDirectory>${project.build.directory}/repository</localRepositoryDirectory>
              <artifactItems>
                <artifactItem>
                  <groupId>${deploy.groupId}</groupId>
                  <artifactId>${deploy.artifactId}</artifactId>
                  <version>${deploy.version}</version>
                  <type>${deploy.type}</type>
                  <includes>**/MANIFEST.MF</includes>
                </artifactItem>
              </artifactItems>
            </configuration>
            <executions>
              <execution>
                <id>copy</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>copy</goal>
                  <goal>unpack</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>maven-manifest-plugin</artifactId>
            <version>1.0.0</version>
            <configuration>
              <filename>${project.build.directory}/dependency/META-INF/MANIFEST.MF</filename>
              <attribute>SVN-Revision</attribute>
              <prefix>manifest</prefix>
            </configuration>
            <executions>
              <execution>
                <id>svnrevision</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>svnrevision</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.6</version>
            <executions>
              <execution>
                <id>checkout</id>
                <phase>install</phase>
                <configuration>
                  <target>
                    <property name="manifest.svn.url" value="https://test.kuali.org/svn/rice/trunk/db@${manifest.SVN-Revision}" />
                    <echo>Checking out ${manifest.svn.url}</echo>
                    <exec executable="svn">
                      <arg value="checkout" />
                      <arg value="${manifest.svn.url}" />
                      <arg value="${project.build.directory}/checkout/db" />
                    </exec>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>maven-sysprops-plugin</artifactId>
            <version>1.0.0</version>
            <configuration>
              <systemProperties>
                <property>
                  <name>war.file</name>
                  <value>${project.build.directory}/dependency/${deploy.artifactId}-${deploy.version}.${deploy.type}</value>
                </property>
                <property>
                  <name>impex.dir</name>
                  <value>${project.build.directory}/checkout/db/impex/master</value>
                </property>
              </systemProperties>
            </configuration>
            <executions>
              <execution>
                <id>set-system-properties</id>
                <phase>install</phase>
                <goals>
                  <goal>set</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
