<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">

	<documentTypes xmlns="ns:workflow/DocumentType" xsi:schemaLocation="ns:workflow/DocumentType resource:DocumentType">

		<documentType>
			<name>RulesEngineIntegration-Simple</name>
      <description>Routes to a simple people flow using KRMS rules engine</description>
      <docHandler>none</docHandler>
			<routePaths>
				<routePath>
					<start name="AdHoc" nextNode="PeopleFlows" />
					<requests name="PeopleFlows" />
				</routePath>
			</routePaths>
			<routeNodes>
				<start name="AdHoc">
					<activationType>P</activationType>
				</start>
				<requests name="PeopleFlows">
					<activationType>R</activationType>
					<rulesEngine executorClass="org.kuali.rice.kew.framework.support.krms.TestRulesEngineExecutor"/>
				</requests>
			</routeNodes>
		</documentType>

  </documentTypes>

</data>
