                        </list>
                      </property>
                      <property name="layoutManager.summaryTitle" value="Agenda Items"/>
                      <property name="layoutManager.summaryFields">
                        <list>
                          <value>id</value>
                        </list>
                      </property>
                    </bean-->
                  </list>
                </property>
              </bean>

