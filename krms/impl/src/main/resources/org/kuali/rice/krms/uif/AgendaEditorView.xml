          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCall('ajaxMoveDown', 'AgendaEditorView-Tree');"
              p:actionLabel="Down">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-down.png"
                  p:altText="Down"/>
          </property>
        </bean>

        <bean parent="MessageField" p:messageText="]" p:style="display: inline;"/>

        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCall('ajaxCut', 'AgendaEditorView-Tree');"
              p:actionLabel="Cut" p:style="margin-left: 15pt;"> <!-- Horiz whitespace -->
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/cut.png"
                  p:altText="Cut"/>
          </property>
        </bean>

        <!-- Add a conditional disable once KRAD supports this.  Disable if cut buffer is empty, something like this:
            p:conditionalDisable="document.newMaintainableObject.dataObject.agendaItemCutPaste == null -->
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCall('ajaxPaste', 'AgendaEditorView-Tree');"
              p:actionLabel="Paste">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/paste.png"
                  p:altText="Paste"/>
          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCall('ajaxDelete', 'AgendaEditorView-Tree');"
              p:actionLabel="Delete" p:style="margin-right: 15pt;"> <!-- Horiz whitespace -->
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/delete.png"
                  p:altText="Delete"/>
          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:methodToCall="refresh" p:actionLabel="refresh">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/refresh.png"
                  p:altText="Delete"/>
          </property>
        </bean>

      </list>
    </property> 
  </bean>

  <bean id="AgendaEditorView-Tree" parent="TreeGroup" p:disclosure.render="false" p:header.render="false" p:style="float:left; margin-left: 2em;">
    <property name="title" value="Agenda Items"/>
    <property name="propertyName" value="agendaRuleTree"/>
    <property name="tree">
      <bean parent="AgendaTreeWidget">
        <property name="componentOptions">
          <map>
            <entry key="'plugins'"
              value="['themes','html_data', 'ui', 'crrm', 'dnd']" />
            <entry key="'themes'"
              value="{'theme':'default','dots':'false','icons':'false'}" />
            <entry key="'ui'" value="{ 'select_limit' : 1 }" />
            <entry key="'dnd'" value="{ 'drag_target' : false, 'drop_target' : false }" />
            <!-- entry key="'crrm'" value="
            {
            'move' : {
                   /*
                    * m.o - the node being dragged
                    * m.r - the target node
                    */
                    'check_move' : function (m) { 
                        var p = this._get_parent(m.o);
                        if(!p) return false;
                        p = p == -1 ? this.get_container() : p;
                        
                        if (m.o.hasClass('logicNode')) return false;
                        
                        if(p === m.np) return true;
                        if(p[0] &amp;&amp; m.np[0] &amp;&amp; p[0] === m.np[0]) return true;
                        return false;
                    }
                }
            } 
              "/ -->
          </map>
        </property>
      </bean>
    </property>
    <property name="nodePrototypeMap">
      <map key-type="java.lang.Class">
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.AgendaTreeRuleNode"/>
            </bean>
          </key> 
          <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
            <property name="labelPrototype">
              <bean parent="MessageField"/>
            </property>
            <property name="dataGroupPrototype">
              <!-- float:right is a hack to get the group for this hidden control out of the way -->
              <bean parent="GroupBodyOnly" p:hidden="true" p:style="float: right;">
                <property name="items">
                  <list>
                    <bean parent="InputField" p:propertyName="agendaItem.id"
                            p:showLabel="false" p:label="id" p:maxLength="255">
                      <property name="control">
                        <bean parent="HiddenControl"/>
                      </property>
                    </bean>
                  </list>
                </property>
              </bean>
            </property>
          </bean>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.AgendaTreeLogicNode"/>
            </bean>
          </key> 
          <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
            <property name="labelPrototype">
              <bean parent="MessageField"/>
            </property>
            <property name="dataGroupPrototype">
              <bean parent="GroupBodyOnly" />
            </property>
          </bean>
        </entry>
      </map>
    </property>
  </bean>

</beans>
