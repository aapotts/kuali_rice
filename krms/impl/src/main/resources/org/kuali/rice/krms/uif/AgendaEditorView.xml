  <util:list id="AgendaEditorView-treeBarButtonClasses">
    <value>kr-button-secondary1</value>
    <value>tree-bar-button</value>
  </util:list>

  <bean id="AgendaEditorView-barButton" parent="ActionField_Secondary" p:actionImageLocation="LEFT"
        p:styleClasses-ref="AgendaEditorView-treeBarButtonClasses" abstract="true" />

  <!-- TODO: figure out how to style this without using kr-footer -->
