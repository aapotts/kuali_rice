    <property name="renderHeader" value="false"/>
    <property name="layoutManager">
      <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL"/>
    </property>

    <property name="items">
      <list>

        <bean parent="AgendaEditorView-barButton" p:methodToCall="goToAddRule" p:actionLabel="Add Rule">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/add.png"
                  p:altText="Add Rule"/>
          </property>
        </bean>

<!--
        <bean parent="AgendaEditorView-barButton" p:methodToCall="goToEditRule" p:actionLabel="Edit Rule"  p:style="margin-right: 15pt;">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/edit.png"
                  p:altText="Edit Rule"/>
          </property>
        </bean>
-->
        <bean parent="NavigationActionField" p:methodToCall="goToEditRule" p:actionLabel="Edit Rule"
          p:styleClasses-ref="buttonClasses" p:style="margin-right: 15pt;"/>

        <!--
        <bean parent="InputField_Form" p:propertyName="maintenanceAction" p:label=""
           p:defaultValue="below" p:style="float:none; margin-right: 15px;">
          <property name="control">
            <bean parent="SelectControl">
                <property name="options">
                    <list>
                        <bean class="org.kuali.rice.core.api.util.ConcreteKeyValue" p:key="below" p:value="below selected"/>
                        <bean class="org.kuali.rice.core.api.util.ConcreteKeyValue" p:key="above" p:value="above selected"/>
                        <bean class="org.kuali.rice.core.api.util.ConcreteKeyValue" p:key="inWhenTrue" p:value="in selected's 'When TRUE'"/>
                        <bean class="org.kuali.rice.core.api.util.ConcreteKeyValue" p:key="inWhenFalse" p:value="in selected's 'When FALSE'"/>
                    </list>
                </property>
            </bean>
          </property>
        </bean>
         -->

        <bean parent="MessageField" p:messageText="Move: [" p:style="display: inline;"/>

        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCall('ajaxMoveLeft', 'AgendaEditorView-Tree');"
              p:actionLabel="Left">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-left.png"
                  p:altText="Left"/>
          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCall('ajaxMoveRight', 'AgendaEditorView-Tree');"
          p:actionLabel="Right" p:style="margin-right: 15pt;"> <!-- Horiz whitespace -->
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-right.png"
                  p:altText="Right"/>
          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCall('ajaxMoveUp', 'AgendaEditorView-Tree');"
              p:actionLabel="Up">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-up.png"
