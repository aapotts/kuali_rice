  <bean id="RuleEditorView-PropositionSummary" parent="GroupBodyOnly" p:renderHeader="false"
        p:layoutManager.orientation="HORIZONTAL">
    <property name="disclosure.render" value="false" />
    <property name="items">
      <list>
        <bean parent="MessageField" p:label="Summary" p:showLabel="true" p:labelPlacement="TOP"
              p:labelField.styleClasses="labelTop" p:messageText="@{#dp.agendaItemLine.rule.propositionSummary}" />
      </list>
    </property>

  </bean>


  <bean id="RuleEditorView-TreeExpandCollapse" parent="FieldGroup"  p:showLabel="false"
    p:style="font-size: smaller;">
    <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
    <property name="items">
      <list>                            
        <bean parent="ActionLinkField" p:clientSideJs="jq('.jstree').jstree('open_all');" 
          p:actionLabel="[+] expand all" p:style="font-size: smaller; margin-left: 2em;">
          <property name="actionImage"><null/></property>
        </bean>
        <bean parent="ActionLinkField" p:clientSideJs="jq('.jstree').jstree('close_all');" 
          p:actionLabel="[-] collapse all" p:style="font-size: smaller; margin-right: 15pt;">
          <property name="actionImage"><null/></property>
        </bean>
        <bean id="proposition_selected" parent="InputField" p:propertyName="selectedPropositionId" p:showLabel="false">
          <property name="control">
            <bean parent="HiddenControl"/>
          </property>
        </bean>
        <bean id="proposition_cut" parent="InputField" p:propertyName="cutPropositionId" p:showLabel="false">
          <property name="control">
            <bean parent="HiddenControl"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="RuleEditorView-RuleTreeViewControls" parent="Group"
      p:style="text-align: left; margin-top: 3px;"
      p:styleClasses="kr-footer">

    <property name="renderHeader" value="true"/>
    <property name="title" value="Propositions"/>
    <property name="layoutManager">
      <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL" p:style="padding: 5px;"/>
    </property>

    <property name="items">
      <list>
      </list>
    </property>
  </bean>

  <bean id="RuleEditorView-RuleTreeEditControls" parent="Group"
      p:style="text-align: left; margin-top: 3px;"
      p:styleClasses="kr-footer">

    <property name="renderHeader" value="true"/>
    <property name="title" value="Propositions"/>
    <property name="layoutManager">
      <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL" p:style="padding: 5px;"/>
    </property>
      
    <property name="items">
      <list>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('add');
          if (enabled) {
              ajaxCallPropositionTree('addProposition', 'RuleEditorView-Tree');
          }
          "
            p:actionLabel="Add" p:styleClasses="tree-bar-button kr-button-primary kr-add-button">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/node-insert-next.png"
              p:altText="Add Proposition"/>
          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('add');
          if (enabled) {
              ajaxCallPropositionTree('goToEditProposition', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Add Parent" p:styleClasses="tree-bar-button kr-button-primary kr-add-button">
          <property name="actionImage">
            <bean parent="ImageField" p:source="../krms/images/node-parent-and-child.png"
                  p:altText="Add Parent"/>
          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('356');
          if (enabled) {
              ajaxCallPropositionTree('goToEditProposition', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Edit">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/edit.png"
              p:altText="Edit Proposition"/>
          </property>
        </bean>

        <bean parent="MessageField" p:messageText="Move: [" p:style="display: inline;"/>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('391');
          if (enabled) {
              ajaxCallPropositionTree('movePropositionLeft', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Left">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-left.png"
                  p:altText="Left"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('397');
          if (enabled) {
              ajaxCallPropositionTree('movePropositionRight', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Right">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-right.png"
                  p:altText="Right"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('403');
          if (enabled) {
              ajaxCallPropositionTree('movePropositionUp', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Up">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-up.png"
                  p:altText="Up"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('409');
          if (enabled) {
              ajaxCallPropositionTree('movePropositionDown', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Down">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-down.png"
                  p:altText="Down"/>
          </property>
        </bean>
        <bean parent="MessageField" p:messageText="]" p:style="display: inline;"/>
        
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('418');
          if (enabled) {
              ajaxCutPropositionTree('cutProposition', 'RuleEditorView-Tree');
          }
          "
              p:actionLabel="Cut" p:style="margin-left: 15pt;"> <!-- Horiz whitespace -->
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/cut.png"
                  p:altText="Cut"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('424');
          if (enabled) {
              ajaxCallPropositionTree('pasteProposition', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Paste">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/paste.png"
                  p:altText="Paste"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="var enabled = enabledCheck('430');
          if (enabled) {
              ajaxCallPropositionTree('deleteProposition', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Delete" p:style="margin-right: 15pt;"> <!-- Horiz whitespace -->
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/delete.png"
                  p:altText="Delete"/>
          </property>
        </bean>
        <!-- refresh is always allowed, but enabledCheck will disable others if they are not -->
        <bean parent="ActionField" p:methodToCall="refresh" p:actionLabel="refresh" p:clientSideJs="var enabled = enabledCheck('refresh');
            submitForm();
            "
          p:styleClasses="kr-button-primary tree-bar-button kr-refresh-button">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/refresh.png"
                  p:altText="Refresh"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>
        
  <bean id="RuleEditorView-Tree" parent="ruleTree"/>        
  <bean id="ruleTree" parent="TreeGroup" p:disclosure.render="false" p:header.render="false" p:style="float:left; margin-left: 2em;">
    <property name="propertyName" value="agendaItemLine.rule.propositionTree"/>
    <property name="tree">
      <bean parent="RuleTreeWidget">
        <property name="componentOptions">
          <map>
            <entry key="'plugins'"
              value="['themes','html_data', 'ui', 'crrm', 'dnd']" />
            <entry key="'themes'"
              value="{'theme':'default','dots':'false','icons':'false'}" />
            <entry key="'ui'" value="{ 'select_limit' : 1 }" />
            <entry key="'dnd'" value="{ 'drag_target' : false, 'drop_target' : false }" />
          </map>
        </property>
      </bean>
    </property>
    <property name="nodePrototypeMap">
      <map key-type="java.lang.Class">
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.RuleTreeNode"/>
            </bean>
          </key>
          <bean parent="RuleTreeNodePrototype"/>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.SimplePropositionNode"/>
            </bean>
          </key>
          <bean parent="SimplePropositionNodePrototype"/>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.SimplePropositionEditNode"/>
            </bean>
          </key>
          <bean parent="SimplePropositionEditNodePrototype"/>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.CompoundOpCodeNode"/>
            </bean>
          </key> 
          <bean parent="CompoundOpCodeNodePrototype"/>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.CompoundPropositionEditNode"/>
            </bean>
          </key>
          <bean parent="CompoundPropositionEditNodePrototype"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="RuleTreeNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="MessageField"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="GroupBodyOnly" p:style="float: right;">
        <property name="layoutManager.orientation" value="HORIZONTAL"/>
        <property name="items">
          <list>
            <bean parent="ActionImageField"
                  p:clientSideJs="ajaxCallPropositionTree('goToEditProposition', 'RuleEditorView-TreeGroup');">
              <property name="actionImage">
                <bean parent="ImageField" p:source="../krms/images/edit.png"
                      p:altText="Edit" p:styleClasses="actionReveal"/>
              </property>
            </bean>
            <bean parent="InputField" p:propertyName="proposition.id"
                  p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="HiddenControl" p:styleClasses="hiddenId"/>
              </property>
            </bean>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="SimplePropositionNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="MessageField"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="GroupBodyOnly">
        <property name="layoutManager.orientation" value="HORIZONTAL"/>
        <property name="items">
          <list>
            <bean parent="InputField" p:propertyName="proposition.id"
                    p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="HiddenControl" p:styleClasses="hiddenId"/>
              </property>
            </bean>
            <bean parent="InputField" p:propertyName="proposition.parameterDisplayString"
                   p:showLabel="false" p:label="id" p:maxLength="255"  p:styleClasses="parameterDisplayString">
              <property name="control">
                <bean parent="TextControl"/>
              </property>
            </bean>

            <bean parent="selectedNodeQuickActions"/>

          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="SimplePropositionEditNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="MessageField"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="GroupBodyOnly" p:styleClasses="editModeNode">
        <property name="layoutManager.orientation" value="VERTICAL"/>
        <property name="items">
          <list>
            <bean parent="InputField" p:propertyName="proposition.id"
                    p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="HiddenControl" p:styleClasses="hiddenId"/>
              </property>
            </bean>
            <bean parent="InputField" p:propertyName="proposition.description" p:constraintText="size 100"
                  p:style="margin-left: 1pt;" p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="TextControl" p:size="93" p:maxLength="100" p:watermarkText="Enter a Proposition Description" p:style="margin-left: 12pt;"
                        p:styleClasses="editDescription"/>
              </property>
            </bean>
            <bean parent="GroupBodyOnly">
              <property name="layoutManager.orientation" value="HORIZONTAL"/>
              <property name="items">
                <list>
                  <bean parent="InputField" p:propertyName="proposition.categoryId"
                          p:style="margin-left: 12pt" p:showLabel="true" p:label="Category" p:labelPlacement="TOP" p:maxLength="40">
                    <property name="control">
                      <bean parent="SelectControl" p:styleClasses="categorySelect"/>
                    </property>
                    <property name="optionsFinder">
                      <bean class="org.kuali.rice.krms.impl.ui.CategoryValuesFinder"/>
                    </property>
                  </bean>
                  <bean parent="InputField" p:propertyName="proposition.parameters[0].value"
                          p:showLabel="true" p:label="Term" p:maxLength="255">
                    <property name="control">
                      <bean parent="SelectControl"/>
                    </property>
                    <property name="optionsFinder">
                      <bean class="org.kuali.rice.krms.impl.ui.ValidTermsValuesFinder"/>
                    </property>
                  </bean>
                  <bean parent="InputField" p:propertyName="proposition.parameters[2].value"
                          p:showLabel="false" p:style="padding-bottom: 0em;padding-top: 0em;padding-left: 0em;padding-right: 0em;" p:label="Operator" p:maxLength="20">
                    <property name="control">
                      <bean parent="SelectControl"/>
                    </property>
                    <property name="optionsFinder">
                      <bean class="org.kuali.rice.krms.impl.ui.PropositionOpCodeValuesFinder"/>
                    </property>
                  </bean>
                  <bean parent="InputField" p:propertyName="proposition.parameters[1].value"
                           p:showLabel="true" p:label="Value" p:maxLength="255">
                    <property name="control">
                      <bean parent="TextControl" p:style="margin-top: 2px;" p:watermarkText="Enter a Literal Value" />
                    </property>
                  </bean>

                  <bean parent="selectedNodeQuickActions"/>

                </list>
              </property>
            </bean>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="selectedNodeQuickActions" parent="FieldGroup" p:styleClasses="actionReveal"
        p:group.layoutManager.orientation="HORIZONTAL">
    <property name="items">
      <list>
        <bean parent="ActionImageField"
              p:clientSideJs="ajaxCallPropositionTree('goToEditProposition', 'RuleEditorView-TreeGroup');">
          <property name="actionImage">
            <bean parent="ImageField" p:source="../krms/images/edit.png"
