        </bean>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCallPropositionTree('movePropositionRight', 'RuleEditorView-Tree');"
              p:actionLabel="Right">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-right.png"
                  p:altText="Right"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCallPropositionTree('movePropositionUp', 'RuleEditorView-Tree');"
              p:actionLabel="Up">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-up.png"
                  p:altText="Up"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCallPropositionTree('movePropositionDown', 'RuleEditorView-Tree');"
              p:actionLabel="Down">
          <property name="actionImage">
            <bean parent="ImageField" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-down.png"
                  p:altText="Down"/>
          </property>
        </bean>
        <bean parent="MessageField" p:messageText="]" p:style="display: inline;"/>
        
        <bean parent="AgendaEditorView-barButton" p:clientSideJs="ajaxCutPropositionTree('cutProposition', 'RuleEditorView-Tree');"
              p:actionLabel="Cut" p:style="margin-left: 15pt;"> <!-- Horiz whitespace -->
