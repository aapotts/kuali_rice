  <bean id="RuleEditorView-Tree" parent="ruleTree"/>        
  <bean id="ruleTree" parent="TreeGroup" p:disclosure.render="false" p:header.render="false" p:style="float:left; margin-left: 2em;">
    <property name="propertyName" value="agendaItemLine.rule.propositionTree"/>
    <property name="tree">
      <bean parent="RuleTreeWidget">
        <property name="componentOptions">
          <map>
            <entry key="'plugins'"
              value="['themes','html_data', 'ui', 'crrm', 'dnd']" />
            <entry key="'themes'"
              value="{'theme':'default','dots':'false','icons':'false'}" />
            <entry key="'ui'" value="{ 'select_limit' : 1 }" />
            <entry key="'dnd'" value="{ 'drag_target' : false, 'drop_target' : false }" />
          </map>
        </property>
      </bean>
    </property>
    <property name="nodePrototypeMap">
      <map key-type="java.lang.Class">
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.RuleTreeNode"/>
            </bean>
          </key>
          <ref bean="RuleTreeNodePrototype"/>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.SimplePropositionNode"/>
            </bean>
          </key>
          <ref bean="SimplePropositionNodePrototype"/>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.SimplePropositionEditNode"/>
            </bean>
          </key>
          <ref bean="SimplePropositionEditNodePrototype"/>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.CompoundOpCodeNode"/>
            </bean>
          </key> 
          <ref bean="CompoundOpCodeNodePrototype"/>
        </entry>
        <entry>
          <key>
            <bean class="java.lang.Class" factory-method="forName">
              <constructor-arg value="org.kuali.rice.krms.impl.ui.CompoundPropositionEditNode"/>
            </bean>
          </key>
          <ref bean="CompoundPropositionEditNodePrototype"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="RuleTreeNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="MessageField"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="GroupBodyOnly" p:style="float: right;">
        <property name="layoutManager.orientation" value="HORIZONTAL"/>
        <property name="items">
          <list>
            <bean parent="ActionImageField"
                  p:clientSideJs="ajaxCallPropositionTree('goToEditProposition', 'RuleEditorView-Tree');">
              <property name="actionImage">
                <bean parent="ImageField" p:source="../krms/images/edit.png"
                      p:altText="Edit" p:styleClasses="actionReveal"/>
              </property>
            </bean>
            <bean parent="InputField" p:propertyName="proposition.id"
                  p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="HiddenControl" p:styleClasses="hiddenId"/>
              </property>
            </bean>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="SimplePropositionNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="MessageField"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="GroupBodyOnly">
        <property name="layoutManager.orientation" value="HORIZONTAL"/>
        <property name="items">
          <list>
            <bean parent="InputField" p:propertyName="proposition.id"
                    p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="HiddenControl" p:styleClasses="hiddenId"/>
              </property>
            </bean>
            <bean parent="InputField" p:propertyName="proposition.parameterDisplayString"
                   p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="TextControl" p:style="margin-left: 24pt; border: 0; width: 100%;"/>
              </property>
            </bean>

            <bean parent="selectedNodeQuickActions"/>

          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="SimplePropositionEditNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="MessageField"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="GroupBodyOnly" p:styleClasses="editModeNode">
        <property name="layoutManager.orientation" value="VERTICAL"/>
        <property name="items">
          <list>
            <bean parent="InputField" p:propertyName="proposition.id"
                    p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="HiddenControl" p:styleClasses="hiddenId"/>
              </property>
            </bean>
            <bean parent="InputField" p:propertyName="proposition.description"
                  p:style="margin-left: 1pt;" p:showLabel="false" p:label="id" p:maxLength="255">
              <property name="control">
                <bean parent="TextControl" p:size="140" p:watermarkText="Enter a Proposition Description" p:style="margin-left: 12pt;"
                        p:styleClasses="editDescription"/>
              </property>
            </bean>
            <bean parent="GroupBodyOnly">
              <property name="layoutManager.orientation" value="HORIZONTAL"/>
              <property name="items">
                <list>
                  <bean parent="InputField" p:propertyName="proposition.categoryId"
                          p:style="margin-left: 12pt" p:showLabel="true" p:label="Category" p:labelPlacement="TOP" p:maxLength="40">
                    <property name="control">
                      <bean parent="SelectControl" p:styleClasses="categorySelect"/>
                    </property>
                    <property name="optionsFinder">
                      <bean class="org.kuali.rice.krms.impl.ui.CategoryValuesFinder"/>
                    </property>
                  </bean>
                  <bean parent="InputField" p:propertyName="proposition.parameters[0].value"
                          p:showLabel="true" p:label="Term" p:maxLength="255">
                    <property name="control">
                      <bean parent="SelectControl"/>
                    </property>
                    <property name="optionsFinder">
                      <bean class="org.kuali.rice.krms.impl.ui.ValidTermsValuesFinder"/>
                    </property>
                  </bean>
                  <bean parent="InputField" p:propertyName="proposition.parameters[2].value"
                          p:showLabel="false" p:style="padding-bottom: 0em;padding-top: 0em;padding-left: 0em;padding-right: 0em;" p:label="Operator" p:maxLength="20">
                    <property name="control">
                      <bean parent="SelectControl"/>
                    </property>
                    <property name="optionsFinder">
                      <bean class="org.kuali.rice.krms.impl.ui.PropositionOpCodeValuesFinder"/>
                    </property>
                  </bean>
                  <bean parent="InputField" p:propertyName="proposition.parameters[1].value"
                           p:showLabel="true" p:label="Value" p:maxLength="255">
                    <property name="control">
                      <bean parent="TextControl" p:style="margin-top: 2px;" p:watermarkText="Enter a Literal Value" />
                    </property>
                  </bean>

                  <bean parent="selectedNodeQuickActions"/>

                </list>
              </property>
            </bean>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="selectedNodeQuickActions" parent="FieldGroup" p:styleClasses="actionReveal"
