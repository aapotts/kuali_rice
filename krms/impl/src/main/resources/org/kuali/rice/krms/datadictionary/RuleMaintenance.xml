        </bean>
        <bean parent="ActionLinkField" p:clientSideJs="jq('.jstree').jstree('close_all');" 
          p:actionLabel="[-] collapse all" p:style="font-size: smaller; margin-right: 15pt;">
          <property name="actionImage"><null/></property>
        </bean>
        <bean id="proposition_selected" parent="InputField" p:propertyName="selectedPropositionId" p:showLabel="false">
          <property name="control">
            <bean parent="HiddenControl"/>
          </property>
        </bean>
        <bean id="proposition_cut" parent="InputField" p:propertyName="cutPropositionId" p:showLabel="false">
          <property name="control">
            <bean parent="HiddenControl"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

