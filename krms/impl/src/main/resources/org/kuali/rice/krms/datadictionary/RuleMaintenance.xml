  <bean id="ruleInfoGrid" parent="GroupGridLayout">
    <property name="title" value="Rule Information" />
    <property name="renderHeader" value="false" />
    <property name="disclosure.render" value="false" />
    <property name="items">
      <list>

        <bean parent="FieldGroup" p:label="Copy from Existing Rule"
              p:progressiveRenderViaAJAX="true"
              p:progressiveRender="document.newMaintainableObject.dataObject.addRuleInProgress == true">
          <property name="group.layoutManager">
            <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL"/>
          </property>
          <property name="items">
            <list>
              <bean parent="InputField" p:propertyName="copyRuleName" p:style="font-size: smaller;" p:showLabel="false">
                <property name="label" value="Copy from Existing Rule" />
                <property name="fieldLookup.dataObjectClassName" value="org.kuali.rice.krms.impl.repository.RuleBo"/>
                <property name="fieldLookup.fieldConversions">
                  <map>
                    <entry key="id" value="agendaItemLine.rule.id"/>
                    <entry key="name" value="copyRuleName"/>
                    <entry key="namespace" value="agendaItemLine.rule.namespace"/>
                  </map>
                </property>
                <property name="fieldLookup.lookupParameters">
                  <map>
                    <entry key="agendaItemLine.rule.id" value="id"/>
                    <entry key="copyRuleName" value="name"/>
                    <entry key="agendaItemLine.rule.namespace" value="namespace"/>
                  </map>
                </property>
                <property name="control">
                  <bean parent="TextControl" p:size="40"
                    p:watermarkText="Existing Rule Name" />
                  </property>
              </bean>
              <bean parent="ActionField" p:methodToCall="copyRule" p:actionLabel="Copy Rule"
                p:styleClasses-ref="buttonClasses" p:style="margin-right: 15pt; float: right;"/>
            </list>
          </property>
        </bean>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.namespace" p:readOnly="true" />
        <ref bean="ruleCustomAttributes"/>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.name" p:required="true"/>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.description" p:labelField.colSpan="1" p:colSpan="5">
          <property name="control">
            <bean parent="TextAreaControl" p:rows="2" p:cols="60" p:textExpand="true"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean name="ruleCustomAttributes" parent="GroupGridLayout" p:colSpan="2" p:layoutManager.numberOfColumns="2"
         p:refreshWhenChanged="document.newMaintainableObject.dataObject.agendaItemLine.rule.typeId"
         p:style="padding: 0px; border-style: hidden;">
    <property name="items">
      <list>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.typeId" p:label="Type" p:required="false">
          <property name="control">
            <bean parent="SelectControl"/>
          </property>
          <property name="optionsFinder">
            <bean class="org.kuali.rice.krms.impl.repository.RuleTypeValuesFinder"/>
          </property>
        </bean>
        <bean parent="RemoteFieldsHolder" p:propertyName="customRuleAttributesMap"
              p:fetchingMethodToCall="retrieveRuleCustomAttributes"/>
      </list>
    </property>
  </bean>

  <bean name="propositionSection" parent="propositionSection-parent" />
  <bean name="propositionSection-parent" parent="GroupBodyOnly">
    <property name="title" value="Proposition Tree" />
    <property name="disclosure.render" value="true" />
    <property name="items">
      <list>

        <bean id="RuleEditorView-PropositionSummary" parent="GroupGridLayout" p:renderHeader="false" p:style="margin-bottom: 0em;">
          <property name="disclosure.render" value="false" />
          <property name="layoutManager.numberOfColumns" value="8" />
          <property name="items">
            <list>

              <bean parent="InputField" p:propertyName="agendaItemLine.rule.propositionSummary"
                p:colSpan="8">
                <property name="label" value="Proposition Summary" />
                <property name="control">
<!--                  <bean parent="TextControl" p:size="90" p:readOnly="true" p:style="border: 0px"/> -->
                  <bean parent="TextAreaControl" p:rows="3" p:cols="120" p:readOnly="true" />

                </property>
              </bean>

              <bean parent="ActionImageField"
                  p:clientSideJs="ajaxCallPropositionTree('ajaxRefresh', 'RuleEditorView-PropositionSummary');">
              <property name="actionImage">
                <bean parent="ImageField" p:source="../krms/images/refresh.png"
                      p:altText="Refresh Proposition Summary"/>
              </property>
            </bean>

            </list>
          </property>
        </bean>

        <bean parent="GroupBodyOnly" p:style="border: 1px solid #999999; padding: 5px; margin: 5px; background: white; margin-top: " >
          <property name="items">
            <list>
              <bean parent="GroupGridBodyOnly" p:style="margin-bottom: 5pt; margin-top: 0em;">
                <property name="items">
                  <list>
                    <ref bean="RuleEditorView-RuleTreeControls" />
                  </list>
                </property>
              </bean>
              <ref bean="RuleEditorView-TreeExpandCollapse" />
              <ref bean="RuleEditorView-Tree" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
        
  <bean id="RuleEditorView-TreeExpandCollapse" parent="FieldGroup"  p:showLabel="false"
    p:style="font-size: smaller;">
    <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
    <property name="items">
      <list>                            
        <bean parent="ActionLinkField" p:clientSideJs="jq('.jstree').jstree('open_all');" 
