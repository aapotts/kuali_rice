              </property>
            </bean>

            <bean parent="ActionImageField"
                  p:clientSideJs="ajaxCallPropositionTree('goToEditProposition', 'RuleEditorView-Tree');">
              <property name="actionImage">
                <bean parent="ImageField" p:source="../krms/images/edit.png"
                      p:altText="Edit" p:styleClasses="actionReveal"/>
              </property>
            </bean>

          </list>
        </property>
      </bean>
