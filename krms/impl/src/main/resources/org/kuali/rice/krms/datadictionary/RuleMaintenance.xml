  xsi:schemaLocation="http://www.springframework.org/schema/beans 
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="RuleMaintenanceDocument" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.krms.impl.repository.RuleBo"/>
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="documentTypeName" value="RuleMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>id</value>
      </list>
    </property>
  </bean>
  
  <bean id="RuleTreeWidget" parent="Tree">
    <property name="template" value="/krad/WEB-INF/jsp/templates/widget/ruleTree.jsp"/>
  </bean>
  

  <bean id="RuleBo-MaintenanceView" parent="MaintenanceView">
    <property name="title" value="Rule Editor" />
    <property name="dataObjectClassName" value="org.kuali.rice.krms.impl.repository.RuleBo" />
    <property name="items">
      <list merge="false">
        <bean parent="ruleEditorBody" />
      </list>
    </property>
  </bean>

  <bean id="ruleEditorBody" parent="ruleEditorBody-parent">
    <property name="componentModifiers">
      <list>
      </list>
    </property>
    <property name="layoutManager">
      <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL" />
    </property>
  </bean>

  <bean id="ruleEditorBody-parent" parent="GroupGridLayout" p:renderHeader="false">
    <property name="title" value="Rule Editor" />
    <property name="layoutManager">
      <bean parent="GridLayoutManager" p:numberOfColumns="3" />
    </property>
    <property name="items">
      <list>
        <bean parent="ruleInfoSection" />
        <bean parent="ruleActionsSection" />
      </list>
    </property>
  </bean>

  <bean id="ruleInfoSection" parent="ruleInfoSection-parent"/>
  <bean id="ruleInfoSection-parent" parent="GroupSection">
    <property name="title" value="Rule" />
    <property name="renderHeader" value="true" />
    <property name="disclosure.render" value="true" />
    <property name="disclosure.defaultOpen" value="true" />
    <!-- property name="layoutManager">
      <bean parent="BoxLayoutManager" p:orientation="VERTICAL"
        p:styleClasses="datatable display" />
    </property -->
    <property name="items">
      <list>
        <bean parent="ruleInfoGrid"/>
        <!--
        <bean parent="ruleAttributesSection"/>
        -->
        <bean parent="propositionSection" />
      </list>
    </property>
  </bean>

  <bean id="ruleInfoGrid" parent="GroupGridLayout">
    <property name="title" value="Rule Information" />
    <property name="renderHeader" value="false" />
    <property name="disclosure.render" value="false" />
    <property name="items">
      <list>

        <bean parent="FieldGroup" p:label="Copy from Existing Rule"
              p:progressiveRenderViaAJAX="true"
              p:progressiveRender="@{#dp.addRuleInProgress == true}">
          <property name="group.layoutManager">
            <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL"/>
          </property>
          <property name="items">
            <list>
              <bean parent="InputField" p:propertyName="copyRuleName" p:style="font-size: smaller;" p:showLabel="false">
                <property name="label" value="Copy from Existing Rule" />
                <property name="fieldLookup.dataObjectClassName" value="org.kuali.rice.krms.impl.repository.RuleBo"/>
                <property name="fieldLookup.fieldConversions">
                  <map>
                    <entry key="id" value="agendaItemLine.rule.id"/>
                    <entry key="name" value="copyRuleName"/>
                    <entry key="namespace" value="agendaItemLine.rule.namespace"/>
                  </map>
                </property>
                <property name="fieldLookup.lookupParameters">
                  <map>
                    <entry key="agendaItemLine.rule.id" value="id"/>
                    <entry key="copyRuleName" value="name"/>
                    <entry key="agendaItemLine.rule.namespace" value="namespace"/>
                  </map>
                </property>
                <property name="control">
                  <bean parent="TextControl" p:size="40" p:maxLength="100"
                    p:watermarkText="Existing Rule Name"/>
                  </property>
              </bean>
              <bean parent="ActionField" p:methodToCall="copyRule" p:actionLabel="Copy Rule"
                p:styleClasses-ref="buttonClasses" p:style="margin-right: 15pt; float: right;"/>
            </list>
          </property>
        </bean>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.namespace" p:label="Namespace" p:readOnly="true" />
        <bean parent="ruleCustomAttributes"/>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.name" p:label="Name" p:required="true" p:constraintText="size 100">
          <property name="control">
            <bean parent="TextControl" p:size="40" p:maxLength="100" p:watermarkText="Enter a Rule Name" p:styleClasses="countdown"/>
          </property>
        </bean>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.description" p:label="Description" p:labelField.colSpan="1" p:constraintText="size 4000" p:colSpan="5">
          <property name="control">
            <bean parent="TextAreaControl" p:rows="2" p:cols="60" p:textExpand="true" p:maxLength="4000" p:watermarkText="Enter a Rule Description" p:styleClasses="countdown"/>
          </property>
        </bean>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.active" p:label="Active">
          <property name="control">
            <bean parent="CheckboxControl"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean name="ruleCustomAttributes" parent="GroupGridLayout" p:colSpan="2" p:layoutManager.numberOfColumns="2"
         p:refreshWhenChanged="document.newMaintainableObject.dataObject.agendaItemLine.rule.typeId"
         p:style="padding: 0px; border-style: hidden;">
    <property name="items">
      <list>
        <bean parent="InputField" p:propertyName="agendaItemLine.rule.typeId" p:label="Type" p:required="false">
          <property name="control">
            <bean parent="SelectControl"/>
          </property>
          <property name="optionsFinder">
            <bean class="org.kuali.rice.krms.impl.repository.RuleTypeValuesFinder"/>
          </property>
        </bean>
        <bean parent="RemoteFieldsHolder" p:propertyName="customRuleAttributesMap"
              p:fetchingMethodToCall="retrieveRuleCustomAttributes"/>
      </list>
    </property>
  </bean>

  <bean name="propositionSection" parent="propositionSection-parent" />
  <bean name="propositionSection-parent" parent="GroupBodyOnly">
    <property name="title" value="Proposition Tree" />
    <property name="disclosure.render" value="true" />
    <property name="items">
      <list>

        <bean parent="GroupBodyOnly" p:style="border: 1px solid #999999; padding: 5px; margin: 5px; background: white; margin-top: " >
          <property name="items">
            <list>
              <bean parent="GroupGridBodyOnly" p:style="margin-bottom: 5pt; margin-top: 0em;" p:progressiveRender="@{#form.viewTypeName.toString() != 'MAINTENANCE'}">
                <property name="items">
                  <list>
                    <bean parent="RuleEditorView-RuleTreeViewControls" />
                  </list>
                </property>
              </bean>
              <bean parent="GroupGridBodyOnly" p:style="margin-bottom: 5pt; margin-top: 0em;" p:progressiveRender="@{#form.viewTypeName.toString() == 'MAINTENANCE'}">
                <property name="items">
                  <list>
                    <bean parent="RuleEditorView-RuleTreeEditControls" />
                  </list>
                </property>
              </bean>
              <bean id="RuleEditorView-TreeGroup" parent="GroupBodyOnly" p:style="margin-bottom: 5pt; margin-top: 0em;">
                <property name="layoutManager.orientation" value="VERTICAL"/>
                <property name="items">
                  <list>
                    <bean parent="RuleEditorView-PropositionSummary"/>
                    <bean parent="RuleEditorView-TreeExpandCollapse" />
                    <bean parent="RuleEditorView-Tree" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

