<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.core.bo.FinancialSystemParameter</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase</businessRulesClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_ROLE_MAINTENANCE</workgroup>
                </workgroups>
            </authorization>
        </authorizations>
        <documentTypeName>KualiFinancialSystemParameterMaintenanceDocument</documentTypeName>
        <documentTypeCode>PARM</documentTypeCode>
        <label>Financial System Parameter Maintenance Document</label>
        <shortLabel>Fin. Sys. Param. Maint. Doc.</shortLabel>
        <summary>Financial System Parameter Maintenance Document</summary>
        <description>This document can be used to create or update Financial System Parameters which are used to externalize key-value constants.</description>
        <help securityGroupName="Kuali.NervousSystem.Help" parameterName="NERVOUS_SYSTEM_HELP_FINANCIAL_SYSTEM_PARAMETER" />

        <lockingKeys>
            <field attributeName="financialSystemScriptName" />
            <field attributeName="financialSystemParameterName" />
        </lockingKeys>
        
        <defaultExistenceChecks>
        	<reference attributeName="financialSystemParameterSecurity" attributeToHighlightOnFail="financialSystemScriptName" />
        </defaultExistenceChecks>
        
        <maintainableSections>
            <maintainableSection title="Edit Financial System Parameter">
                <maintainableItems>
                    <maintainableField name="financialSystemScriptName" required="true" />
                    <maintainableField name="financialSystemParameterName" required="true" />
                    <maintainableField name="financialSystemParameterText" />
                    <maintainableField name="financialSystemParameterDescription" required="true" />
                    <maintainableField name="financialSystemMultipleValueIndicator" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>