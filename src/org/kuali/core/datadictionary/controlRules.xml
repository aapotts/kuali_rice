<pattern value="control">
    <pattern value="checkbox">
        <object-create-rule classname="org.kuali.core.datadictionary.control.CheckboxControlDefinition" />

        <set-next-rule methodname="setControl" />
    </pattern>

    <pattern value="hidden">
        <object-create-rule classname="org.kuali.core.datadictionary.control.HiddenControlDefinition" />

        <set-next-rule methodname="setControl" />
    </pattern>

    <pattern value="radio">
        <object-create-rule classname="org.kuali.core.datadictionary.control.RadioControlDefinition" />
        <set-properties-rule />

        <set-next-rule methodname="setControl" />
    </pattern>

    <pattern value="select">
        <object-create-rule classname="org.kuali.core.datadictionary.control.SelectControlDefinition" />
        <set-properties-rule />

        <set-next-rule methodname="setControl" />
    </pattern>

    <pattern value="apcSelect">
        <object-create-rule classname="org.kuali.core.datadictionary.control.ApcSelectControlDefinition" />
        <set-properties-rule />

        <set-next-rule methodname="setControl" />
    </pattern>

    <pattern value="text">
        <object-create-rule classname="org.kuali.core.datadictionary.control.TextControlDefinition" />
        <set-properties-rule />

        <set-next-rule methodname="setControl" />
    </pattern>

    <pattern value="textarea">
        <object-create-rule classname="org.kuali.core.datadictionary.control.TextareaControlDefinition" />
        <set-properties-rule />

        <set-next-rule methodname="setControl" />
    </pattern>

    <pattern value="currency">
        <object-create-rule classname="org.kuali.core.datadictionary.control.CurrencyControlDefinition" />
        <set-properties-rule />

        <set-next-rule methodname="setControl" />
    </pattern>

    <pattern value="kualiUser">
        <object-create-rule classname="org.kuali.core.datadictionary.control.KualiUserControlDefinition" />
        <set-properties-rule />

        <set-next-rule methodname="setControl" />
    </pattern>
    
    <pattern value="lookupHidden">
        <object-create-rule classname="org.kuali.core.datadictionary.control.LookupHiddenControlDefinition" />

        <set-next-rule methodname="setControl" />
    </pattern>
    
    <pattern value="lookupReadonly">
        <object-create-rule classname="org.kuali.core.datadictionary.control.LookupReadonlyControlDefinition" />

        <set-next-rule methodname="setControl" />
    </pattern>
    
    <pattern value="workflowWorkgroup">
        <object-create-rule classname="org.kuali.core.datadictionary.control.WorkflowWorkgroupControlDefinition" />

        <set-next-rule methodname="setControl" />
    </pattern>

</pattern>
