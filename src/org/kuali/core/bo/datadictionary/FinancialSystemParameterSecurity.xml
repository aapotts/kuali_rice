<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.FinancialSystemParameterSecurity">

        <inquiry>
            <title>Financial System Parameter Security Inquiry</title>
            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="financialSystemScriptName" />
                <field attributeName="workgroupName" />
                <field attributeName="financialSystemScriptDescription" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>
        <lookup>
            <title>Financial System Parameter Security Lookup</title>
            <instructions>Look up a system parameter security group.</instructions>
            <defaultSort attributeName="financialSystemScriptName" sortAscending="true" />
            <lookupFields>
                <lookupField attributeName="financialSystemScriptName" required="false" noLookup="true" />
                <lookupField attributeName="workgroupName" required="false" noLookup="true" />
                <lookupField attributeName="financialSystemScriptDescription" required="false" noLookup="true" />
            </lookupFields>
            <resultFields>
                <field attributeName="financialSystemScriptName" />
                <field attributeName="workgroupName" />
                <field attributeName="financialSystemScriptDescription" />
            </resultFields>
        </lookup>
        
       <titleAttribute>financialSystemScriptName</titleAttribute>
       
       <attributes>
            <attribute name="financialSystemScriptName" forceUppercase="false">
                <label>Security Group Name</label>
                <shortLabel>Sec Group Name</shortLabel>
                <maxLength>255</maxLength>
                <validationPattern>
                    <anyCharacter />
                </validationPattern>
                <required>true</required>
                <control>
                    <text size="75" />
                </control>
                <summary>The name of the parameter.</summary>
                <description>This will be used as the identifier for the parameter. Parameter values will be accessed using this field as the key.</description>
            </attribute>
            <attribute name="workgroupName" forceUppercase="false">
                <label>Workgroup Name</label>
                <shortLabel>Wrkgrp Name</shortLabel>
                <maxLength>70</maxLength>
                <validationPattern>
                    <alphaNumeric allowUnderscore="true" />
                </validationPattern>
                <required>true</required>
                <control>
                    <workflowWorkgroup size="72" />
                </control>
                <summary>The name of the workgroup.</summary>
                <description>This is the name of the workgroup that has permission to work with parameters associated with this group.</description>
            </attribute>
            <attribute name="financialSystemScriptDescription" forceUppercase="false">
                <label>Description</label>
                <shortLabel>Description</shortLabel>
                <maxLength>2000</maxLength>
                <validationPattern>
                    <anyCharacter allowWhitespace="true" maxLength="2000" />
                </validationPattern>
                <required>true</required>
                <control>
                    <textarea rows="3" cols="40" />
                </control>
                <summary>A description of the security group.</summary>
                <description>This field houses the purpose of this security group.</description>
            </attribute>
            <attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
        </attributes>
        <collections>
            <collection name="financialSystemParameters">
                <label>Parameters</label>
                <shortLabel>Parameters</shortLabel>
                <summary>The parameters associated with this security grouping.</summary>
                <description>The parameters associated with this security grouping. Only these parameters will be allowed to be edited, viewed, and routed for approval, give the workgroup assoicated with.</description>
            </collection>
        </collections>
    </businessObject>
</dictionaryEntry>
