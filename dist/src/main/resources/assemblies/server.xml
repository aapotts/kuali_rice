<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>server</id>
  <!-- This assembly creates a server distribution -->
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <!-- 1. War -->
    <file>
      <destName>kr-dev.war</destName>
      <source>${project.basedir}/../web/target/rice-web-${project.version}.war</source>
    </file>
  </files>
  <fileSets>

    <!-- 2. Other -->
    <fileSet>
      <directory>${project.basedir}/..</directory>
      <includes>
        <include>security/**</include>
        <include>config/**</include>
        <include>scripts/**</include>
      </includes>
      <excludes>
        <exclude>config/checkstyle/**</exclude>
        <exclude>config/ide/**</exclude>
        <exclude>config/deploy/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/..</directory>
      <includes>
        <include>*.txt</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>

    <!-- 3. Config -->
    <fileSet>
      <directory>${project.basedir}/..</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>**/src/main/config/**</include>
      </includes>
      <excludes>
        <exclude>**/target/**</exclude>
      </excludes>
    </fileSet>

  </fileSets>

  <dependencySets>
    <!-- 4. Unpack rice-license-bundle-1.0-legacy.jar into /licenses -->
    <dependencySet>
      <outputDirectory>licenses</outputDirectory>
      <includes>
        <include>org.kuali.rice:rice-license-bundle</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- 5. Legacy Ant Impex Tool. -->
    <dependencySet>
      <outputDirectory>database/impex-ant-tool</outputDirectory>
      <includes>
        <include>org.kuali.db.impex:impex-legacy-bundle</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- 6. Impex Data. Server only -->
    <dependencySet>
      <outputDirectory>database</outputDirectory>
      <includes>
        <include>org.kuali.rice:rice-impex-server-*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
