<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>source</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <!--
  wish there was a better way to just rename files :-)

  I'm basically, unpacking org.kuali.rice:rice:zip:project
  and repacking it to org.kuali.rice:rice-dist:zip:source

  This avoids using relative paths and filesets
  in this assembly descriptor which is hacky from
  a maven perspective.
  -->
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
          <include>org.kuali.rice:rice:zip:project</include>
      </includes>
      <unpack>true</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
