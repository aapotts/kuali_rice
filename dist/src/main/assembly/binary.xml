<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>binary</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
          <include>org.kuali.rice:rice:zip:project</include>
      </includes>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <unpackOptions>
          <includes>
                <include>config/**</include>
                <include>database/**</include>
                <include>licenses/**</include>
                <include>scripts/**</include>
                <include>security/**</include>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
          </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <includes>
          <include>org.kuali.rice:rice-standalone:war</include>
      </includes>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <unpackOptions>
          <includes>
              <include>
                  <!--
                  hmm how to I remove WEB-INF/lib/ before moving it to the <root>/lib dir?
                  -->
                  WEB-INF/lib/*.jar
              </include>
          </includes>
      </unpackOptions>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
          <include>org.kuali.rice:rice-standalone:war</include>
      </includes>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <unpackOptions>
        <excludes>
            <exclude>WEB-INF/lib/**</exclude>
            <exclude>WEB-INF/classes/**</exclude>
        </excludes>
      </unpackOptions>
      <outputDirectory>webcontent</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
