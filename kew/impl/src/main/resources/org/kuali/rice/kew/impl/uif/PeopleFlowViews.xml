  <!--
  ********************************************************************************************************************
                                           PeopleFlow Lookup
  ********************************************************************************************************************
  -->
  <bean id="PeopleFlow-LookupView" parent="LookupView" p:maintenanceUrlMapping="peopleFlowMaintenance">
    <property name="title" value="People Flow Lookup"/>
    <property name="dataObjectClassName" value="org.kuali.rice.kew.impl.peopleflow.PeopleFlowBo"/>
    <property name="criteriaFields">
      <list>
        <bean parent="LookupCriteriaAttributeField" p:propertyName="namespaceCode"/>
        <bean parent="LookupCriteriaAttributeField" p:propertyName="name"/>
        <bean parent="LookupCriteriaAttributeField" p:propertyName="active"/>
      </list>
    </property>
    <property name="resultFields">
      <list>
        <bean parent="AttributeField" p:propertyName="namespaceCode"/>
        <bean parent="AttributeField" p:propertyName="name"/>
        <bean parent="AttributeField" p:propertyName="active"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           PeopleFlow Inquiry
  ********************************************************************************************************************
  -->
  <bean id="PeopleFlow-InquiryView" parent="InquiryView">
    <property name="title" value="People Flow Inquiry"/>
    <property name="dataObjectClassName" value="org.kuali.rice.kew.impl.peopleflow.PeopleFlowBo"/>
    <property name="Items">
      <list>
        <bean parent="PeopleFlow-Summary" p:layoutManager.numberOfColumns="1"/>
        <bean parent="PeopleFlow-Detail"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           PeopleFlow Maintenance
  ********************************************************************************************************************
  -->

  <bean id="PeopleFlow-MaintenanceView" parent="MaintenanceView">
    <property name="title" value="People Flow Maintenance"/>
    <property name="dataObjectClassName" value="org.kuali.rice.kew.impl.peopleflow.PeopleFlowBo"/>
    <property name="items">
      <list merge="true">
        <bean parent="PeopleFlow-Summary"/>
        <bean parent="PeopleFlow-TypeAttributes"/>
        <bean parent="PeopleFlow-Detail"/>
      </list>
    </property>
    <property name="viewHelperServiceClassName"
              value="org.kuali.rice.kew.impl.peopleflow.PeopleFlowMaintainableImpl"/>
  </bean>

  <!--
  ********************************************************************************************************************
                                           PeopleFlow Summary Group
  ********************************************************************************************************************
  -->
  <bean id="PeopleFlow-Summary" parent="GroupSectionGridLayout">
    <property name="layoutManager.numberOfColumns" value="4"/>
    <property name="items">
      <list>
        <bean parent="AttributeField" p:propertyName="namespaceCode" p:required="true"/>
        <bean parent="AttributeField" p:propertyName="description" p:required="true" p:rowSpan="2"
              p:labelField.rowSpan="2"/>
        <bean parent="AttributeField" p:propertyName="name" p:required="true"/>
        <bean parent="AttributeField" p:propertyName="typeId" p:required="true"/>
        <bean parent="AttributeField" p:propertyName="active" p:defaultValue="true"/>
      </list>
    </property>
    <property name="title" value="PeopleFlow Summary"/>
  </bean>

  <bean id="PeopleFlow-TypeAttributes" parent="GroupSectionGridLayout" p:progressiveRenderViaAJAX="true"
        p:progressiveRender="document.newMaintainableObject.dataObject.typeId != ''"
        p:refreshWhenChanged="document.newMaintainableObject.dataObject.typeId"
        p:refreshDiscloseMethodToCall="prepareTypeAttributes">
    <property name="items">
      <list>
        <bean parent="RemoteFieldsHolder" p:propertyName="attributeValues"
              p:fetchingMethodToCall="retrieveTypeAttributes"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           PeopleFlow Detail Group
  ********************************************************************************************************************
  -->
  <bean id="PeopleFlow-Detail" abstract="true" parent="CollectionGroupSectionTableLayout"
        p:layoutManager.numberOfColumns="4">
    <property name="title" value="PeopleFlow Members"/>
    <property name="collectionObjectClass" value="org.kuali.rice.kew.impl.peopleflow.PeopleFlowMemberBo"/>
    <property name="propertyName" value="members"/>
    <property name="layoutManager.renderSequenceField" value="false"/>
    <property name="layoutManager.separateAddLine" value="true"/>
    <property name="layoutManager.tableTools.render" value="false"/>
    <property name="items">
      <list>
        <bean parent="AttributeField" p:propertyName="priority" p:required="true"/>
        <bean parent="AttributeField" p:propertyName="memberTypeCode" p:defaultValue="P" p:required="true"/>
        <bean parent="PeopleFlow-Member" p:required="true"/>
        <bean parent="AttributeField" p:propertyName="actionRequestPolicyCode"
              p:progressiveRender="#line.memberTypeCode eq 'R'" p:defaultValue="F" p:required="true"/>
      </list>
    </property>
    <property name="subCollections">
      <list>
        <bean parent="PeopleFlow-Delegates"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           PeopleFlow Delegates Group
  ********************************************************************************************************************
  -->
  <bean id="PeopleFlow-Delegates" abstract="true" parent="CollectionGroupTableLayout"
        p:layoutManager.numberOfColumns="4">
    <property name="title" value="Member Delegates"/>
    <property name="collectionObjectClass" value="org.kuali.rice.kew.impl.peopleflow.PeopleFlowDelegateBo"/>
    <property name="propertyName" value="delegates"/>
    <property name="layoutManager.renderSequenceField" value="false"/>
    <property name="layoutManager.tableTools.render" value="false"/>
    <property name="items">
      <list>
        <bean parent="AttributeField" p:propertyName="memberTypeCode" p:defaultValue="P" p:required="true"/>
        <bean id="PeopleFlow-MemberDelegate" parent="PeopleFlow-Member" p:required="true"/>
        <bean parent="AttributeField" p:propertyName="delegationTypeCode" p:required="true"/>
        <bean parent="AttributeField" p:propertyName="actionRequestPolicyCode"
              p:progressiveRender="#line.memberTypeCode eq 'R'" p:defaultValue="F" p:required="true"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           PeopleFlow Member Field
  ********************************************************************************************************************
  -->
  <bean id="PeopleFlow-Member" parent="AttributeField" p:propertyName="memberName" p:label="Member"
        p:refreshWhenChanged="#line.memberTypeCode" p:readOnly="@{#line.memberTypeCode ne 'P'}"
        p:fieldLookup.render="true">
    <property name="control">
      <bean parent="UserControl" p:principalIdPropertyName="memberId" p:personNamePropertyName="person.name"/>
    </property>
    <property name="propertyReplacers">
      <list>
        <bean parent="PropertyReplacer" p:propertyName="control" p:condition="#line.memberTypeCode ne 'P'">
          <property name="replacement">
            <bean parent="TextControl" p:size="40"/>
          </property>
        </bean>
        <bean parent="PropertyReplacer" p:propertyName="fieldLookup" p:condition="#line.memberTypeCode eq 'R'">
          <property name="replacement">
            <bean parent="QuickFinder" p:dataObjectClassName="org.kuali.rice.kim.framework.role.RoleEbo"
                  p:fieldConversions="id:memberId" p:render="true"/>
          </property>
        </bean>
        <bean parent="PropertyReplacer" p:propertyName="fieldLookup" p:condition="#line.memberTypeCode eq 'G'">
          <property name="replacement">
            <bean parent="QuickFinder" p:dataObjectClassName="org.kuali.rice.kim.framework.group.GroupEbo"
                  p:fieldConversions="id:memberId" p:render="true"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>