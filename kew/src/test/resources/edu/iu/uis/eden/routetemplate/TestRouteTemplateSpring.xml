<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  
  <bean id="rootAppContext" class="org.springframework.context.support.ClassPathXmlApplicationContext">
    <constructor-arg>
      <list>
        <value>TestSpringDataSource.xml</value>
        <value>SpringBeans.xml</value>
        <value>IUSpringBeans.xml</value>
      </list>
    </constructor-arg>
  </bean>
  
  <bean id="appContext" class="org.springframework.context.support.ClassPathXmlApplicationContext">
  	<constructor-arg>
      <list>
        <value>edu/iu/uis/eden/routetemplate/TestRouteTemplateBeanDefs.xml</value>
      </list>
    </constructor-arg>
    <constructor-arg>
    	<ref bean="rootAppContext" />
    </constructor-arg>
  </bean>
  
</beans>