<?xml version="1.0" encoding="UTF-8"?>
<descriptor-repository version="1.0">

  <!--
    default Workflow datasource
    The 'default-connection' attribute ensures that this is the "default" engine datasource, regardless
      of name. An edu.iu.uis.eden.database.SpringConnectionFactoryManagedImpl defined in SpringDataSource.xml
      and configured in OJB.properties as the ConnectionFactory will a Spring bean of the same name
      as the jcd-alias (in this case "enWorkflowDataSource" bean)
    The 'platform' attribute is explicitly OMITTED as the CoreLifecycle programmatically [re]sets the
    platform at runtime, depending on configuration settings.
  -->
  <jdbc-connection-descriptor
    jcd-alias="enWorkflowDataSource"
    jdbc-level="3.0"
    eager-release="false"
    batch-mode="false"
    useAutoCommit="0"
    ignoreAutoCommitExceptions="false">
    <sequence-manager className="edu.iu.uis.eden.database.ConfigurableSequenceManager">
      <attribute attribute-name="property.prefix" attribute-value="datasource.ojb.sequenceManager"/>
    </sequence-manager>
    <object-cache class="org.apache.ojb.broker.cache.ObjectCachePerBrokerImpl"/>
  </jdbc-connection-descriptor>

</descriptor-repository>