  <annotation>
    <documentation xml:lang="en">
      WorkgroupType schema
    </documentation>
  </annotation>

  <import namespace="ns:workflow/common" schemaLocation="resource:common"/>

  <element name="workgroupTypes">
    <complexType>
      <sequence minOccurs="0" maxOccurs="unbounded">
        <element name="workgroupType" type="wt:WorkgroupTypeType"/>
      </sequence>
    </complexType>
  </element>

  <complexType name="WorkgroupTypeType">
    <all>
      <element name="name" type="c:ShortStringType"/>
      <element name="label" type="c:LongStringType" minOccurs="0"/>
      <element name="description" type="c:LongStringType" minOccurs="0"/>
      <element name="documentType" type="c:ShortStringType" minOccurs="0"/>
      <element name="attributes" type="wt:AttributesType" minOccurs="0"/>
    </all>
  </complexType>

  <complexType name="AttributesType">
    <sequence>
      <element name="attribute" type="wt:AttributeType" minOccurs="0" maxOccurs="unbounded"/>
    </sequence>
  </complexType>

  <complexType name="AttributeType">
    <sequence>
      <element name="name" type="c:ShortStringType"/>
    </sequence>
  </complexType>

</schema>