<!--
	This is the workflow default settings config file.  It is always loaded to read default settings.
	Parameter replacement is performed in both config files and their parents (at runtime), and the
	Spring config file (through a PropertyPlaceholderConfigurer).
	Variable syntax:
	${varname}
	${institution}
-->
<config>
    <param name="plugin.registry.enabled">true</param>
    <param name="embedded.server">true</param>
	<param name="environment">dev</param>
	<param name="message.entity">KEW</param>

	<!-- default note attribute to use when none is given -->
	<param name="default.note.class">DefaultNoteAttribute</param>

	<!-- default edl config location -->
	<param name="edl.config.loc">classpath:META-INF/EDLConfig.xml</param>

	<!-- shared class loader in workflow war - don't change -->
	<param name="en.plugin.dir">${workflow.base}WEB-INF/plugins</param>

	<!-- Default configurations for workgroups and users -->
	<param name="workgroup.url">Workgroup.do</param>
	<param name="workgroup.report.url">Workgroup.do</param>
	<param name="user.url">WorkflowUser.do</param>
	<param name="user.report.url">WorkflowUserReport.do</param>
	<param name="http.port">8080</param>
	<param name="serviceServletUrl">http://${host.ip}:${http.port}/en-${environment}/remoting/</param>

	<!-- default config files -->
	<param name="config.location">/usr/local/workflow/workflow.xml</param>
	<param name="config.location">${workflow.base}../../../conf/workflow.xml</param>
	<param name="config.location">${workflow.base}../../conf/workflow.xml</param>
    <param name="config.location">${additional.config.locations}</param>

    <param name="data.xml.pollIntervalSecs">5</param>
    <param name="initialDelaySecs">10</param>

    <param name="transaction.timeout">3600</param>

    <!-- exception routing settings -->
    <param name="RouteQueue.timeIncrement">5000</param>
    <param name="RouteQueue.maxRetryAttempts">5</param>
    <!-- for dev.  send document immediately to exception routing -->
    <param name="Routing.ImmediateExceptionRouting">false</param>
</config>