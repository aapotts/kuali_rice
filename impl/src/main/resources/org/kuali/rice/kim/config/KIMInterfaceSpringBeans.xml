  <bean id="kimIdentityManagementService" class="org.kuali.rice.kim.service.impl.IdentityManagementServiceImpl"
    p:entityPrincipalCacheMaxSize="${kim.cache.entity.max.size}"
    p:entityPrincipalCacheMaxAgeSeconds="${kim.cache.entity.max.age.seconds}"
    p:groupCacheMaxSize="${kim.cache.group.max.size}"
    p:groupCacheMaxAgeSeconds="${kim.cache.group.max.age.seconds}"
    p:permissionCacheMaxSize="${kim.cache.permission.max.size}"
    p:permissionCacheMaxAgeSeconds="${kim.cache.permission.max.age.seconds}"
    p:responsibilityCacheMaxSize="${kim.cache.responsibility.max.size}"
    p:responsibilityCacheMaxAgeSeconds="${kim.cache.responsibility.max.age.seconds}" />

  <bean id="kimRoleManagementService" class="org.kuali.rice.kim.service.impl.RoleManagementServiceImpl"
    p:roleCacheMaxSize="${kim.cache.role.max.size}"
    p:roleCacheMaxAgeSeconds="${kim.cache.role.max.age.seconds}" />

  <bean id="personService" class="org.kuali.rice.kim.service.impl.PersonServiceImpl"
    p:personCacheMaxSize="${kim.cache.person.max.size}"
    p:personCacheMaxAgeSeconds="${kim.cache.person.max.age.seconds}">
    <property name="personEntityTypeCodes">
      <list>
        <value>PERSON</value>
        <value>SYSTEM</value>
      </list>
    </property>
