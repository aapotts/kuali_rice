  <bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
    <property name="interceptorNames">
      <list>
        <idref local="NoResultExceptionInterceptor" />
      </list>
    </property>
    <property name="beanNames">
      <list>
        <idref local="..."/>        
      </list>
    </property>
  </bean>
  -->
  
  <!-- END JPA CONFIGURATION -->

	<bean id="ksbContextServiceLocator" class="org.kuali.rice.ksb.service.KSBContextServiceLocator">
		<property name="services">
			<map>
				<entry key="enMessageHelper"><ref bean="enMessageHelper"/></entry>
				<entry key="enThreadPool"><ref bean="enThreadPool"/></entry>
				<entry key="enScheduledThreadPool"><ref bean="enScheduledThreadPool"/></entry>
				<entry key="cxf"><ref bean="cxf"/></entry>
				<entry key="org.apache.cxf.endpoint.ServerRegistry"><ref bean="org.apache.cxf.endpoint.ServerRegistry"/></entry>
			</map>
		</property>
	</bean>

</beans>
