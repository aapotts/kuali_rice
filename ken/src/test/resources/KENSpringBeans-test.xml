<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- KENTestSpringBeans.xml - Test KEN spring context
     includes common notification spring beans
     overrides notification email service
     does not include security beans not required for unit tests -->
<beans>
  <import resource="common-beans.xml"/>

  <!-- override business object dao -->
  <bean id="businessObjectDao" class="org.kuali.notification.dao.ojb.BusinessObjectDaoOjb">
    <property name="jcdAlias">
      <value>kenDataSource</value>
    </property>
    <property name="useSelectForUpdate">
      <value>false</value>
    </property>
  </bean>

  <!-- override the notificationEmailService with a Mock implementation -->  
  <bean id="notificationEmailService" class="org.kuali.notification.test.util.MockNotificationEmailServiceImpl" >
    <property name="weburl"><value>${notification.basewebappurl}</value></property>
    <property name="smtpHost"><value>${emailDeliverer.smtp.host}</value></property>
  </bean>
</beans>