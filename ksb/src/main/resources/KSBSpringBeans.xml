<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>


	<bean id="userTransaction" class="org.kuali.rice.jta.UserTransactionFactoryBean" lazy-init="true" />

	<bean id="jtaTransactionManager" class="org.kuali.rice.jta.TransactionManagerFactoryBean" lazy-init="true" />

	<bean id="ojbConfigurer" class="org.kuali.rice.ojb.JtaOjbConfigurer">
		<property name="transactionManager" ref="jtaTransactionManager" />
	</bean>

	<bean id="transactionManager" class="org.kuali.rice.config.spring.PlatformTransactionManagerFactoryBean" lazy-init="true">
		<property name="userTransaction">
			<ref local="userTransaction" />
		</property>
		<property name="transactionManager">
			<ref local="jtaTransactionManager" />
		</property>
	</bean>

	<bean id="ksbRegistryDataSource" class="org.kuali.rice.database.PrimaryDataSourceFactoryBean" lazy-init="true">
		<property name="transactionManager">
			<ref local="jtaTransactionManager" />
		</property>
		<property name="preferredDataSourceParams">
			<list>
				<value>ksbRegistry.datasource</value>
			</list>
		</property>
		<property name="preferredDataSourceJndiParams">
			<list>
				<value>ksbRegistry.datasource.jndi.location</value>
			</list>
		</property>
	</bean>
	
	<bean id="ksbMessageDataSource" class="org.kuali.rice.database.PrimaryDataSourceFactoryBean" lazy-init="true">
		<property name="transactionManager">
			<ref local="jtaTransactionManager" />
		</property>
		<property name="preferredDataSourceParams">
			<list>
				<value>ksbMessage.datasource</value>
			</list>
		</property>
		<property name="preferredDataSourceJndiParams">
			<list>
				<value>ksbMessage.datasource.jndi.location</value>
			</list>
		</property>
	</bean>

	<bean id="ksbMessageDataSource" class="org.kuali.rice.database.PrimaryDataSourceFactoryBean" lazy-init="true">
		<property name="transactionManager">
			<ref local="jtaTransactionManager" />
		</property>
		<property name="preferredDataSourceParams">
			<list>
				<value>ksbMessage.datasource</value>
			</list>
		</property>
		<property name="preferredDataSourceJndiParams">
			<list>
				<value>ksbMessage.datasource.jndi.location</value>
			</list>
		</property>
	</bean>

	<bean id="transactionTemplate" class="org.springframework.transaction.support.TransactionTemplate" lazy-init="true">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
	</bean>

	<!-- Proxy for rollback on all exceptions -->

	<bean id="matchAllWithPropReqCheckedException" class="org.springframework.transaction.interceptor.MatchAlwaysTransactionAttributeSource"
		lazy-init="true">
		<property name="transactionAttribute">
			<value>PROPAGATION_REQUIRED,-Exception</value>
		</property>
	</bean>

	<bean id="matchAllWithPropReq" class="org.springframework.transaction.interceptor.MatchAlwaysTransactionAttributeSource" lazy-init="true">
		<property name="transactionAttribute">
			<value>PROPAGATION_REQUIRED</value>
		</property>
	</bean>

	<bean id="matchAllTxInterceptor" class="org.springframework.transaction.interceptor.TransactionInterceptor" lazy-init="true">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="matchAllWithPropReq" />
		</property>
	</bean>

	<bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator" lazy-init="true">
		<property name="interceptorNames">
			<list>
				<idref local="matchAllTxInterceptor" />
			</list>
		</property>
		<property name="beanNames">
			<list>
				<idref local="bamService" />
				<idref local="enRouteQueueService" />
				<idref local="enRoutingTableService" />
				<idref local="exceptionMessagingService" />
			</list>
		</property>
	</bean>

	<bean id="enThreadPool" class="edu.iu.uis.eden.messaging.threadpool.KSBThreadPoolImpl" lazy-init="true" />
	<bean id="enScheduledThreadPool" class="edu.iu.uis.eden.messaging.threadpool.KSBScheduledThreadPoolExecutor" lazy-init="true" />


	<bean id="bamService" class="edu.iu.uis.eden.messaging.bam.BAMServiceImpl" lazy-init="true">
		<property name="dao">
			<bean class="edu.iu.uis.eden.messaging.bam.dao.BAMDAOOjbImpl">
				<property name="jcdAlias" value="ksbRegistryDataSource" />
			</bean>
		</property>
		<property name="configDao">
			<bean class="edu.iu.uis.eden.messaging.bam.dao.BAMConfigDAOImpl" />
		</property>
	</bean>

	<bean id="enMessageHelper" class="edu.iu.uis.eden.messaging.MessageHelperImpl" lazy-init="true" />

	<bean id="enServiceInvoker" class="edu.iu.uis.eden.messaging.RemotedServiceRegistryImpl" lazy-init="true" />

	<bean id="enRouteQueueService" class="edu.iu.uis.eden.messaging.MessageQueueServiceImpl" lazy-init="true">
		<property name="messageQueueDAO">
			<bean class="edu.iu.uis.eden.messaging.dao.MessageQueueDAOOjbImpl">
				<property name="jcdAlias" value="ksbMessageDataSource" />
			</bean>
		</property>
	</bean>

	<bean id="enRoutingTableService" class="edu.iu.uis.eden.messaging.ServiceRegistryImpl" lazy-init="true">
		<property name="dao">
			<bean class="edu.iu.uis.eden.messaging.dao.ServiceInfoDAOOjbImpl">
				<property name="jcdAlias" value="ksbRegistryDataSource" />
			</bean>
		</property>
	</bean>

	<bean id="exceptionMessagingService" class="edu.iu.uis.eden.messaging.exceptionhandling.DefaultExceptionServiceImpl" lazy-init="true" />
	<bean id="enEncryptionService" class="edu.iu.uis.eden.security.DESEncryptionService" lazy-init="true" />
	<bean id="digitalSignatureService" class="edu.iu.uis.eden.security.DigitalSignatureServiceImpl" lazy-init="true" />

	<bean id="enRepeatTopicInvokerQueue" class="edu.iu.uis.eden.messaging.RepeatTopicInvokerQueueImpl" singleton="true" lazy-init="true" />
	<!-- this bean will be used by the enRepeatTopicInvokerQueue to register itself with the bus programmatically -->
	<bean id="repeatTopicInvokerQueueDefinition" class="edu.iu.uis.eden.messaging.JavaServiceDefinition" singleton="true" lazy-init="true">
		<property name="service">
			<ref bean="enRepeatTopicInvokerQueue" />
		</property>
		<property name="localServiceName" value="RepeatTopicInvokerQueue" />
		<property name="priority" value="3" />
		<property name="retryAttempts" value="0" />
	</bean>

	<bean id="ObjectRemoterService" class="edu.iu.uis.eden.messaging.objectremoting.ObjectRemoterServiceImpl" singleton="true" lazy-init="true" />
	<bean id="ksb.objectRemoterServiceDefinition" class="edu.iu.uis.eden.messaging.JavaServiceDefinition" singleton="true" lazy-init="true">
		<property name="service">
			<ref bean="ObjectRemoterService" />
		</property>
		<property name="localServiceName" value="ObjectRemoterService" />
		<property name="priority" value="3" />
		<property name="retryAttempts" value="0" />
	</bean>

	<bean id="xfire.serviceRegistry" class="org.codehaus.xfire.service.DefaultServiceRegistry" singleton="true" lazy-init="true" />

	<bean id="xfire.transportManager" class="org.codehaus.xfire.transport.DefaultTransportManager" singleton="true" lazy-init="true"
		init-method="initialize" destroy-method="dispose">
	</bean>

	<bean id="xfire" class="org.codehaus.xfire.DefaultXFire" singleton="true">
		<constructor-arg index="0">
			<ref bean="xfire.serviceRegistry" />
		</constructor-arg>
		<constructor-arg index="1">
			<ref bean="xfire.transportManager" />
		</constructor-arg>
	</bean>

	<bean id="xfire.typeMappingRegistry" class="org.codehaus.xfire.aegis.type.DefaultTypeMappingRegistry" init-method="createDefaultMappings"
		singleton="true" lazy-init="true">
	</bean>


	<bean id="xfire.aegisBindingProvider" class="org.codehaus.xfire.aegis.AegisBindingProvider" singleton="true" lazy-init="true">
		<constructor-arg index="0">
			<ref bean="xfire.typeMappingRegistry" />
		</constructor-arg>
	</bean>

	<bean id="xfire.serviceFactory" class="org.codehaus.xfire.service.binding.ObjectServiceFactory" singleton="true" lazy-init="true">
		<constructor-arg index="0">
			<ref bean="xfire.transportManager" />
		</constructor-arg>
		<constructor-arg index="1">
			<ref bean="xfire.aegisBindingProvider" />
		</constructor-arg>
	</bean>

	<bean id="xfire.servletController" class="org.codehaus.xfire.transport.http.XFireServletController" singleton="true" lazy-init="true">
		<constructor-arg>
			<ref bean="xfire" />
		</constructor-arg>
	</bean>

	<bean id="xfire.messageServiceFactory" class="org.codehaus.xfire.service.binding.ObjectServiceFactory" lazy-init="true">
		<constructor-arg index="0" ref="xfire.transportManager" />
		<constructor-arg index="1" ref="xfire.messageBindingProvider" />
		<property name="style" value="message" />
	</bean>

	<bean id="xfire.messageBindingProvider" class="org.codehaus.xfire.service.binding.MessageBindingProvider" lazy-init="true" />

	<bean id="ksbScheduler" class="edu.iu.uis.eden.messaging.quartz.KSBSchedulerFactoryBean" lazy-init="true" destroy-method="stop">
		<property name="jobListeners">
			<list>
				<bean class="edu.iu.uis.eden.messaging.quartz.MessageServiceExecutorJobListener"/>
			</list>
		</property>
		<property name="quartzProperties">
			<bean class="edu.iu.uis.eden.messaging.quartz.QuartzConfigPropertiesFactoryBean"/>
		</property>
		<property name="jtaTransactionManager" ref="transactionManager"/>
	</bean>

    <bean id="busAdminService" class="edu.iu.uis.eden.messaging.BusAdminServiceImpl"/>
    <bean id="ksb.busAdminServiceDefinition" class="edu.iu.uis.eden.messaging.JavaServiceDefinition" singleton="true" lazy-init="true">
      <property name="service">
        <ref bean="busAdminService" />
      </property>
      <property name="localServiceName" value="busAdminService" />
      <property name="priority" value="3" />
      <property name="retryAttempts" value="0" />
    </bean>

</beans>