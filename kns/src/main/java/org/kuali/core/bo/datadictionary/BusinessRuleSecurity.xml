<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.BusinessRuleSecurity">


        <inquiry>
            <title>Business Rule Group Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="ruleGroupName" />
                <field attributeName="workgroupName" />
                <field attributeName="ruleGroupDescription" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Business Rule Security Lookup</title>

            <instructions>Look up a Business Rule Group</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="ruleGroupName" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="ruleGroupName" required="false" />
                <lookupField attributeName="workgroupName" required="false" />
                <lookupField attributeName="ruleGroupDescription" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="ruleGroupName" />
                <field attributeName="workgroupName" />
                <field attributeName="ruleGroupDescription" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="ruleGroupDescription" forceUppercase="false">
                <label>Rule Group Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>2000</maxLength>

                <control>
                    <textarea rows="5" cols="80"/>
                </control>

                <summary>ruleGroupDescription</summary>
                <description>ruleGroupDescription description...</description>
			</attribute>

            <attribute name="ruleGroupName" forceUppercase="false">
                <label>Rule Group Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="75" />
                </control>

                <summary>ruleGroupName</summary>
                <description>ruleGroupName description...</description>
			</attribute>

            <attribute name="workgroupName" forceUppercase="false">
                <label>Workgroup Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>70</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <workflowWorkgroup size="72" />
                </control>

                <summary>workgroupName</summary>
                <description>workgroupName description...</description>
			</attribute>
			
			<attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
