<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.core.bo.BusinessRule</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.core.maintenance.rules.BusinessRuleAndSystemParameterRuleBase</businessRulesClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>
        <documentTypeName>KualiBusinessRuleMaintenanceDocument</documentTypeName>
        <documentTypeCode>BR</documentTypeCode>
        <label>Business Rule Maintenance Document</label>
        <shortLabel>Bus. Rl. Maint. Doc.</shortLabel>
        <summary>Business Rule Maintenance Document</summary>
        <description>This document can be used to create or update Business Rule configuration.</description>
        <help securityGroupName="Kuali.NervousSystem.Help" parameterName="NERVOUS_SYSTEM_HELP_BUSINESS_RULE" />

        <lockingKeys>
            <field attributeName="ruleGroupName" />
            <field attributeName="ruleName" />
        </lockingKeys>
        
        <defaultExistenceChecks>
        	<reference attributeName="ruleGroup" attributeToHighlightOnFail="ruleGroupName" />
        </defaultExistenceChecks>
        
        <maintainableSections>
            <maintainableSection title="Edit Business Rule">
                <maintainableItems>
                    <maintainableField name="moduleCode" required="true">
                         <overrideLookupClass>org.kuali.core.bo.Module</overrideLookupClass>
                         <overrideFieldConversions>moduleCode:moduleCode</overrideFieldConversions>                    
                    </maintainableField>
                    <maintainableField name="ruleGroupName" required="true" />
                    <maintainableField name="ruleName" required="true" />
                    <maintainableField name="ruleText" />
                    <maintainableField name="ruleDescription" required="true" />
                    <maintainableField name="ruleOperatorCode" required="true"/>
                    <maintainableField name="financialSystemMultipleValueIndicator" required="true"/>
                    <maintainableField name="financialSystemParameterActiveIndicator" required="true"/>
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>