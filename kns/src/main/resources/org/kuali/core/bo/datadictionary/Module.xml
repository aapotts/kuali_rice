<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.Module">

        <inquiry>
            <title>Module Inquiry</title>
          <inquirySections><inquirySection title="Header Text">
            <inquiryFields>
                <field attributeName="moduleCode" />
                <field attributeName="moduleName" />
             </inquiryFields>   
           </inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <lookupableID>moduleLookupable</lookupableID>
            
            <title>Module Lookup</title>

            <instructions>Lookup a Module</instructions>

            <defaultSort attributeName="moduleCode" sortAscending="true" />

            <lookupFields>
                <lookupField attributeName="moduleCode" />
                <lookupField attributeName="moduleName" />
            </lookupFields>

            <resultFields>
                <field attributeName="moduleCode" forceInquiry="true" />
                <field attributeName="moduleName" />
            </resultFields>
        </lookup>

        <titleAttribute>moduleCode</titleAttribute>

        <attributes>

            <attribute name="moduleCode" forceUppercase="true">
                <label>Module Code</label>
                <shortLabel>Module Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern>
                    <alphaNumeric />
                </validationPattern>
                <required>true</required>

                <control>
                    <text size="2" />
                </control>

                <summary>Module Code</summary>
                <description>The code uniquely identifying a particular module.</description>
            </attribute>

            <attribute name="moduleName" forceUppercase="true">
                <label>Module Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>40</maxLength>
                <required>true</required>

                <control>
                    <text size="40" />
                </control>

                <summary>Module Name</summary>
                <description>Module Name...</description>
            </attribute>

        </attributes>
        
        <objectLabel>Module</objectLabel>
    </businessObject>
</dictionaryEntry>

