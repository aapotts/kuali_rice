<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.FinancialSystemParameter">

        <inquiry>
            <title>Financial System Parameter Inquiry</title>
            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="moduleCode" />
                <field attributeName="financialSystemScriptName" />
                <field attributeName="financialSystemParameterName" noInquiry="true" />
                <field attributeName="financialSystemParameterText" />
                <field attributeName="financialSystemParameterDescription" />
                <field attributeName="financialSystemMultipleValueIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>
        <lookup>
            <title>Financial System Parameter Lookup</title>

            <instructions>Look up a system parameter.</instructions>
            <defaultSort attributeName="financialSystemParameterName" sortAscending="true" />
            <lookupFields>
                <lookupField attributeName="moduleCode" required="false" />
                <lookupField attributeName="financialSystemScriptName" required="false" />
                <lookupField attributeName="financialSystemParameterName" required="false" noLookup="true" />
                <lookupField attributeName="financialSystemParameterText" required="false" noLookup="true" />
                <lookupField attributeName="financialSystemParameterDescription" required="false" noLookup="true" />
                <lookupField attributeName="financialSystemMultipleValueIndicator" />
            </lookupFields>
            <resultFields>
                <field attributeName="moduleCode" forceInquiry="true" />
                <field attributeName="financialSystemParameterName" forceInquiry="true" />
                <field attributeName="financialSystemScriptName" forceInquiry="true" />
                <field attributeName="financialSystemParameterDescription" />
                <field attributeName="financialSystemParameterText" />
                <field attributeName="financialSystemMultipleValueIndicator" />
            </resultFields>
        </lookup>

        <titleAttribute>financialSystemParameterName</titleAttribute>

        <attributes>
            <attributeReference name="moduleCode" sourceClassName="org.kuali.core.bo.Module" sourceAttributeName="moduleCode">
                <shortLabel>Module Code</shortLabel>
                <required>true</required>
            </attributeReference>
            <attribute name="financialSystemParameterName" forceUppercase="false">
                <label>Parameter Name</label>
                <shortLabel>Parm Nm</shortLabel>
                <maxLength>255</maxLength>
                <validationPattern>
                    <anyCharacter />
                </validationPattern>
                <required>true</required>
                <control>
                    <text size="75" />
                </control>
                <summary>The name of the parameter.</summary>
                <description>This will be used as the identifier for the parameter. Parameter values will be accessed using this field as the key.</description>
            </attribute>
            <attributeReference name="financialSystemScriptName" sourceClassName="org.kuali.core.bo.FinancialSystemParameterSecurity" sourceAttributeName="financialSystemScriptName">
                <shortLabel>Group NM</shortLabel>
                <required>true</required>
            </attributeReference>
            <attribute name="financialSystemParameterText" forceUppercase="false">
                <label>Parameter Text</label>
                <shortLabel>Parm Txt</shortLabel>
                <maxLength>2000</maxLength>
                <control>
                    <textarea rows="3" cols="40" />
                </control>
                <summary>The text associated with this parameter.</summary>
                <description>This field houses the actual value associated with the parameter. This is what's returned by the KualiConfigurationService.</description>
            </attribute>
            <attribute name="financialSystemParameterDescription" forceUppercase="false">
                <label>Parameter Description</label>
                <shortLabel>Desc</shortLabel>
                <maxLength>2000</maxLength>
                <required>true</required>
                <control>
                    <textarea rows="3" cols="40" />
                </control>
                <summary>The description of this parameter.</summary>
                <description>This field houses the purpose of this parameter.</description>
            </attribute>
            <attributeReference name="financialSystemMultipleValueIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericBoolean">
                <label>Multiple Value Indicator</label>
                <shortLabel>Mlt Ind</shortLabel>
                <summary>This indecates if the parameter holds multiple values.</summary>
                <description>This indicates whether the parameter holds multiple values separated by semi-colons in the text field.</description>
            </attributeReference>
            <attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
        </attributes>
    </businessObject>
</dictionaryEntry>
