<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.BusinessRule">


        <inquiry>
            <title>Business Rule Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="moduleCode" />
                <field attributeName="ruleGroupName" />
                <field attributeName="ruleName" />
                <field attributeName="ruleText" />
                <field attributeName="ruleDescription" />
                <field attributeName="ruleOperatorCode" />
                <field attributeName="financialSystemMultipleValueIndicator" />
                <field attributeName="financialSystemParameterActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Business Rule Lookup</title>

            <instructions>Look up a Business Rule</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="ruleGroupName" />
                    <sortAttribute attributeName="ruleName" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="moduleCode" required="false" />
                <lookupField attributeName="ruleGroupName" required="false" />
                <lookupField attributeName="ruleName" required="false" />
                <lookupField attributeName="ruleText" required="false" />
                <lookupField attributeName="ruleDescription" required="false" />
                <lookupField attributeName="ruleOperatorCode" required="false" />
                <lookupField attributeName="financialSystemMultipleValueIndicator" required="false" />
                <lookupField attributeName="financialSystemParameterActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="moduleCode" />
                <field attributeName="ruleGroupName" />
                <field attributeName="ruleName" />
                <field attributeName="ruleText" maxLength="40" />
                <field attributeName="ruleDescription" />
                <field attributeName="ruleOperatorCode" />
                <field attributeName="financialSystemMultipleValueIndicator" />
                <field attributeName="financialSystemParameterActiveIndicator" />
            </resultFields>
        </lookup>

		<titleAttribute>ruleName</titleAttribute>
		 
        <attributes>
            <attribute name="moduleCode" forceUppercase="true">
                <label>Module Code</label>
                <shortLabel>Mdl Cd</shortLabel>
                <maxLength>2</maxLength>
                <required>true</required>
				<control>
					<select valuesFinderClass="org.kuali.core.lookup.keyvalues.ModuleValuesFinder" />
				</control>
                <summary>The module that the parameter is associated with.</summary>
                <description>This value is used to categorize parameters by module.</description>
            </attribute>
            <attribute name="financialSystemMultipleValueIndicator" forceUppercase="false">
                <label>Financial System Multiple Value Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>financialSystemMultipleValueIndicator</summary>
                <description>financialSystemMultipleValueIndicator description...</description>
			</attribute>

            <attribute name="financialSystemParameterActiveIndicator" forceUppercase="false">
                <label>Financial System Parameter Active Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>financialSystemParameterActiveIndicator</summary>
                <description>financialSystemParameterActiveIndicator description...</description>
			</attribute>

            <attribute name="ruleDescription" forceUppercase="false">
                <label>Rule Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>2000</maxLength>

                <control>
                    <textarea rows="5" cols="80"/>
                </control>

                <summary>ruleDescription</summary>
                <description>ruleDescription description...</description>
			</attribute>
			
			<attributeReference name="ruleGroupName" 
			    sourceClassName="org.kuali.core.bo.BusinessRuleSecurity" sourceAttributeName="ruleGroupName"/>

            <attribute name="ruleName" forceUppercase="false">
                <label>Rule Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="75" />
                </control>

                <summary>ruleName</summary>
                <description>ruleName description...</description>
			</attribute>

            <attribute name="ruleOperatorCode" forceUppercase="false">
                <label>Rule Operator Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <select valuesFinderClass="org.kuali.core.lookup.keyvalues.ParameterOperatorValuesFinder" />
                </control>

                <summary>ruleOperatorCode</summary>
                <description>ruleOperatorCode description...</description>
			</attribute>

            <attribute name="ruleText" forceUppercase="false">
                <label>Rule Text</label>
                <shortLabel>Text</shortLabel>

                <maxLength>4000</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <textarea rows="5" cols="80"/>
                </control>

                <summary>ruleText</summary>
                <description>ruleText description...</description>
			</attribute>
			
			<attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
