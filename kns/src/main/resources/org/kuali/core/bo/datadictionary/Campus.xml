<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.Campus">



        <inquiry>
            <title>Campus Inquiry</title>
          <inquirySections><inquirySection title="Header Text">
            <inquiryFields>
                <field attributeName="campusCode" />
                <field attributeName="campusName" />
                <field attributeName="campusShortName" />
                <field attributeName="campusTypeCode" />
             </inquiryFields>   
           </inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Campus Lookup</title>

            <instructions>Lookup a Campus</instructions>

            <defaultSort attributeName="campusCode" sortAscending="true" />

            <lookupFields>
                <lookupField attributeName="campusCode" />
                <lookupField attributeName="campusName" />
                <lookupField attributeName="campusShortName" />
                <lookupField attributeName="campusTypeCode" />
            </lookupFields>

            <resultFields>
                <field attributeName="campusCode" forceInquiry="true" />
                <field attributeName="campusName" />
                <field attributeName="campusShortName" />
                <field attributeName="campusTypeCode" />
            </resultFields>
        </lookup>

        <titleAttribute>campusCode</titleAttribute>

        <attributes>

            <attribute name="campusCode" forceUppercase="true">
                <label>Campus Code</label>
                <shortLabel>Campus Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern>
                    <alphaNumeric />
                </validationPattern>
                <required>true</required>

                <control>
                    <text size="2" />
                </control>

                <summary>Campus Code</summary>
                <description>The code uniquely identifying a particular campus.</description>
            </attribute>

            <attribute name="campusName" forceUppercase="true">
                <label>Campus Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>40</maxLength>
                <required>true</required>

                <control>
                    <text size="40" />
                </control>

                <summary>Campus Name</summary>
                <description>Campus Name...</description>
            </attribute>

            <attribute name="campusShortName" forceUppercase="true">
                <label>Campus Short Name</label>
                <shortLabel>Short Name</shortLabel>

                <maxLength>12</maxLength>
                <required>true</required>

                <control>
                    <text size="12" />
                </control>

                <summary>Campus Short Name</summary>
                <description>Short Name...</description>
            </attribute>




            <attribute name="campusTypeCode" forceUppercase="true">
                <label>Campus Type Code</label>
                <shortLabel>Type</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern>
                    <alphaNumeric />
                </validationPattern>
                <required>true</required>

                <control>
                    <select valuesFinderClass="org.kuali.core.lookup.keyvalues.CampusTypeValuesFinder" />
                </control>

                <summary>Campus Type Code</summary>
                <description>The code identifying type of campus.</description>
            </attribute>


            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />


        </attributes>
        
        <objectLabel>Campus</objectLabel>
    </businessObject>
</dictionaryEntry>

