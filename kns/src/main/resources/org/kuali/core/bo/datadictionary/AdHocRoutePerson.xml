<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.AdHocRoutePerson">


        <attributes>
            <attribute name="actionRequested" forceUppercase="true">
                <label>Action Requested</label>
                <shortLabel>Action Requested</shortLabel>

                <maxLength>30</maxLength>
                <required>true</required>
                <control>
                    <text size="32" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The set of actions which the recipient is asked to perform: "Approve", "Acknowledge" (recorded), or "FYI" (unrecorded)</description>

            </attribute>
            <attributeReference name="id" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personUserIdentifier">
                <label>Person Identifier</label>
                <shortLabel>Person</shortLabel>

                <maxLength>30</maxLength>
                <required>true</required>
                <control>
                    <text size="32" />
                </control>
                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The username of an individual user who receives the document ad hoc for the Action Requested</description>
            </attributeReference>
            
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
            
        </attributes>
    </businessObject>
</dictionaryEntry>
