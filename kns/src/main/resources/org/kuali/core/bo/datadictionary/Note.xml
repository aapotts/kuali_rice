<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.Note">


        <!--
            No inquiries or lookups on a Document Header, as its
            not relevant.  Inquiries and lookups should be done on the
            documents themselves.
        -->

        <attributes>

            <!-- this attribute is here for shortLabel and help so far -->
            <attributeReference name="authorUniversalIdentifier" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericSystemId">
                <label>Author Universal Id</label>
                <shortLabel>Author</shortLabel>
                <required>true</required>
                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>A free-form text field for the full name of the Author of the Note, expressed as "Lastname, Firstname Initial"</description>
            </attributeReference>

            <attribute name="notePostedTimestamp" forceUppercase="true">
                <label>Posted Date/Time Stamp</label>
                <shortLabel>Posted Timestamp</shortLabel>

                <maxLength>36</maxLength>

                <control>
                    <text size="36" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>A free-form text field that identifies the time and date at which the Notes is posted.</description>
			</attribute>

            <attribute name="notePurgeCode" forceUppercase="true">
                <label>Note Purge Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="3" />
                </control>

                <summary>notePurgeCode</summary>
                <description>notePurgeCode description...</description>
			</attribute>

            <attribute name="noteText" forceUppercase="false">
                <label>Note Text</label>
                <shortLabel>Note Text</shortLabel>

                <maxLength>800</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

				<required>true</required>

                <control>
                    <textarea cols="50" rows="3" />
                </control>

                <summary>
                	<![CDATA[&nbsp;]]>
                </summary>
                <description>A free-form text field for the text of the Note.</description>
			</attribute>

            <attribute name="noteTopicText" forceUppercase="false">
                <label>Note Topic</label>
                <shortLabel>Note Topic</shortLabel>

                <maxLength>40</maxLength>

                <required>false</required>

                <control>
                    <text size="20" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>A free-form text field for entering the topic of the Note.</description>

            </attribute>

            <attribute name="noteTypeCode" forceUppercase="true">
                <label>Note Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

                <summary>noteTypeCode</summary>
                <description>noteTypeCode description...</description>
			</attribute>

            <attribute name="remoteObjectIdentifier" forceUppercase="true">
                <label>Remote Object Identifier</label>
                <shortLabel>Identifier</shortLabel>

                <maxLength>36</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="38" />
                </control>

                <summary>remoteObjectIdentifier</summary>
                <description>remoteObjectIdentifier description...</description>
			</attribute>

			<!-- This attribute is here for shortLabel and help so far.  Should it reference DocumentAttachment? -->
            <attribute name="attachment" forceUppercase="true">
                <label>Attachment</label>
                <shortLabel>Attached File</shortLabel>

                <!-- this is required but not used and probably wrong -->
                <maxLength>36</maxLength>

                <!-- this is required but not used and probably wrong -->
                <control>
                    <text size="36" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The pathname of a related file to attach to the Note. Use the "Browse..." button to open the file dialog, select the file and automatically fill in the pathname.</description>
            </attribute>

            <attribute name="versionNumber" forceUppercase="true">
                <label>Version Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

                <summary>versionNumber</summary>
                <description>versionNumber description...</description>
			</attribute>

        </attributes>
    </businessObject>
</dictionaryEntry>
