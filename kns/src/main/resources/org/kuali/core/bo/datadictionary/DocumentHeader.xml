<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.core.bo.DocumentHeader">

		<!-- this allows for docHeader based notes (the default) -->
		<boNotesEnabled>true</boNotesEnabled>

        <!--
            No inquiries or lookups on a Document Header, as its
            not relevant.  Inquiries and lookups should be done on the
            documents themselves.
        -->
        <attributes>
            <attribute name="financialDocumentDescription" forceUppercase="false">
                <label>Document Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>40</maxLength>
                <required>true</required>

                <control>
                    <text size="45" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>A free-form text field that describes the purpose or function of the document.</description>
            </attribute>

            <attribute name="financialDocumentStatusCode" forceUppercase="true">
                <label>Document Status Code</label>
                <shortLabel>Status</shortLabel>
                <maxLength>2</maxLength>
             	<control>
                    <text size="2"/>
                </control>
                <summary>The status code for this document.</summary>
                <description>This code represents the status of this document.</description>
            </attribute>

            <attribute name="organizationDocumentNumber" forceUppercase="true">
                <label>Organization Document Number</label>
                <shortLabel>
                    <![CDATA[Org. Doc. #]]>
                </shortLabel>

                <maxLength>10</maxLength>

                <control>
                    <text size="12" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The numeric document identification that may include departmental or organizational information. This number is not the same as the Document Number assigned by the Kuali Financial System (KFS).</description>
            </attribute>
            <attribute name="documentNumber" forceUppercase="true">
                <label>Document Number</label>
                <shortLabel>Doc Nbr</shortLabel>

                <maxLength>14</maxLength>

                <control>
                    <text size="16" />
                </control>

                <summary>Document Number</summary>
                <description>The document id is generated by the workflow environment and is unique to each installation of Kuali...</description>
            </attribute>

            <attribute name="financialDocumentInErrorNumber" forceUppercase="true">
                <label>Correction of Document Id</label>
                <shortLabel>Corrects Document Id</shortLabel>

                <maxLength>14</maxLength>

                <control>
                    <hidden />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The document id is generated by the workflow environment and is unique to each installation of Kuali...</description>
            </attribute>

            <attribute name="correctedByDocumentId" forceUppercase="true">
                <label>Corrected by Document Header Id</label>
                <shortLabel>Corrected by Document Id</shortLabel>

                <maxLength>14</maxLength>

                <control>
                    <hidden />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The document id is generated by the workflow environment and is unique to each installation of Kuali...</description>
            </attribute>
            <attribute name="financialDocumentTemplateNumber" forceUppercase="true">
                <label>Copied from Document Header Id</label>
                <shortLabel>Copied from Document Id</shortLabel>

                <maxLength>14</maxLength>

                <control>
                    <hidden />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The document id is generated by the workflow environment and is unique to each installation of Kuali...</description>
            </attribute>

            <attribute name="explanation" forceUppercase="false">
                <label>Explanation</label>
                <shortLabel>Explanation</shortLabel>

                <maxLength>400</maxLength>
                <validationPattern>
                    <anyCharacter maxLength="400" allowWhitespace="true" />
                </validationPattern>

                <control>
                    <textarea rows="3" cols="40" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>A free-form text field that explains the purpose of the document in more detail than the Description.</description>
            </attribute>

            <attribute name="financialDocumentTotalAmount" forceUppercase="false">
                <label>Total Amount</label>
                <shortLabel>Total Amount</shortLabel>

                <maxLength>19</maxLength>

                <validationPattern>
                    <fixedPoint allowNegative="true" precision="19" scale="2" />
                </validationPattern>

                <control>
                    <currency size="10" formattedMaxLength="26" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The total dollar amount for the document.</description>
            </attribute>

            <attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
        </attributes>
    </businessObject>
</dictionaryEntry>
