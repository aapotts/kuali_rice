<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">

<dictionaryEntry>
    <transactionalDocument>
        <documentClass>edu.sampleu.travel.document.TravelDocument2</documentClass>
        <businessRulesClass>edu.sampleu.travel.document.rule.TravelDocumentRule</businessRulesClass>

        <documentAuthorizerClass>edu.sampleu.travel.document.authorizer.TravelDocumentAuthorizer</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>TravelRequest</documentTypeName>
        <documentTypeCode>TRD2</documentTypeCode>

        <label>Travel Doc 2</label>
        <shortLabel>TRDoc2</shortLabel>

        <attributes>

            <attribute name="traveler">
                <label>Traveler Name</label>
                <shortLabel>Traveler Name</shortLabel>

                <maxLength>30</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <required>true</required>

                <control>
                    <text size="30" />
                </control>
                
                <summary>Traveler Name</summary>
                <description>Traveler Name</description>
			</attribute>
			
            <attribute name="origin">
                <label>Traveler Origin</label>
                <shortLabel>Traveler Origin</shortLabel>

                <maxLength>60</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <required>true</required>

                <control>
                    <text size="60" />
                </control>
               
                <summary>Traveler Origin</summary>
                <description>Traveler Origin</description>
			</attribute>
			
            <attribute name="destination">
                <label>Traveler Destination</label>
                <shortLabel>Traveler Destination</shortLabel>

                <maxLength>60</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <required>true</required>

                <control>
                    <text size="60" />
                </control>
                
                <summary>Traveler Destination</summary>
                <description>Traveler Destination</description>
			</attribute>
			
			<attribute name="requestType">
                <label>Travel Request Type</label>
                <shortLabel>Travel Request Type</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern>
                    <alphaNumeric allowWhitespace="true" />
                </validationPattern>

                <required>true</required>

                <control>
                    <select valuesFinderClass="edu.sampleu.travel.document.keyvalue.TravelRequestType" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>
                    Travel Request Type
                </description>
            </attribute>
        </attributes>

        <summary>
            <![CDATA[&nbsp;]]>
        </summary>
        <description>Doing it right</description>
 		<!-- 
        <help securityGroupName="WorkflowAdmin" parameterName="FINANCIAL_HELP_INTERNAL_BILLING" />
 		-->
        <allowsCopy>false</allowsCopy>
        <allowsErrorCorrection>false</allowsErrorCorrection>
    </transactionalDocument>
</dictionaryEntry>
