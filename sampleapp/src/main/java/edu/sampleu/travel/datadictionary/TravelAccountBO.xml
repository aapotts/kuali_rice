<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="edu.sampleu.travel.bo.TravelAccount">

        <inquiry>
            <title>Travel Account Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="number" forceInquiry="true" />
                <field attributeName="name" />
                <field attributeName="accountType" />
                <field attributeName="foId" forceInquiry="true" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Travel Account Lookup</title>
			<menubar>
				<![CDATA[<a href="/SampleRiceClient/index.html">Main</a>]]>
			</menubar>
            <instructions>Look up a Travel Account</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="number" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="number" required="false" />
                <lookupField attributeName="name" required="false" />
                <lookupField attributeName="accountType" required="false"/>
                <lookupField attributeName="foId" required="false" forceLookup="true" />
            </lookupFields>

            <resultFields>
                <field attributeName="number" forceInquiry="true" />
                <field attributeName="name" forceInquiry="true"/>
                <field attributeName="accountType" forceInquiry="true"/>
                <field attributeName="foId" forceInquiry="true" />
            </resultFields>
        </lookup>
        
        <titleAttribute>number</titleAttribute>
 
        <attributes>

            <attribute name="number">
                <label>Travel Account Number</label>
                <shortLabel>Travel Account Number</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="10" />
                </control>
                

                <summary>Travel Account Number</summary>
                <description>Travel Account Number</description>
			</attribute>

            <attribute name="name" forceUppercase="false">
                <label>Account Name</label>
                <shortLabel>Account Name</shortLabel>

                <maxLength>30</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="30" />
                </control>

                <summary>Account Name</summary>
                <description>Account Name</description>
			</attribute>

            <attribute name="accountType">
                <label>Account Type</label>
                <shortLabel>Account Type</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern>
                    <alphaNumeric allowWhitespace="true" />
                </validationPattern>

                <required>true</required>

                <control>
                    <select valuesFinderClass="edu.sampleu.travel.document.keyvalue.AccountTypeKeyValues" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>
                    Account Type
                </description>
            </attribute>
            		
		    <attributeReference name="foId" sourceClassName="edu.sampleu.travel.bo.FiscalOfficer" sourceAttributeName="id"/>
		</attributes>				
    </businessObject>
    
</dictionaryEntry>