<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="UifCompView-SecureGroupView" parent="GroupSection">
    <property name="title" value="Secure Group View"/>
    <property name="instructionalText" value="Viewing of group is secured by a KIM permission."/>
    <property name="items">
      <list>
        <bean parent="InputField_Form" p:propertyName="field1" p:label="Field 1">
          <property name="control">
            <bean parent="TextControl" p:size="5"/>
          </property>
        </bean>

        <bean parent="InputField_Form" p:propertyName="field2" p:label="Field 2">
          <property name="control">
            <bean parent="TextControl" p:size="21"/>
          </property>
        </bean>
      </list>
    </property>
    <property name="componentSecurity.viewAuthz" value="true"/>
  </bean>

  <bean id="UifCompView-SecureGroupEdit" parent="GroupSection">
    <property name="title" value="Secure Group Edit"/>
    <property name="instructionalText" value="Editing of group is secured by a KIM permission."/>
    <property name="items">
      <list>
        <bean parent="InputField_Form" p:propertyName="field3" p:label="Field 1">
          <property name="control">
            <bean parent="TextControl" p:size="5"/>
          </property>
        </bean>

        <bean parent="InputField_Form" p:propertyName="field4" p:label="Field 2">
          <property name="control">
            <bean parent="TextControl" p:size="21"/>
          </property>
        </bean>
      </list>
    </property>
    <property name="componentSecurity.editAuthz" value="true"/>
  </bean>

  <bean id="UifCompView-SecureFields" parent="GroupSection">
    <property name="title" value="Secure Fields"/>
    <property name="instructionalText" value="Viewing of field 2 and edit of field 3 is secured by a KIM permission."/>
    <property name="items">
      <list>
        <bean parent="InputField_Form" p:propertyName="field5" p:label="Field 1">
          <property name="control">
            <bean parent="TextControl" p:size="5"/>
          </property>
        </bean>

        <bean parent="InputField_Form" p:propertyName="field6" p:label="Field 2">
          <property name="control">
            <bean parent="TextControl" p:size="21"/>
          </property>
          <property name="componentSecurity.viewAuthz" value="true"/>
        </bean>

        <bean parent="InputField_Form" p:propertyName="field7" p:label="Field 3">
          <property name="control">
            <bean parent="TextControl" p:size="21"/>
          </property>
          <property name="componentSecurity.editAuthz" value="true"/>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="UifCompView-SecureFieldGroups" parent="GroupSection">
    <property name="title" value="Secure Field Groups"/>
    <property name="instructionalText"
              value="Viewing of the second field group and editing of the third field group is secured by a KIM permission"/>
    <property name="items">
      <list>
        <bean parent="HorizontalFieldGroup">
          <property name="items">
            <list>
              <bean parent="InputField_Form" p:propertyName="field8" p:label="Field 1">
                <property name="control">
                  <bean parent="TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="InputField_Form" p:propertyName="field9" p:label="Field 2">
                <property name="control">
                  <bean parent="TextControl" p:size="5"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>

        <bean parent="HorizontalFieldGroup">
          <property name="items">
            <list>
              <bean parent="InputField_Form" p:propertyName="field10" p:label="Field 3">
                <property name="control">
                  <bean parent="TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="InputField_Form" p:propertyName="field11" p:label="Field 4">
                <property name="control">
                  <bean parent="TextControl" p:size="5"/>
                </property>
              </bean>
            </list>
          </property>
          <property name="componentSecurity.viewAuthz" value="true"/>
        </bean>

        <bean parent="HorizontalFieldGroup">
          <property name="items">
            <list>
              <bean parent="InputField_Form" p:propertyName="field12" p:label="Field 5">
                <property name="control">
                  <bean parent="TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="InputField_Form" p:propertyName="field13" p:label="Field 6">
                <property name="control">
                  <bean parent="TextControl" p:size="5"/>
                </property>
              </bean>
            </list>
          </property>
          <property name="componentSecurity.editAuthz" value="true"/>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="UifCompView-SecureActions" parent="GroupSection">
    <property name="title" value="Secure Actions"/>
    <property name="instructionalText" value="Ability to perform the Save action is secured by a KIM permission."/>
    <property name="items">
      <list>
        <bean parent="ActionField" p:methodToCall="close" p:actionLabel="Close"/>
        <bean parent="ActionField" p:methodToCall="save" p:actionLabel="Save">
          <property name="componentSecurity.performActionAuthz" value="true"/>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="UifCompView-SecureWidgets" parent="GroupSection">
    <property name="title" value="Secure Widgets"/>
    <property name="instructionalText" value="Ability to use quickfinder is secured by a KIM permission."/>
    <property name="items">
      <list>
        <bean parent="InputField_Form" p:label="Field 1" p:propertyName="field14">
          <property name="fieldLookup.dataObjectClassName" value="edu.sampleu.travel.bo.TravelAccount"/>
          <property name="fieldLookup.fieldConversions" value="number:field60"/>
          <property name="fieldLookup.componentSecurity.viewAuthz" value="true"/>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="UifCompView-SecureLineView" parent="CollectionGroupSectionTableLayout" p:layoutManager.numberOfColumns="4">
    <property name="title" value="Secure Line View"/>
    <property name="instructionalText" value="Ability to view a collection line is controlled by a KIM permission."/>
    <property name="collectionObjectClass" value="edu.sampleu.demo.kitchensink.UITestObject"/>
    <property name="propertyName" value="list1"/>
    <property name="layoutManager.sequencePropertyName" value="field1"/>
    <property name="layoutManager.richTable.render" value="false"/>
    <property name="items">
      <list>
        <bean parent="InputField" p:label="Field 1" p:propertyName="field1" p:required="true"/>
        <bean parent="InputField" p:label="Field 2" p:propertyName="field2" p:required="true"/>
        <bean parent="InputField" p:label="Field 3" p:propertyName="field3" p:required="true"/>
        <bean parent="InputField" p:label="Field 4" p:propertyName="field4" p:required="true"/>
      </list>
    </property>
    <property name="componentSecurity.viewLineAuthz" value="true"/>
  </bean>

  <bean id="UifCompView-SecureLineEdit" parent="CollectionGroupSectionTableLayout" p:layoutManager.numberOfColumns="4">
    <property name="title" value="Secure Line Edit"/>
    <property name="instructionalText" value="Ability to edit a collection line is controlled by a KIM permission."/>
    <property name="collectionObjectClass" value="edu.sampleu.demo.kitchensink.UITestObject"/>
    <property name="propertyName" value="list2"/>
    <property name="layoutManager.sequencePropertyName" value="field1"/>
    <property name="layoutManager.richTable.render" value="false"/>
    <property name="items">
      <list>
        <bean parent="InputField" p:label="Field 1" p:propertyName="field1" p:required="true"/>
        <bean parent="InputField" p:label="Field 2" p:propertyName="field2" p:required="true"/>
        <bean parent="InputField" p:label="Field 3" p:propertyName="field3" p:required="true"/>
        <bean parent="InputField" p:label="Field 4" p:propertyName="field4" p:required="true"/>
      </list>
    </property>
    <property name="componentSecurity.editLineAuthz" value="true"/>
  </bean>

  <bean id="UifCompView-SecureLineFields" parent="CollectionGroupSectionTableLayout"
        p:layoutManager.numberOfColumns="4">
    <property name="title" value="Secure Line Fields"/>
    <property name="instructionalText"
              value="Ability to view field 2 or edit field 3 is controlled by a KIM permission."/>
    <property name="collectionObjectClass" value="edu.sampleu.demo.kitchensink.UITestObject"/>
    <property name="propertyName" value="list3"/>
    <property name="layoutManager.sequencePropertyName" value="field1"/>
    <property name="layoutManager.richTable.render" value="false"/>
    <property name="items">
      <list>
        <bean parent="InputField" p:label="Field 1" p:propertyName="field1" p:required="true"/>
        <bean parent="InputField" p:label="Field 2" p:propertyName="field2" p:required="true"
              p:componentSecurity.viewAuthz="true"/>
        <bean parent="InputField" p:label="Field 3" p:propertyName="field3" p:required="true"
              p:componentSecurity.editAuthz="true"/>
        <bean parent="InputField" p:label="Field 4" p:propertyName="field4" p:required="true"/>
      </list>
    </property>
  </bean>

  <bean id="UifCompView-SecureLineActions" parent="CollectionGroupSectionTableLayout"
        p:layoutManager.numberOfColumns="4">
    <property name="title" value="Secure Line Actions"/>
    <property name="instructionalText"
              value="Ability to perform the line delete action is controlled by a KIM permission."/>
    <property name="collectionObjectClass" value="edu.sampleu.demo.kitchensink.UITestObject"/>
    <property name="propertyName" value="list4"/>
    <property name="layoutManager.sequencePropertyName" value="field1"/>
    <property name="layoutManager.richTable.render" value="false"/>
    <property name="items">
      <list>
        <bean parent="InputField" p:label="Field 1" p:propertyName="field1" p:required="true"/>
        <bean parent="InputField" p:label="Field 2" p:propertyName="field2" p:required="true"/>
        <bean parent="InputField" p:label="Field 3" p:propertyName="field3" p:required="true"/>
        <bean parent="InputField" p:label="Field 4" p:propertyName="field4" p:required="true"/>
      </list>
    </property>
    <property name="actionFields">
      <list>
        <bean parent="ActionField_SmallSecondary" p:methodToCall="deleteLine" p:actionLabel="delete"
              p:componentSecurity.performActionAuthz="true"/>
      </list>
    </property>
  </bean>


</beans>