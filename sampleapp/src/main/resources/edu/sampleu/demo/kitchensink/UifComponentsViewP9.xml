<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="remotableFieldsGroup" parent="Group" p:disclosure.render="false">
    <property name="title" value="Fields created by Fetching Remotable Fields"/>
    <property name="items">
      <list>
        <bean parent="RemoteFieldsHolder" p:propertyName="remoteFieldValuesMap"
              p:fetchingMethodToCall="retrieveRemoteFields"/>
        <bean parent="HorizontalFieldGroup" p:group.instructionalText="Remote fields pulled into a Field Group">
          <property name="items">
            <bean parent="RemoteFieldsHolder" p:propertyName="remoteFieldValuesMap2"
                  p:fetchingMethodToCall="retrieveRemoteFields"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="miscGroup" parent="Group" p:disclosure.render="false">
    <property name="title" value="Various configuration and feature examples"/>
    <property name="items">
      <list>
				<bean parent="GenericTextField" p:label="Field 1" p:required="true" p:propertyName="field91" p:readOnly="false"
                p:instructionalText="Field that is being set to read only by request">
           <property name="control">
             <bean parent="TextControl" p:size="30"/>
           </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>