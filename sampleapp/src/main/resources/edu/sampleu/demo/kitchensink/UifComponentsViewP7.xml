<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="collection1" parent="CollectionGroupSectionTableLayout" p:layoutManager.numberOfColumns="4">
     <property name="title" value="Collection Group 1 - CollectionGroupTableLayout"/>
     <property name="instructionalText"
               value="This is a table based layout of a collection - CollectionGroupTableLayout"/>
     <property name="collectionObjectClass" value="edu.sampleu.demo.kitchensink.UITestObject"/>
     <property name="propertyName" value="list1"/>
     <property name="layoutManager.sequencePropertyName" value="field1"/>
     <property name="layoutManager.richTable.render" value="false"/>
     <property name="items">
       <list>
         <bean parent="InputField" p:label="Field 1" p:propertyName="field1" p:required="true"/>
         <bean parent="InputField" p:label="Field 2" p:propertyName="field2" p:required="true"/>
         <bean parent="InputField" p:label="Field 3" p:propertyName="field3" p:required="true"/>
         <bean parent="InputField" p:label="Field 4" p:propertyName="field4" p:required="true"/>
       </list>
     </property>
   </bean>

   <bean id="collection2" parent="CollectionGroupSectionTableLayout"	p:layoutManager.numberOfColumns="4">
     <property name="title"
       value="Collection Group 2 - CollectionGroupTableLayout with jQuery table features on" />
     <property name="instructionalText"
       value="This is a table based layout of a collection - CollectionGroupTableLayout - using jquery richTable and multi-value lookup" />
     <property name="collectionObjectClass"
       value="edu.sampleu.demo.kitchensink.UITestObject" />
     <property name="propertyName" value="list2" />
     <property name="layoutManager.sequencePropertyName" value="field1" />
     <property name="layoutManager.richTable.render" value="true" />
     <property name="collectionLookup.render" value="true"/>
     <property name="collectionLookup.dataObjectClassName" value="edu.sampleu.travel.bo.TravelAccount"/>
     <property name="collectionLookup.fieldConversions" value="number:field1,name:field2,subAccount:field3,subAccountName:field4"/>
     <property name="items">
       <list>
         <bean parent="InputField" p:label="Field 1" p:propertyName="field1"
           p:required="true" />
         <bean parent="InputField" p:label="Field 2" p:propertyName="field2"
           p:required="true" />
         <bean parent="InputField" p:label="Field 3" p:propertyName="field3"
           p:required="true" />
         <bean parent="InputField" p:label="Field 4" p:propertyName="field4"
           p:required="true" />
       </list>
     </property>
     <property name="filters">
       <list>
         <bean parent="ELCollectionFilter" p:expression="#line.field1 ne '1'"/>
       </list>
     </property>
   </bean>

   <bean id="collection3" parent="CollectionGroupSection">
     <property name="title" value="Collection Group 3 - Stacked" />
     <property name="instructionalText"
       value="This is a stacked layout of a collection - CollectionGroup" />
     <property name="collectionObjectClass"
       value="edu.sampleu.demo.kitchensink.UITestObject" />
     <property name="propertyName" value="list3" />
     <property name="layoutManager.summaryTitle" value="Line Summary" />
     <property name="layoutManager.summaryFields" value="field1" />
     <property name="items">
       <list>
         <bean parent="InputField" p:label="Field 1" p:propertyName="field1"
           p:required="true" />
         <bean parent="InputField" p:label="Field 2" p:propertyName="field2"
           p:required="true" />
         <bean parent="InputField" p:label="Field 3" p:propertyName="field3"
           p:required="true" />
         <bean parent="InputField" p:label="Field 4" p:propertyName="field4"
           p:required="true" />
       </list>
     </property>
   </bean>

   <bean id="collection4" parent="CollectionGroupSection">
     <property name="title"
       value="Collection Group 4 - Stacked Collection with a Table subcollection" />
     <property name="instructionalText"
       value="This is a stacked layout of a collection - CollectionGroup" />
     <property name="collectionObjectClass"
       value="edu.sampleu.demo.kitchensink.UITestObject" />
     <property name="propertyName" value="list4" />
     <property name="layoutManager.summaryTitle" value="Line Summary '@{#line.field1}' With Expression" />
     <property name="items">
       <list>
         <bean parent="InputField" p:propertyName="field1" p:label="Field 1"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field2" p:label="Field 2"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field3" p:label="Field 3"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field4" p:label="Field 4"
           p:required="true" />
       </list>
     </property>
     <property name="subCollections">
       <list>
         <ref bean="subCollection1" />
       </list>
     </property>
   </bean>

   <bean id="subCollection1" parent="CollectionGroupTableLayout"
     p:layoutManager.numberOfColumns="4">
     <property name="title" value="SubCollection" />
     <property name="instructionalText"
       value="A table collection within an item of a stacked collection" />
     <property name="collectionObjectClass"
       value="edu.sampleu.demo.kitchensink.UITestObject" />
     <property name="propertyName" value="subList" />
     <property name="layoutManager.sequencePropertyName" value="field1" />
     <property name="layoutManager.richTable.render" value="true" />
     <property name="items">
       <list>
         <bean parent="InputField" p:propertyName="field1" p:label="SubField 1"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field2" p:label="SubField 2"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field3" p:label="SubField 3"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field4" p:label="SubField 4"
           p:required="true" />
       </list>
     </property>
   </bean>

   <bean id="collection5" parent="CollectionGroupSection">
     <property name="title"
       value="Collection Group 5 - Stacked Collection with a Stacked subcollection" />
     <property name="instructionalText"
       value="This is a stacked layout of a collection - CollectionGroup" />
     <property name="collectionObjectClass"
       value="edu.sampleu.demo.kitchensink.UITestObject" />
     <property name="propertyName" value="list5" />
     <property name="layoutManager.summaryTitle" value="Line Summary" />
     <property name="layoutManager.summaryFields" value="field1" />
     <property name="items">
       <list>
         <bean parent="InputField" p:propertyName="field1" p:label="Field 1"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field2" p:label="Field 2"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field3" p:label="Field 3"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field4" p:label="Field 4"
           p:required="true" />
       </list>
     </property>
     <property name="subCollections">
       <list>
         <ref bean="subCollection2" />
       </list>
     </property>
   </bean>

   <bean id="subCollection2" parent="CollectionGroup">
     <property name="title" value="SubCollection" />
     <property name="instructionalText"
       value="This is a stacked layout of a collection - CollectionGroup" />
     <property name="disclosure.render" value="false" />
     <property name="collectionObjectClass"
       value="edu.sampleu.demo.kitchensink.UITestObject" />
     <property name="propertyName" value="subList" />
     <property name="layoutManager.summaryTitle" value="Line Summary" />
     <property name="layoutManager.summaryFields" value="field1" />
     <property name="items">
       <list>
         <bean parent="InputField" p:propertyName="field1" p:label="SubField 1"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field2" p:label="SubField 2"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field3" p:label="SubField 3"
           p:required="true" />
         <bean parent="InputField" p:propertyName="field4" p:label="SubField 4"
           p:required="true" />
       </list>
     </property>
   </bean>


   <bean id="collection6" parent="CollectionGroupSectionTableLayout"
     p:layoutManager.numberOfColumns="4">
     <property name="title"
       value="Collection Group 6 - CollectionGroupTableLayout with jQuery table features on" />
     <property name="instructionalText" value="No sequence column rendering on, separate add line" />
     <property name="collectionObjectClass"
       value="edu.sampleu.demo.kitchensink.UITestObject" />
     <property name="propertyName" value="list6" />
     <property name="layoutManager.sequencePropertyName" value="field1" />
     <property name="layoutManager.renderSequenceField" value="false" />
     <property name="layoutManager.generateAutoSequence" value="false" />
     <property name="layoutManager.separateAddLine" value="true" />
     <property name="layoutManager.addLineGroup.layoutManager.numberOfColumns" value="8" />
     <property name="layoutManager.richTable.render" value="true" />
     <property name="items">
       <list>
         <bean parent="InputField" p:label="Field 1" p:propertyName="field1"
           p:required="true" />
         <bean parent="InputField" p:label="Field 2" p:propertyName="field2"
           p:required="true" />
         <bean parent="InputField" p:label="Field 3" p:propertyName="field3"
           p:required="true" />
         <bean parent="InputField" p:label="Field 4" p:propertyName="field4"
           p:required="true" />
       </list>
     </property>
   </bean>


</beans>