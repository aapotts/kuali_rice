	<bean id="LayoutTestView" parent="FormView">
	   <property name="id" value="LayoutTestView"/>
	   <property name="title" value="Layout View"/>
	   <property name="entryPageId" value="page1"/>
       <property name="navigation">
           <ref bean="layoutTestViewMenu"/>
       </property>
       <property name="items">
           <list>
               <bean parent="Page" p:id="page1" p:title="Basic Layouts">
                   <property name="items">
                       <list>
                       	<ref bean="vertical-Section1"/>
                       	<ref bean="horizontal-Section2"/>
                       	<ref bean="horizontal-Section3"/>
                       	<ref bean="horizontal-Section4"/>
                       	<ref bean="tabs-Section5"/>
                       	<ref bean="accordion-Section6"/>
                       </list>
                   </property>
               </bean>
               <bean parent="Page" p:id="page2" p:title="Nested Layouts">
                   <property name="items">
                       <list>
                       	<ref bean="horizontalWithVerticalGroups-1"/>
                       	<ref bean="horizontalWithVerticalGroups-2"/>
                       	<ref bean="verticalWithHorizontalGroups-1"/>
                       </list>
                   </property>
               </bean>
               <bean parent="Page" p:id="page3" p:title="Placeholder Page">
               </bean>
               <bean parent="Page" p:id="page4" p:title="Placeholder Page">
               </bean>
           </list>
       </property>
	   <property name="additionalCssFiles" ref="ks-css"/>
	   <property name="formClass" value="edu.sampleu.travel.krad.form.UILayoutTestForm"/>
	</bean>

    <bean id="layoutTestViewMenu" parent="NavigationGroupMenu">
        <property name="items">
            <list>
                <bean parent="HeaderTwo" p:headerText="Navigation"/>
                <bean parent="NavigationActionLinkField" p:navigateToPageId="page1" p:actionLabel="Basic Layouts"/>
                <bean parent="NavigationActionLinkField" p:navigateToPageId="page2" p:actionLabel="Nested Layouts"/>
                <bean parent="NavigationActionLinkField" p:navigateToPageId="page3" p:actionLabel="Placeholder1"/>
                <bean parent="NavigationActionLinkField" p:navigateToPageId="page4" p:actionLabel="Placeholder2"/>
            </list>
        </property>
        <property name="componentOptions">
            <map>
                <entry key="animate" value="true"/>
                <entry key="slideout" value="true"/>
            </map>
        </property>
    </bean>
    
    <bean id="TextAreaTestField" parent="AttributeField_Form" abstract="true" p:label="Field Label" p:labelPlacement="TOP"
                      p:summary="Instructions Instructions Instructions" p:constraint="Constraint text" p:labelField.styleClasses="labelTop" p:labelField.renderColon="false" p:required="true">
	    <property name="control">
	        <bean parent="TextAreaControl" p:textExpand="true" p:rows="5" p:cols="40"
	              p:watermarkText="Text Here..."/>
	    </property>
    </bean>
    
    <bean id="TextTestField" parent="AttributeField_Form" abstract="true" p:label="Field Label" p:labelPlacement="TOP"
                      p:summary="Instructions Instructions Instructions" p:constraint="Constraint text" p:labelField.styleClasses="labelTop" p:labelField.renderColon="false" p:required="true">
	    <property name="control">
	        <bean parent="TextControl" p:size="30" p:watermarkText="Enter Data"/>
	    </property>
    </bean>
    
    <bean id="vertical-Section1" parent="Group" p:layoutManager.orientation="VERTICAL">
        <property name="title" value="Section Title"/>
        <property name="summary" value="Vertical Layout test"/>
        <property name="accordion.render" value="false"/>
        <property name="styleClasses" value="group_header"/>
        <property name="items">
            <list>
                <bean parent="TextTestField" p:propertyName="field1" />
                <bean parent="TextAreaTestField" p:propertyName="field2" />
                <bean parent="TextTestField" p:propertyName="field3" />
                <bean parent="TextAreaTestField" p:propertyName="field4" />
            </list>
        </property>
    </bean>
    
    <bean id="horizontal-Section2" parent="Group" p:layoutManager.orientation="HORIZONTAL">
        <property name="title" value="Section Title"/>
        <property name="summary" value="Horizontal Layout test - 3 across"/>
        <property name="accordion.render" value="false"/>
        <property name="styleClasses" value="group_header"/>
        <property name="items">
            <list>
                <bean parent="TextTestField" p:propertyName="field5" />
                <bean parent="TextAreaTestField" p:propertyName="field6" />
                <bean parent="TextTestField" p:propertyName="field7" />

            </list>
        </property>
    </bean>
    
    <bean id="horizontal-Section3" parent="Group" p:layoutManager.orientation="HORIZONTAL">
        <property name="title" value="Section Title"/>
        <property name="summary" value="Horizontal Layout test - 5 across"/>
        <property name="accordion.render" value="false"/>
        <property name="styleClasses" value="group_header"/>
        <property name="items">
            <list>
                <bean parent="TextAreaTestField" p:propertyName="field8" />
                <bean parent="TextTestField" p:propertyName="field9" />
                <bean parent="TextAreaTestField" p:propertyName="field10" />
                <bean parent="TextTestField" p:propertyName="field11" />
                <bean parent="TextAreaTestField" p:propertyName="field12" />

            </list>
        </property>
    </bean>
    
    <bean id="horizontal-Section4" parent="Group" p:layoutManager.orientation="HORIZONTAL">
        <property name="title" value="Section Title"/>
        <property name="summary" value="Horizontal Layout test - 8 across"/>
        <property name="accordion.render" value="false"/>
        <property name="styleClasses" value="group_header"/>
        <property name="items">
            <list>
                <bean parent="TextTestField" p:propertyName="field13" />
                <bean parent="TextAreaTestField" p:propertyName="field14" />
                <bean parent="TextTestField" p:propertyName="field15" />
                <bean parent="TextAreaTestField" p:propertyName="field16" />
                <bean parent="TextAreaTestField" p:propertyName="field17" />
                <bean parent="TextTestField" p:propertyName="field18" />
                <bean parent="TextAreaTestField" p:propertyName="field19" />
                <bean parent="TextTestField" p:propertyName="field20" />
            </list>
        </property>
    </bean>
    
    <bean id="tabs-Section5" parent="TabGroup">
        <property name="title" value="Tab Test"/>
        <property name="items">
            <list>
                <ref bean="vertical-Section1" />
                <ref bean="horizontal-Section2" />
                <ref bean="horizontal-Section3" />
                <ref bean="horizontal-Section4" />
            </list>
        </property>
    </bean>
    
    <bean id="accordion-Section6" parent="Group" p:layoutManager.orientation="VERTICAL">
        <property name="title" value="Section Title"/>
        <property name="summary" value="Accordion test"/>
        <property name="styleClasses" value="group_header"/>
        <property name="items">
            <list>
                <bean parent="TextTestField" p:propertyName="field21" />
                <bean parent="TextAreaTestField" p:propertyName="field22" />
                <bean parent="TextTestField" p:propertyName="field23" />
                <bean parent="TextAreaTestField" p:propertyName="field24" />
            </list>
        </property>
    </bean>
    
    <bean id="horizontalWithVerticalGroups-1" parent="Group" p:layoutManager.orientation="HORIZONTAL">
        <property name="title" value="Section Title"/>
        <property name="summary" value="Horizontal layout with 2 vertical groupings"/>
        <property name="styleClasses" value="group_header"/>
        <property name="items">
            <list>
                <ref bean="vertical-Section1" />
                <ref bean="vertical-Section1" />
            </list>
        </property>
    </bean>
    
    <bean id="horizontalWithVerticalGroups-2" parent="Group" p:layoutManager.orientation="HORIZONTAL">
        <property name="title" value="Section Title"/>
        <property name="summary" value="Horizontal layout with 3 vertical groupings"/>
        <property name="styleClasses" value="group_header"/>
        <property name="items">
            <list>
                <ref bean="vertical-Section1" />
                <ref bean="vertical-Section1" />
                <ref bean="vertical-Section1" />
            </list>
        </property>
    </bean>
    
    <bean id="verticalWithHorizontalGroups-1" parent="Group" p:layoutManager.orientation="HORIZONTAL">
        <property name="title" value="Section Title"/>
        <property name="summary" value="Vertical layout with 2 horizontal groupings"/>
        <property name="styleClasses" value="group_header"/>
        <property name="items">
            <list>
                <ref bean="horizontal-Section2" />
                <ref bean="horizontal-Section3" />
            </list>
        </property>
    </bean>
    
</beans>