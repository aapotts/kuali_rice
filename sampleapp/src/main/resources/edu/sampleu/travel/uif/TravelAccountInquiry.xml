<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" 
xsi:schemaLocation="http://www.springframework.org/schema/beans  
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <bean id="TravelAccount-InquiryView" parent="InquiryView">
     <property name="title" value="Travel Account Inquiry"/>
     <property name="dataObjectClassName" value="edu.sampleu.travel.bo.TravelAccount"/>
     <property name="Items">
         <list>
           <bean parent="GroupSectionGridLayout">
             <property name="layoutManager.numberOfColumns" value="2"/>
             <property name="items">
               <list>
                <bean parent="DataField" p:propertyName="number"/>
                <bean parent="DataField" p:propertyName="name"/>
                <bean parent="DataField" p:propertyName="extension.accountType.codeAndDescription"/>
                <bean parent="DataField" p:propertyName="subAccount"/>
                <bean parent="DataField" p:propertyName="subAccountName"/>
                <bean parent="DataField" p:propertyName="createDate"/>
                <bean parent="DataField" p:propertyName="subsidizedPercent"/>
                <bean parent="DataField" p:propertyName="foId"/>
               </list>
             </property>
             <property name="title" value="Account Information"/>
           </bean>
           <bean parent="CollectionGroupSection">
              <property name="title" value="Fiscal Officer Accounts"/>  
              <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
              <property name="propertyName" value="fiscalOfficer.accounts"/>
              <property name="items">
                <list>
                  <bean parent="DataField" p:propertyName="number"/>
                  <bean parent="DataField" p:propertyName="name"/>
                  <bean parent="DataField" p:propertyName="foId"/>
                </list>
              </property>      
              <property name="layoutManager.summaryTitle" value="Travel Account"/> 
              <property name="layoutManager.summaryFields">
                <list>
                  <value>number</value>
                </list>
              </property>
           </bean>
           <bean parent="CollectionGroupSectionTableLayout" p:layoutManager.numberOfColumns="5">
              <property name="title" value="Fiscal Officer Accounts - Default (No Column Options set)"/>
              <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
              <property name="propertyName" value="fiscalOfficer.accounts"/>
              <property name="layoutManager.renderSequenceField" value="false"/>
              <property name="items">
                <list>
                  <bean parent="DataField" p:propertyName="number"/>
                  <bean parent="DataField" p:propertyName="name"/>
                  <bean parent="DataField" p:propertyName="foId"/>
                  <bean parent="DataField" p:propertyName="subsidizedPercent"/>
                  <bean parent="DataField" p:propertyName="createDate"/>
                 </list>
              </property>
             <!-- TODO: appears to interfere with rich table resizing after window resize
             <property name="layoutManager.richTable.componentOptions">
               <map>
                 <entry key="aoColumns">
                   <value>
                     [
                      {'bSortable':true, 'sSortDataType':'numeric'},
                      {'bVisible':false},
                      {'bSortable':false},
                     {'bSortable':true, 'sSortDataType':'numeric'},
                     {'bSortable':false}]
                   </value>
                 </entry>
               </map>
             </property>
                 -->
           </bean>

           <bean parent="CollectionGroupSectionTableLayout" p:layoutManager.numberOfColumns="5">
              <property name="title" value="Fiscal Officer Accounts - using hiddenColumns and sortableColumns properties on rich table"/>
              <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
              <property name="propertyName" value="fiscalOfficer.accounts"/>
              <property name="layoutManager.renderSequenceField" value="false"/>
              <property name="items">
                <list>
                  <bean parent="DataField" p:propertyName="number"/>
                  <bean parent="DataField" p:propertyName="name"/>
                  <bean parent="DataField" p:propertyName="foId"/>
                  <bean parent="DataField" p:propertyName="subsidizedPercent"/>
                  <bean parent="DataField" p:propertyName="createDate"/>
                 </list>
              </property>
             <property name="layoutManager.richTable.hiddenColumns">
               <set>
                 <value>name</value>
               </set>
             </property>
              <property name="layoutManager.richTable.sortableColumns">
               <set>
                 <value>number</value>
                 <value>createDate</value>
               </set>
             </property>
           </bean>
           <bean parent="CollectionGroupSectionTableLayout" p:layoutManager.numberOfColumns="5">
              <property name="title" value="Fiscal Officer Accounts - using hiddenColumns and sortableColumns properties on layout manager"/>
              <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
              <property name="propertyName" value="fiscalOfficer.accounts"/>
              <property name="layoutManager.renderSequenceField" value="false"/>
              <property name="items">
                <list>
                  <bean parent="DataField" p:propertyName="number"/>
                  <bean parent="DataField" p:propertyName="name"/>
                  <bean parent="DataField" p:propertyName="foId"/>
                  <bean parent="DataField" p:propertyName="subsidizedPercent"/>
                  <bean parent="DataField" p:propertyName="createDate"/>
                 </list>
              </property>
             <property name="layoutManager.hiddenColumns">
               <set>
                 <value>name</value>
                 <value>foId</value>
               </set>
             </property>
              <property name="layoutManager.sortableColumns">
               <set>
                 <value>number</value>
                 <value>createDate</value>
               </set>
             </property>
           </bean>

         </list>
     </property>
  </bean>

</beans>