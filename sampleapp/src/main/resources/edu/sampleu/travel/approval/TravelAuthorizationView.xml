  <bean id="TravelAuthorization-TravelerDetail-OtherTravelers" parent="Uif-Disclosure-GridSubSection" p:headerText="Other Travelers"
        p:layoutManager.numberOfColumns="4">
    <property name="items">
      <list>
        <bean parent="Uif-InputField" p:propertyName="travelDocumentIdentifier" p:readOnly="true"
              p:defaultValue="@{#sequence('TRVL_ID_SEQ')}"/>
        <bean parent="Uif-InputField" p:propertyName="tripTypeCode"/>
        <bean parent="Uif-VerticalFieldGroup" p:label="Trip Dates">
          <property name="items">
            <list>
              <bean parent="Uif-InputField-LabelTop" p:propertyName="tripBegin" p:constraintText="mm/dd/yyyy"/>
              <bean parent="Uif-InputField-LabelTop" p:propertyName="tripEnd" p:constraintText="mm/dd/yyyy"/>
            </list>
          </property>
        </bean>
        <bean parent="Uif-InputField" p:propertyName="tripDescription"/>
        <bean parent="Uif-InputField" p:propertyName="primaryDestinationName"/>
        <bean parent="Uif-InputField" p:propertyName="primaryDestinationCountryState"/>
        <bean parent="Uif-InputField" p:propertyName="primaryDestinationCounty"/>
      </list>
    </property>
  </bean>

  <bean id="TravelAuthorization-TripDetail" parent="Uif-Disclosure-GridSection" p:headerText="Trip Detail"
        p:layoutManager.numberOfColumns="4">
    <property name="items">
      <list>
        <bean parent="Uif-InputField" p:propertyName="travelDocumentIdentifier" p:readOnly="true"
              p:defaultValue="@{#sequence('TRVL_ID_SEQ')}"/>
        <bean parent="Uif-InputField" p:propertyName="tripTypeCode"/>
        <bean parent="Uif-VerticalFieldGroup" p:label="Trip Dates">
          <property name="items">
            <list>
              <bean parent="Uif-InputField-LabelTop" p:propertyName="tripBegin" p:constraintText="mm/dd/yyyy"/>
              <bean parent="Uif-InputField-LabelTop" p:propertyName="tripEnd" p:constraintText="mm/dd/yyyy"/>
            </list>
