   <bean id="VendorDetail-LookupView" parent="LookupView">
      <property name="title" value="Vendor Lookup" />
      <property name="dataObjectClassName" value="edu.sampleu.financial.bo.VendorDetail" />
      <property name="criteriaFields">
         <list>
            <bean parent="LookupCriteriaInputField" p:propertyName="vendorName" />
            <bean parent="LookupCriteriaInputField" p:propertyName="vendorHeader.vendorTaxNumber" />
            <bean parent="LookupCriteriaInputField" p:propertyName="vendorNumber" />
            <bean parent="LookupCriteriaInputField" p:propertyName="activeIndicator" />
            <bean parent="LookupCriteriaInputField" p:propertyName="vendorHeader.vendorTypeCode" />
         </list>
      </property>
      <property name="resultFields">
         <list>
            <bean parent="InputField" p:propertyName="vendorName" />
            <bean parent="InputField" p:propertyName="vendorNumber" />
            <bean parent="InputField" p:propertyName="vendorDunsNumber" />
            <bean parent="InputField" p:propertyName="vendorPaymentTermsCode" />
            <bean parent="InputField" p:propertyName="vendorShippingPaymentTermsCode" />
            <bean parent="InputField" p:propertyName="vendorMinimumOrderAmount" />
            <bean parent="InputField" p:propertyName="activeIndicator" />
         </list>
      </property>
   </bean>

</beans>