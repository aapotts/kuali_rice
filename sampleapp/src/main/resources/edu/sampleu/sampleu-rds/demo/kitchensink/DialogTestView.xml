<spring:beans xmlns="http://www.kuali.org/schema" xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.kuali.org/schema http://www.kuali.org/krad/schema.xsd">
  <formView formClass="edu.sampleu.demo.kitchensink.UifDialogTestForm" headertext="Dialog Test View" id="DialogTestView"
            parent="Uif-FormView">
    <items>
      <pageGroup id="DialogView-Page1" parent="UifCompViewPageWithFooter">
        <items>
          <group parent="DialogTestView-SampleDialogs"/>
          <group parent="DialogTestView-MainGroup"/>
          <imageField id="myImage" parent="ImageDialog"/>
        </items>
        <footer>
          <group id="DialogTestView-FormFooter" parent="Uif-FooterBase">
            <items>
              <action actionLabel="Tell Me A Story" id="myPrimaryButton" methodToCall="save"
                      parent="Uif-PrimaryActionButton" performClientSideValidation="true"/>
              <action actionLabel="Close" id="mySecondaryButton" methodToCall="closeMe"
                      parent="Uif-SecondaryActionButton"/>
              <action actionLabel="Cancel" methodToCall="cancel" parent="Uif-ActionLink"/>
            </items>
          </group>
        </footer>
      </pageGroup>
      <pageGroup id="DialogView-Page2" parent="UifCompViewPageWithFooter">
        <items>
          <group id="endPage" parent="DialogTestView-EndGroup"/>
        </items>
        <footer>
          <group id="DialogTestView-Page2Footer" parent="Uif-FooterBase">
            <items>
              <action actionLabel="Go Back" id="page2PrimaryButton" methodToCall="goBack"
                      parent="Uif-PrimaryActionButton" performClientSideValidation="true"/>
              <action actionLabel="Cancel" methodToCall="cancel" parent="Uif-ActionLink"/>
            </items>
          </group>
        </footer>
      </pageGroup>
    </items>
    <dialogs>
      <dialogGroup id="chooseAuthorDialog" parent="ChooseAuthor-DialogGroup"/>
      <dialogGroup id="chooseEastmanBookDialog" parent="EastmanBooks-DialogGroup"/>
      <dialogGroup id="chooseSeussBookDialog" parent="SeussBooks-DialogGroup"/>
      <dialogGroup id="myRestart" parent="RestartYesNo"/>
      <dialogGroup id="mySensitiveDialog" parent="Uif-SensitiveData-DialogGroup"/>
      <dialogGroup id="preDefinedDialogOkCancel" parent="Uif-OK-Cancel-DialogGroup"
                   promptText="Would you like to continue?"/>
      <dialogGroup id="preDefinedDialogTrueFalse" parent="DTV-preDefinedDialogTrueFalse"/>
      <dialogGroup id="sampleRadioButtonDialog" parent="Uif-RadioButton-DialogGroup" promptText="Select"/>
      <group id="myProgressiveDialog" parent="Progressive-DialogGroup"/>
      <group id="myRegularGroup" parent="DTV-SampleGroup"/>
      <dialogGroup id="extendedDialogGroup" parent="DTV-ExtendedDialog"/>
      <group id="myHiddenGroupDialog" parent="myHiddenGroup"/>
    </dialogs>
    <theme>
      <viewTheme parent="Uif-KradTheme"/>
    </theme>
  </formView>
  <formView id="DialogTestView_KNS" parent="DialogTestView">
    <theme>
      <viewTheme parent="Uif-ClassicKnsTheme"/>
    </theme>
  </formView>
  <group id="DialogTestView-SampleDialogs" parent="Uif-Disclosure-HorizontalBoxSection" title="Sample Dialogs">
    <items>
      <inputField defaultValue="false" instructionalText="show/hide dialog content" label="See dialog"
                  onChangeScript="jQuery('#chooseAuthorDialog').toggle();" parent="Uif-InputField"
                  propertyName="bField1">
        <control>
          <checkboxControl parent="Uif-CheckboxControl"/>
        </control>
      </inputField>
      <action actionLabel="Lightbox from hidden group" actionScript="showLightboxComponent('chooseAuthorDialog');"
              parent="Uif-PrimaryActionButton"/>
      <action actionLabel="Lightbox from hidden group with overrides"
              actionScript="showLightboxComponent('chooseAuthorDialog', {openEffect : 'elastic', helpers:{overlay:{css:{cursor:'pointer', 'background-color':'green'}}}, closeEffect : 'elastic'});"
              parent="Uif-PrimaryActionButton"/>
      <action actionLabel="Lightbox from HTML"
              actionScript="showLightboxContent('Hello, I am a lightbox with &lt;b&gt;HTML&lt;/b&gt; content.');"
              parent="Uif-PrimaryActionButton"/>
      <action actionLabel="Predefined OK/Cancel" focusOnIdAfterSubmit="FIRST" jumpToIdAfterSubmit="TOP"
              methodToCall="doOkCancelExample" parent="Uif-PrimaryActionButton" performClientSideValidation="true"/>
      <action actionLabel="Radio Buttons" focusOnIdAfterSubmit="FIRST" jumpToIdAfterSubmit="TOP"
              methodToCall="doRadioDialogExample" parent="Uif-PrimaryActionButton" performClientSideValidation="true"/>
      <action actionLabel="Lightbox from hidden group with progressive rendering"
              actionScript="showLightboxComponent('myProgressiveDialog');" parent="Uif-PrimaryActionButton"/>
      <action actionLabel="Lightbox from hidden image" actionScript="showLightboxComponent('myImage');"
              parent="Uif-PrimaryActionButton"/>
      <action actionLabel="Lightbox from URL" actionScript="showLightboxUrl('http://kuali.org');"
              parent="Uif-PrimaryActionButton"/>
      <action actionLabel="Client Ajax Dialog" actionScript="showLightboxComponent('preDefinedDialogTrueFalse');"
              parent="Uif-PrimaryActionButton"/>
      <action actionLabel="Regular Group" focusOnIdAfterSubmit="FIRST" jumpToIdAfterSubmit="TOP"
              methodToCall="doRegularGroupAsDialog" parent="Uif-PrimaryActionButton"
              performClientSideValidation="true"/>
      <action actionLabel="Extended Dialog" focusOnIdAfterSubmit="FIRST" jumpToIdAfterSubmit="TOP"
              methodToCall="doExtendedDialog" parent="Uif-PrimaryActionButton" performClientSideValidation="true"/>
      <action actionLabel="Displays Response in LightBox" displayResponseInLightBox="true" focusOnIdAfterSubmit="FIRST"
              jumpToIdAfterSubmit="TOP" methodToCall="doResponseInLightBox" parent="Uif-PrimaryActionButton"
              performClientSideValidation="true"/>
    </items>
  </group>
  <group headertext="Storybook Corner" id="DialogTestView-MainGroup" parent="Uif-VerticalBoxSection">
    <items>
      <message messageText="This is a storytelling section. Pick you story as you go!" parent="Uif-Message"/>
      <inputField defaultValue="This is a test" id="statusMsg" parent="Uif-InputField" propertyName="field1"
                  style="border:1px; font-size:2em">
        <control>
          <textAreaControl parent="Uif-TextAreaControl" readOnly="true"/>
        </control>
      </inputField>
    </items>
  </group>
  <group headertext="The end." id="DialogTestView-EndGroup" parent="Uif-VerticalBoxSection">
    <items>
      <inputField defaultValue="Hope you enjoyed the story." id="endMsg" parent="Uif-InputField" propertyName="field3"
                  style="border:1px; font-size:2em">
        <control>
          <textAreaControl parent="Uif-TextAreaControl" readOnly="true"/>
        </control>
      </inputField>
    </items>
  </group>
  <dialogGroup headertext="Choose an Author" id="ChooseAuthor-DialogGroup" parent="Uif-DialogGroup"
               promptText="Choose an Author">
    <availableResponses>
      <spring:bean parent="Uif-KeyLabelPair">
        <spring:property name="key" value="Y"/>
        <spring:property name="value" value="P. D. Eastman"/>
      </spring:bean>
      <spring:bean parent="Uif-KeyLabelPair">
        <spring:property name="key" value="N"/>
        <spring:property name="value" value="Dr. Seuss"/>
      </spring:bean>
    </availableResponses>
  </dialogGroup>
  <dialogGroup headertext="Which Book You Like To Read?" id="SeussBooks-DialogGroup"
               parent="Uif-RadioButton-DialogGroup" promptText="Which Book You Like To Read?">
    <explanation>
      <inputField parent="Uif-DialogExplanation" render="true">
        <control>
          <radioGroupControl parent="Uif-VerticalRadioControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="Green Eggs and Ham"/>
                <spring:property name="value" value="Green Eggs and Ham"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="Cat in the Hat"/>
                <spring:property name="value" value="Cat in the Hat"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="The Grinch Who Stole Christmas"/>
                <spring:property name="value" value="The Grinch Who Stole Christmas"/>
              </spring:bean>
            </options>
          </radioGroupControl>
        </control>
      </inputField>
    </explanation>
    <availableResponses>
      <spring:bean parent="Uif-KeyLabelPair">
        <spring:property name="key" value="O"/>
        <spring:property name="value" value="OK"/>
      </spring:bean>
    </availableResponses>
  </dialogGroup>
  <dialogGroup headertext="Which Book You Like To Read?" id="EastmanBooks-DialogGroup"
               parent="Uif-RadioButton-DialogGroup">
    <explanation>
      <inputField parent="Uif-DialogExplanation" render="true">
        <control>
          <radioGroupControl parent="Uif-VerticalRadioControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="Are You My Mother?"/>
                <spring:property name="value" value="Are You My Mother?"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="Go, Dog. Go!"/>
                <spring:property name="value" value="Go, Dog. Go!"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="The Alphabet Book"/>
                <spring:property name="value" value="The Alphabet Book"/>
              </spring:bean>
            </options>
          </radioGroupControl>
        </control>
      </inputField>
    </explanation>
    <availableResponses>
      <spring:bean parent="Uif-KeyLabelPair">
        <spring:property name="key" value="O"/>
        <spring:property name="value" value="OK"/>
      </spring:bean>
    </availableResponses>
  </dialogGroup>
  <dialogGroup id="RestartYesNo" parent="Uif-Yes-No-DialogGroup" promptText="Would you like to start over?"/>
  <group header.cssClasses="uif-dialogHeader" headertext="A Custom Hidden Group" hidden="true" id="myHiddenGroup"
         parent="Uif-VerticalBoxSection">
    <header>
      <header parent="Uif-HeaderThree"/>
    </header>
    <items merge="true">
      <messageField messageText="Your Name Here!" parent="Uif-MessageField"/>
      <messageField messageText="Your Name Here!" parent="Uif-MessageField"/>
      <action actionLabel="OK" actionScript="jQuery.fancybox.close();" parent="Uif-PrimaryActionButton"/>
    </items>
    <cssClasses merge="true">
      <value>uif-dialogGroup</value>
    </cssClasses>
  </group>
  <imageField fieldLabel.render="false" hidden="true" id="ImageDialog" parent="Uif-ImageField"
