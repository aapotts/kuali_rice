<spring:beans xmlns="http://www.kuali.org/schema" xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.kuali.org/schema http://www.kuali.org/krad/schema.xsd">
  <formView formClass="edu.sampleu.demo.kitchensink.UifComponentsTestForm"
            headertext="View that can be opened by guests without login." id="UifGuestUserView" parent="Uif-FormView">
    <items>
      <ref bean="UifGuestUserView-Page"/>
    </items>
    <theme>
      <viewTheme parent="Uif-ClassicKnsTheme"/>
    </theme>
  </formView>
  <pageGroup headertext="Guest View" id="UifGuestUserView-Page" parent="Uif-Page">
    <items>
      <ref bean="UifGuestUserView-Section1"/>
    </items>
  </pageGroup>
  <group headertext="Guest user test view input fields" id="UifGuestUserView-Section1"
         layoutManager.orientation="VERTICAL" parent="Uif-Disclosure-VerticalBoxSection">
    <items>
      <inputField instructionalText="Field1" label="Field1" parent="GenericTextField" propertyName="field1"/>
      <inputField instructionalText="Field2" label="Field2" parent="GenericTextField" propertyName="field2"/>
      <inputField instructionalText="Field3" label="Field3" parent="GenericTextField" propertyName="field3"/>
    </items>
  </group>
</spring:beans>
