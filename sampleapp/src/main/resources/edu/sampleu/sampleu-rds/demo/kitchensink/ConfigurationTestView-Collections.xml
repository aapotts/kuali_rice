<spring:beans xmlns="http://www.kuali.org/schema" xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.kuali.org/schema http://www.kuali.org/krad/schema.xsd">
  <formView entryPageId="Collections-DefaultTests" formClass="edu.sampleu.demo.kitchensink.UifComponentsTestForm"
            growlMessagingEnabled="true" headertext="Collection Test View" id="ConfigurationTestView-Collections"
            parent="Uif-FormView">
    <navigation>
      <ref bean="ConfigurationTestView-Collections-Menu"/>
    </navigation>
    <items>
      <ref bean="Collections-DefaultTests"/>
      <ref bean="Collections-AddBlankLine"/>
      <ref bean="Collections-AddViaLightbox"/>
      <ref bean="Collections-ColumnSequence"/>
      <ref bean="Collections-SaveRow"/>
    </items>
    <theme>
      <viewTheme parent="Uif-KradTheme"/>
    </theme>
  </formView>
  <navigationGroup id="ConfigurationTestView-Collections-Menu" parent="Uif-TabNavigationGroup">
    <items>
      <action actionLabel="Default" navigateToPageId="Collections-DefaultTests" parent="Uif-NavigationActionLink"/>
      <action actionLabel="Add Blank Line" navigateToPageId="Collections-AddBlankLine"
              parent="Uif-NavigationActionLink"/>
      <action actionLabel="Add Via Lightbox" navigateToPageId="Collections-AddViaLightbox"
              parent="Uif-NavigationActionLink"/>
      <action actionLabel="Column Sequence" navigateToPageId="Collections-ColumnSequence"
              parent="Uif-NavigationActionLink"/>
      <action actionLabel="Save Row" navigateToPageId="Collections-SaveRow" parent="Uif-NavigationActionLink"/>
    </items>
  </navigationGroup>
  <formView id="ConfigurationTestView-Collections_KNS" parent="ConfigurationTestView-Collections">
    <theme>
      <viewTheme parent="Uif-ClassicKnsTheme"/>
    </theme>
  </formView>
  <pageGroup headertext="Default Tests" id="Collections-DefaultTests" parent="Uif-Page">
    <items>
      <ref bean="Collections-Base-TableLayout"/>
      <ref bean="Collections-Base-StackLayout"/>
    </items>
  </pageGroup>
  <pageGroup headertext="Add Blank Line" id="Collections-AddBlankLine" parent="Uif-Page">
    <items>
      <ref bean="Collections-AddBlankLine-TableTop"/>
      <ref bean="Collections-AddBlankLine-TableBottom"/>
      <ref bean="Collections-AddBlankLine-StackTop"/>
      <ref bean="Collections-AddBlankLine-StackBottom"/>
    </items>
  </pageGroup>
  <pageGroup headertext="Add Via Lightbox" id="Collections-AddViaLightbox" parent="Uif-Page">
    <items>
      <ref bean="Collections-AddViaLightbox-TableTop"/>
      <ref bean="Collections-AddViaLightbox-TableBottom"/>
      <ref bean="Collections-AddViaLightbox-StackTop"/>
      <ref bean="Collections-AddViaLightbox-StackBottom"/>
    </items>
  </pageGroup>
  <pageGroup headertext="Column Sequence" id="Collections-ColumnSequence" parent="Uif-Page">
    <items>
      <ref bean="Collections-ColumnSequence-TableDefault"/>
      <ref bean="Collections-ColumnSequence-TableLeft"/>
      <ref bean="Collections-ColumnSequence-TableThird"/>
    </items>
  </pageGroup>
  <pageGroup headertext="Save Row" id="Collections-SaveRow" parent="Uif-Page">
    <items>
      <ref bean="Collections-SaveRow-Table"/>
      <ref bean="Collections-SaveRow-Stack"/>
    </items>
  </pageGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject" headertext="Table Layout"
                   id="Collections-Base-TableLayout" layoutManager.generateAutoSequence="true"
                   layoutManager.numberOfColumns="4" layoutManager.richTable.render="true"
                   parent="Uif-Disclosure-TableCollectionSection" propertyName="list1">
    <layoutManager.columnCalculations>
      <columnCalculationInfo calculationOnKeyUp="true" parent="Uif-ColumnCalculationInfo-Sum" propertyName="field1"/>
      <columnCalculationInfo calculationFunctionExtraData="3" parent="Uif-ColumnCalculationInfo-Average"
                             propertyName="field2"/>
      <columnCalculationInfo parent="Uif-ColumnCalculationInfo-Min" propertyName="field3"/>
      <columnCalculationInfo parent="Uif-ColumnCalculationInfo-Max" propertyName="field4"/>
    </layoutManager.columnCalculations>
    <items>
      <inputField label="Field 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2" required="true"/>
      <inputField label="Field 3" parent="Uif-InputField" propertyName="field3" required="true"/>
      <inputField label="Field 4" parent="Uif-InputField" propertyName="field4" required="true"/>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject" headertext="Stack Layout"
                   id="Collections-Base-StackLayout" layoutManager.summaryFields="field1"
                   layoutManager.summaryTitle="Line Summary" parent="Uif-Disclosure-StackedCollectionSection"
                   propertyName="list3">
    <items>
      <inputField label="Field 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2" required="true"/>
      <inputField label="Field 3" parent="Uif-InputField" propertyName="field3"/>
      <inputField label="Field 4" parent="Uif-InputField" propertyName="field4"/>
    </items>
  </collectionGroup>
  <collectionGroup headertext="Table Layout With Add Blank line TOP (default)" id="Collections-AddBlankLine-TableTop"
                   parent="Collections-Base-TableLayout" renderAddBlankLineButton="true"/>
  <collectionGroup addLinePlacement="BOTTOM" headertext="Table Layout With Add Blank line BOTTOM"
                   id="Collections-AddBlankLine-TableBottom" parent="Collections-AddBlankLine-TableTop"
                   propertyName="list2"/>
  <collectionGroup headertext="Stack Layout With Add Blank line TOP (default)" id="Collections-AddBlankLine-StackTop"
                   parent="Collections-Base-StackLayout" renderAddBlankLineButton="true"/>
  <collectionGroup addLinePlacement="BOTTOM" headertext="Stack Layout With Add Blank line BOTTOM"
                   id="Collections-AddBlankLine-StackBottom" parent="Collections-AddBlankLine-StackTop"
                   propertyName="list4"/>
  <collectionGroup addViaLightBox="true" headertext="Table Layout Add Via Lightbox TOP"
                   id="Collections-AddViaLightbox-TableTop" layoutManager.separateAddLine="true"
                   parent="Collections-Base-TableLayout"/>
  <collectionGroup addLinePlacement="BOTTOM" headertext="Table Layout With Add Via Lightbox BOTTOM"
                   id="Collections-AddViaLightbox-TableBottom" parent="Collections-AddViaLightbox-TableTop"
                   propertyName="list2"/>
  <collectionGroup addViaLightBox="true" headertext="Stack Layout With Add Via Lightbox TOP"
                   id="Collections-AddViaLightbox-StackTop" parent="Collections-Base-StackLayout"/>
  <collectionGroup addLinePlacement="BOTTOM" headertext="Stack Layout With Add Via Lightbox BOTTOM"
                   id="Collections-AddViaLightbox-StackBottom" parent="Collections-AddViaLightbox-StackTop"
                   propertyName="list4"/>
  <collectionGroup headertext="Table Layout Action Column Default" id="Collections-ColumnSequence-TableDefault"
                   parent="Collections-Base-TableLayout"/>
  <collectionGroup headertext="Table Layout Action Column Left" id="Collections-ColumnSequence-TableLeft"
                   layoutManager.actionColumnPlacement="LEFT" parent="Collections-Base-TableLayout"
                   propertyName="list2"/>
  <collectionGroup headertext="Table Layout Action Column 3" id="Collections-ColumnSequence-TableThird"
                   layoutManager.actionColumnPlacement="3" parent="Collections-Base-TableLayout" propertyName="list3"/>
  <collectionGroup headertext="Table Layout With Save Row" id="Collections-SaveRow-Table"
                   parent="Collections-Base-TableLayout" renderSaveLineActions="true"/>
  <collectionGroup headertext="Stack Layout With Save Row" id="Collections-SaveRow-Stack"
                   parent="Collections-Base-StackLayout" propertyName="list2" renderSaveLineActions="true"/>
</spring:beans>
