<spring:beans xmlns="http://www.kuali.org/schema" xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.kuali.org/schema http://www.kuali.org/krad/schema.xsd">
  <formView formClass="edu.sampleu.demo.kitchensink.TrainingApplicationForm"
            headertext="Kuali University Student Application Form" id="Training-CollegeApplicationView"
            parent="Uif-FormView">
    <items>
      <ref bean="Training-CollegeApplicationPage"/>
    </items>
    <theme>
      <viewTheme parent="Uif-KradTheme"/>
    </theme>
  </formView>
  <formView id="Training-CollegeApplicationView_KNS" parent="Training-CollegeApplicationView">
    <theme>
      <viewTheme parent="Uif-ClassicKnsTheme"/>
    </theme>
  </formView>
  <pageGroup headertext="Application Info" id="Training-CollegeApplicationPage" parent="Uif-Page">
    <items>
      <group parent="Training-CampusInfo"/>
      <group parent="Training-StudentInfo"/>
      <group parent="Training-StudentAddress"/>
      <collectionGroup parent="Training-StudentReferences"/>
      <collectionGroup parent="Training-PreviousEducation"/>
      <message messageText="Click [0] to get a full list of additional documents required." parent="Uif-Message">
        <inlineComponents>
          <link href="http://www.kuali.org" linkText="here" parent="Uif-Link"/>
        </inlineComponents>
      </message>
    </items>
    <footer>
      <group parent="Uif-FooterBase">
        <items>
          <action actionLabel="Submit" methodToCall="submit" parent="Uif-PrimaryActionButton"
                  performClientSideValidation="true" preSubmitCall="return confirm('Submit?');"
                  render="@{!#view.readOnly}" successCallback="alert('Submit Successful')"/>
          <action actionLabel="Clear all" actionScript="clearAll()" parent="Uif-ActionLink"
                  render="@{!#view.readOnly}"/>
        </items>
      </group>
    </footer>
  </pageGroup>
  <group headertext="Term and College Information" id="Training-CampusInfo" parent="Uif-HorizontalBoxSection">
    <items>
      <inputField label="Term" parent="Uif-InputField-LabelTop" propertyName="term" required="true">
        <control>
          <selectControl parent="Uif-DropdownControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value=""/>
                <spring:property name="value" value=""/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="fall"/>
                <spring:property name="value" value="Fall"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="spring"/>
                <spring:property name="value" value="Spring"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="summer"/>
                <spring:property name="value" value="Summer"/>
              </spring:bean>
            </options>
          </selectControl>
        </control>
      </inputField>
      <inputField label="College" parent="Uif-InputField-LabelTop" propertyName="college" required="true">
        <control>
          <selectControl parent="Uif-DropdownControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value=""/>
                <spring:property name="value" value=""/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="art"/>
                <spring:property name="value" value="Art"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="bus"/>
                <spring:property name="value" value="Business"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="csc"/>
                <spring:property name="value" value="Computer Science"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="hist"/>
                <spring:property name="value" value="History"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="math"/>
                <spring:property name="value" value="Math"/>
              </spring:bean>
            </options>
          </selectControl>
        </control>
      </inputField>
      <inputField label="Campus" parent="Uif-InputField-LabelTop"
                  progressiveRender="@{#dp.college eq 'art' or #dp.college eq 'csc'}" propertyName="campus">
        <control>
          <selectControl parent="Uif-DropdownControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value=""/>
                <spring:property name="value" value=""/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="east"/>
                <spring:property name="value" value="East Campus"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="west"/>
                <spring:property name="value" value="West Campus"/>
              </spring:bean>
            </options>
          </selectControl>
        </control>
        <caseConstraint>
          <caseConstriant parent="CaseConstraint" propertyName="college">
            <whenConstraint>
              <whenConstraint parent="WhenConstraint">
                <values>
                  <value>art</value>
                  <value>csc</value>
                </values>
                <constraint>
                  <simpleContraint parent="RequiredConstraint"/>
                </constraint>
              </whenConstraint>
            </whenConstraint>
          </caseConstriant>
        </caseConstraint>
      </inputField>
    </items>
  </group>
  <group headertext="About Me" id="Training-StudentInfo" instructionalText="Please fill out this form [b]completely[/b]"
         parent="Uif-HorizontalBoxSection">
    <items>
      <ref bean="Training-StudentInfo-Group1"/>
      <ref bean="Training-StudentInfo-Group2"/>
    </items>
  </group>
  <group id="Training-StudentInfo-Group1" parent="Uif-GridGroup">
    <items>
      <inputField label="First Name" parent="Uif-InputField" propertyName="firstName" required="true">
        <validCharactersConstraint>
          <alphaPatternConstraint parent="AlphaPatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
      <inputField label="Last Name" parent="Uif-InputField" propertyName="lastName" required="true">
        <validCharactersConstraint>
          <alphaPatternConstraint parent="AlphaPatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
      <inputField label="Email Address" parent="Uif-InputField" propertyName="email" required="true">
        <validCharactersConstraint>
          <spring:bean parent="EmailAddressPatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
      <inputField parent="Uif-InputField" propertyName="emailList">
        <control>
          <checkboxControl checkboxLabel="Add me to your mailing list" parent="Uif-CheckboxControl"/>
        </control>
      </inputField>
    </items>
  </group>
  <group id="Training-StudentInfo-Group2" parent="Uif-GridGroup">
    <items>
      <inputField label="Gender" parent="Uif-InputField" propertyName="gender" required="true">
        <control>
          <radioGroupControl parent="Uif-HorizontalRadioControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="male"/>
                <spring:property name="value" value="Male"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="female"/>
                <spring:property name="value" value="Female"/>
              </spring:bean>
            </options>
          </radioGroupControl>
        </control>
      </inputField>
      <inputField label="Date of Birth" parent="Uif-InputField" propertyName="dob" required="true">
        <control>
          <textControl parent="Uif-DateControl"/>
        </control>
        <validCharactersConstraint>
          <dataPatternConstraint parent="BasicDatePatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
      <inputField
              instructionalText="Please select the [link='http://kuali.org']ethnicity/race(s)[/link] you most closely identify yourself as"
              label="Race/Ethnicity" parent="Uif-InputField" propertyName="ethnicity"
              readOnlyDisplayReplacement="@{ethnicity.toString()}" required="true">
        <control>
          <spring:bean parent="Uif-VerticalCheckboxesControl">
            <spring:property name="options">
              <spring:list>
                <spring:bean parent="Uif-KeyLabelPair">
                  <spring:property name="key" value="black"/>
                  <spring:property name="value" value="Black"/>
                </spring:bean>
                <spring:bean parent="Uif-KeyLabelPair">
                  <spring:property name="key" value="amIn"/>
                  <spring:property name="value" value="American Indian / Alaska Native"/>
                </spring:bean>
                <spring:bean parent="Uif-KeyLabelPair">
                  <spring:property name="key" value="asian"/>
                  <spring:property name="value" value="Asian / Pacific Islander"/>
                </spring:bean>
                <spring:bean parent="Uif-KeyLabelPair">
                  <spring:property name="key" value="hispanic"/>
                  <spring:property name="value" value="Hispanic"/>
                </spring:bean>
                <spring:bean parent="Uif-KeyLabelPair">
                  <spring:property name="key" value="white"/>
                  <spring:property name="value" value="Non-hispanic White"/>
                </spring:bean>
                <spring:bean parent="Uif-KeyLabelPair">
                  <spring:property name="key" value="other"/>
                  <spring:property name="value" value="Other. Specify: [id=Training-OtherEthnicity]"/>
                </spring:bean>
              </spring:list>
            </spring:property>
          </spring:bean>
        </control>
      </inputField>
    </items>
  </group>
  <inputField id="Training-OtherEthnicity" parent="Uif-InputField" propertyName="otherEthnicity"/>
  <group headertext="Address" id="Training-StudentAddress" parent="Uif-GridSection">
    <items>
      <inputField label="Address 1" parent="Uif-InputField" propertyName="address1" required="true">
        <validCharactersConstraint>
          <alphaNumericPatternConstraint parent="AlphaNumericWithBasicPunc"/>
        </validCharactersConstraint>
      </inputField>
      <inputField label="Address 2" parent="Uif-InputField" propertyName="address2">
        <validCharactersConstraint>
          <alphaNumericPatternConstraint parent="AlphaNumericWithBasicPunc"/>
        </validCharactersConstraint>
        <dependencyConstraint>
          <prerequisiteConstraint parent="PrerequisiteConstraint" propertyName="address1"/>
        </dependencyConstraint>
      </inputField>
      <inputField label="City" parent="Uif-InputField" propertyName="city" required="true">
        <validCharactersConstraint>
          <alphaPatternConstraint parent="AlphaPatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
      <inputField label="State" maxLength="2" minLength="2" parent="Uif-InputField" propertyName="state"
                  required="true">
        <validCharactersConstraint>
          <alphaPatternConstraint parent="AlphaPatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
      <inputField constraintText="Only [color=red]digits[/color] allowed." label="Zip" maxLength="10" minLength="5"
                  parent="Uif-InputField" propertyName="zip" required="true">
        <validCharactersConstraint>
          <spring:bean parent="ZipcodePatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
    </items>
  </group>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.TrainingApplicationReference"
                   headertext="References" id="Training-StudentReferences"
                   instructionalText="Please list any references we can contact"
                   layoutManager.addLineGroup.layoutManager.numberOfColumns="8"
                   layoutManager.generateAutoSequence="true" layoutManager.separateAddLine="true"
                   parent="Uif-TableCollectionSection" propertyName="references">
    <items>
      <inputField label="Name" parent="Uif-InputField" propertyName="name" required="true"/>
      <inputField label="Phone" parent="Uif-InputField" propertyName="phone" required="true">
        <control>
          <textControl parent="Uif-TextControl" watermarkText="###-###-####"/>
        </control>
        <validCharactersConstraint>
          <spring:bean parent="PhoneNumberPatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
      <inputField label="Address" parent="Uif-InputField" propertyName="address">
        <control>
          <textAreaControl parent="Uif-TextAreaControl"/>
        </control>
      </inputField>
      <inputField label="Relationship" parent="Uif-InputField" propertyName="relationship" required="true">
        <control>
          <selectControl parent="Uif-DropdownControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="friend"/>
                <spring:property name="value" value="Friend"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="co-worker"/>
                <spring:property name="value" value="Co-Worker"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="teacher"/>
                <spring:property name="value" value="Teacher"/>
              </spring:bean>
            </options>
          </selectControl>
        </control>
      </inputField>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.TrainingApplicationPreviousEducation"
                   headertext="Previous Education" id="Training-PreviousEducation"
                   layoutManager.summaryFields="course,university" layoutManager.summaryTitle="Course"
                   parent="Uif-Disclosure-StackedCollectionSection" propertyName="previousEducation">
    <items>
      <inputField label="University" parent="Uif-InputField" propertyName="university" required="true"/>
      <inputField label="College" parent="Uif-InputField" propertyName="college" required="true"/>
      <inputField label="Course" parent="Uif-InputField" propertyName="course" required="true"/>
      <inputField label="Completion Date" parent="Uif-InputField" propertyName="completionDate">
        <control>
          <textControl parent="Uif-DateControl"/>
        </control>
        <validCharactersConstraint>
          <dataPatternConstraint parent="BasicDatePatternConstraint"/>
        </validCharactersConstraint>
      </inputField>
    </items>
  </collectionGroup>
</spring:beans>
