<spring:beans xmlns="http://www.kuali.org/schema" xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.kuali.org/schema http://www.kuali.org/krad/schema.xsd">
  <pageGroup headertext="Quickfinders" id="ConfigurationTestView-Quickfinder-Page" parent="Uif-Page">
    <items>
      <ref bean="ConfigurationTestView-Quickfinder-Section1"/>
      <ref bean="ConfigurationTestView-Suggest"/>
    </items>
  </pageGroup>
  <group headertext="Quickfinders" id="ConfigurationTestView-Quickfinder-Section1"
         instructionalText="Quickfinders on same view with different lookup configurations"
         layoutManager.orientation="VERTICAL" parent="Uif-Disclosure-VerticalBoxSection">
    <items>
      <inputField instructionalText="TravelAccounts lookup (account number should be read only)" label="Lookup"
                  parent="GenericTextField" propertyName="field60"
                  quickfinder.dataObjectClassName="edu.sampleu.travel.bo.TravelAccount"
                  quickfinder.readOnlySearchFields="number">
        <quickfinder.fieldConversions>
          <entry key="number" value="field60"/>
        </quickfinder.fieldConversions>
      </inputField>
      <inputField instructionalText="TravelAccounts lookup (account number should NOT be read only)" label="Lookup"
                  parent="GenericTextField" propertyName="field90"
                  quickfinder.dataObjectClassName="edu.sampleu.travel.bo.TravelAccount">
        <quickfinder.fieldConversions>
          <entry key="number" value="field90"/>
        </quickfinder.fieldConversions>
      </inputField>
    </items>
  </group>
  <group headertext="Suggest Widgets" id="ConfigurationTestView-Suggest"
         instructionalText="Various configurations for the suggest widget" parent="Uif-Disclosure-VerticalBoxSection">
    <items>
      <inputField instructionalText="auto-query configuration, type a1 or a2 for suggestions" label="Suggest"
                  parent="Uif-InputField" propertyName="field61">
        <suggest>
          <suggest parent="Uif-Suggest" render="true" sourcePropertyName="number"
                   suggestQuery.dataObjectClassName="edu.sampleu.travel.bo.TravelAccount"/>
        </suggest>
      </inputField>
      <inputField instructionalText="view helper method configuration, type a1 or a2 for suggestions" label="Suggest 2"
                  parent="Uif-InputField" propertyName="field62">
        <suggest>
          <suggest parent="Uif-Suggest" render="true" sourcePropertyName="number">
            <suggestQuery>
              <attributeQuery parent="Uif-AttributeQueryConfig" queryMethodToCall="retrieveTravelAccounts"/>
            </suggestQuery>
          </suggest>
        </suggest>
      </inputField>
      <fieldGroup group.instructionalText="view helper method with additional arguments, subaccount is used in query"
                  label="Suggest 3" parent="Uif-HorizontalFieldGroup">
        <items>
          <inputField instructionalText="type a6-sub" label="Sub-Account" parent="Uif-InputField"
                      propertyName="field63"/>
          <inputField instructionalText="type a for suggestions" label="Account" parent="Uif-InputField"
                      propertyName="field64">
            <suggest>
              <suggest parent="Uif-Suggest" render="true" sourcePropertyName="number">
                <suggestQuery>
                  <attributeQuery parent="Uif-AttributeQueryConfig" queryMethodArgumentFieldList="field63"
                                  queryMethodToCall="retrieveTravelAccountsBySubAcct"/>
                </suggestQuery>
                <templateOptions merge="true">
                  <entry key="minLength" value="1"/>
                </templateOptions>
              </suggest>
            </suggest>
          </inputField>
        </items>
      </fieldGroup>
      <inputField instructionalText="static method and query result suggestions option, type a or c for suggestions"
                  label="Suggest 4" parent="Uif-InputField" propertyName="field65">
        <suggest>
          <suggest parent="Uif-Suggest" render="true" sourceQueryMethodResults="true">
            <suggestQuery>
              <attributeQuery parent="Uif-AttributeQueryConfig"
                              queryMethodInvokerConfig.staticMethod="edu.sampleu.demo.kitchensink.TestSuggestClass.getLanguages"/>
            </suggestQuery>
            <templateOptions merge="true">
              <entry key="minLength" value="0"/>
            </templateOptions>
          </suggest>
        </suggest>
      </inputField>
      <inputField instructionalText="service method and sorting configuration, type sub for suggestions"
                  label="Suggest 5" parent="Uif-InputField" propertyName="field66">
        <suggest>
          <suggest parent="Uif-Suggest" render="true" sourcePropertyName="subAccountName">
            <suggestQuery>
              <attributeQuery parent="Uif-AttributeQueryConfig" queryMethodToCall="retrieveTravelAccounts"
                              sortPropertyNames="subAccountName">
                <queryMethodInvokerConfig.targetObject>
                  <spring:bean class="org.kuali.rice.krad.config.GlobalResourceLoaderServiceFactoryBean">
                    <spring:property name="serviceName" value="testSuggestService"/>
                  </spring:bean>
                </queryMethodInvokerConfig.targetObject>
              </attributeQuery>
            </suggestQuery>
          </suggest>
        </suggest>
      </inputField>
      <inputField instructionalText="local suggest options, press arrow down for all options or type c"
                  label="Suggest 5" parent="Uif-InputField" propertyName="field67">
        <suggest>
          <suggest parent="Uif-Suggest" render="true" retrieveAllSuggestions="true">
            <suggestQuery>
              <attributeQuery parent="Uif-AttributeQueryConfig"
                              queryMethodInvokerConfig.staticMethod="edu.sampleu.demo.kitchensink.TestSuggestClass.getAllLanguages"/>
            </suggestQuery>
            <templateOptions>
              <entry key="minLength" value="0"/>
              <entry key="delay" value="0"/>
            </templateOptions>
          </suggest>
        </suggest>
      </inputField>
      <inputField instructionalText="rich suggest options, press arrow down for all options or type r" label="Suggest 6"
                  parent="Uif-InputField" propertyName="field68">
        <suggest>
          <suggest parent="Uif-Suggest" render="true" retrieveAllSuggestions="true">
            <suggestQuery>
              <attributeQuery parent="Uif-AttributeQueryConfig"
                              queryMethodInvokerConfig.staticMethod="edu.sampleu.demo.kitchensink.TestSuggestClass.getRichOptions"/>
            </suggestQuery>
            <templateOptions>
              <entry key="minLength" value="0"/>
              <entry key="delay" value="0"/>
              <entry key="html" value="true"/>
            </templateOptions>
          </suggest>
        </suggest>
      </inputField>
      <inputField instructionalText="configured suggest options, press arrow down for all options or type c"
                  label="Suggest 7" parent="Uif-InputField" propertyName="field69">
        <suggest>
          <suggest parent="Uif-Suggest" render="true" retrieveAllSuggestions="true">
            <SuggestOptions>
              <value>ActionScript</value>
              <value>AppleScript</value>
              <value>Asp</value>
              <value>BASIC</value>
              <value>C</value>
              <value>C++</value>
              <value>Clojure</value>
              <value>COBOL</value>
              <value>ColdFusion</value>
              <value>Erlang</value>
              <value>Fortran</value>
              <value>Groovy</value>
              <value>Haskell</value>
              <value>Java</value>
              <value>JavaScript</value>
              <value>Lisp</value>
              <value>Perl</value>
              <value>PHP</value>
              <value>Python</value>
              <value>Ruby</value>
              <value>Scala</value>
              <value>Scheme</value>
            </SuggestOptions>
            <templateOptions>
              <entry key="minLength" value="0"/>
              <entry key="delay" value="0"/>
            </templateOptions>
          </suggest>
        </suggest>
      </inputField>
      <inputField additionalHiddenPropertyNames="field71"
                  instructionalText="custom selection (sets hidden, input, and info), press arrow down for all options or type c"
                  label="Suggest 8" parent="Uif-InputField" propertyName="field70"
                  propertyNamesForAdditionalDisplay="field72">
        <suggest>
          <suggest parent="Uif-Suggest" render="true" retrieveAllSuggestions="true">
            <suggestQuery>
              <attributeQuery parent="Uif-AttributeQueryConfig"
                              queryMethodInvokerConfig.staticMethod="edu.sampleu.demo.kitchensink.TestSuggestClass.getComplexOptions"/>
            </suggestQuery>
            <templateOptions>
              <entry key="minLength" value="0"/>
              <entry key="delay" value="0"/>
              <entry key="select">
                <value>
                  function( event, ui ) {
                  jQuery( "input[name='field71']" ).val( ui.item.value );
                  jQuery( "input[name='field70']" ).val( ui.item.label );
                  jQuery( "span[id$='_info_field72']").html( ui.item.description );

                  return false;
                  }
                </value>
              </entry>
            </templateOptions>
          </suggest>
        </suggest>
      </inputField>
    </items>
  </group>
</spring:beans>
