<spring:beans xmlns="http://www.kuali.org/schema" xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.kuali.org/schema http://www.kuali.org/krad/schema.xsd">
  <formView entryPageId="Demo-RowDetails-Page" formClass="edu.sampleu.demo.kitchensink.UifComponentsTestForm"
            headertext="Row Details Demo" id="Demo-RowDetails" parent="Uif-FormView">
    <theme>
      <viewTheme parent="Uif-KradTheme"/>
    </theme>
    <footer>
      <group parent="Uif-FormFooter"/>
    </footer>
    <items>
      <pageGroup id="Demo-RowDetails-Page" parent="Uif-Page">
        <items>
          <ref bean="Demo-RowDetails-Section6"/>
          <ref bean="Demo-RowDetails-Section1"/>
          <ref bean="Demo-RowDetails-Section2"/>
          <ref bean="Demo-RowDetails-Section3"/>
          <ref bean="Demo-RowDetails-Section4"/>
          <ref bean="Demo-RowDetails-Section5"/>
        </items>
      </pageGroup>
    </items>
  </formView>
  <formView id="Demo-RowDetails-KNS" parent="Demo-RowDetails">
    <theme>
      <viewTheme parent="Uif-ClassicKnsTheme"/>
    </theme>
  </formView>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject"
                   headertext="Row Details with image option on, showing two fields in details"
                   id="Demo-RowDetails-Section2"
                   instructionalText="Details group contains Field3 and Field4 of the collection object"
                   layoutManager.ajaxDetailsRetrieval="true" layoutManager.applyDefaultCellWidths="false"
                   layoutManager.renderSequenceField="false" parent="Uif-TableCollectionSection" propertyName="list1"
                   readOnly="true">
    <layoutManager.expandDetailsActionPrototype>
      <spring:bean parent="Uif-ExpandDetailsImageAction"/>
    </layoutManager.expandDetailsActionPrototype>
    <layoutManager.richTable>
      <richTable parent="Uif-PagedRichTable">
        <templateOptions merge="true">
          <entry key="aoColumnDefs" value="[{&quot;sWidth&quot; : &quot;20px&quot;, &quot;aTargets&quot; : [0]}]"/>
        </templateOptions>
      </richTable>
    </layoutManager.richTable>
    <layoutManager.rowDetailsGroup>
      <group parent="Uif-VerticalBoxGroup">
        <items>
          <inputField label="Field 3" parent="Uif-InputField" propertyName="field3" required="true"/>
          <inputField label="Field 4" parent="Uif-InputField" propertyName="field4" required="true"/>
        </items>
      </group>
    </layoutManager.rowDetailsGroup>
    <items>
      <inputField label="Field 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2" required="true"/>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject" headertext="Row Details Default"
                   id="Demo-RowDetails-Section1" instructionalText="Row Details with default settings"
                   layoutManager.renderSequenceField="false" layoutManager.showToggleAllDetails="true"
                   parent="Uif-TableCollectionSection" propertyName="list2" readOnly="false">
    <layoutManager.rowDetailsGroup>
      <group parent="Uif-VerticalBoxGroup">
        <items>
          <inputField label="Field 4" parent="Uif-InputField" propertyName="field4" required="true"/>
        </items>
      </group>
    </layoutManager.rowDetailsGroup>
    <items>
      <inputField label="Field 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2" required="true"/>
      <inputField label="Field 3" parent="Uif-InputField" propertyName="field3" required="true"/>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject"
                   headertext="TableCollection inside the details itself" id="Demo-RowDetails-Section3"
                   instructionalText="Details group contains a collection" layoutManager.applyDefaultCellWidths="false"
                   layoutManager.renderSequenceField="false" parent="Uif-TableCollectionSection" propertyName="list4"
                   readOnly="true">
    <layoutManager.expandDetailsActionPrototype>
      <spring:bean parent="Uif-ExpandDetailsImageAction"/>
    </layoutManager.expandDetailsActionPrototype>
    <layoutManager.richTable>
      <richTable parent="Uif-PagedRichTable">
        <templateOptions merge="true">
          <entry key="aaSorting" value="[[1,'desc']]"/>
          <entry key="aoColumnDefs"
                 value="[{'sWidth' : '20px', 'aTargets' : [0]},{'aTargets':[2], 'bSortable':false}]"/>
        </templateOptions>
      </richTable>
    </layoutManager.richTable>
    <layoutManager.rowDetailsGroup>
      <group parent="Uif-VerticalBoxGroup">
        <items>
          <inputField label="Field 3" parent="Uif-InputField" propertyName="field3" required="true"/>
          <collectionGroup parent="Details-subCollection1" propertyName="subList"/>
        </items>
      </group>
    </layoutManager.rowDetailsGroup>
    <items>
      <inputField label="Field 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2" required="true"/>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject" headertext="SubCollection"
                   id="Details-subCollection1" layoutManager.numberOfColumns="4"
                   layoutManager.sequencePropertyName="field1" parent="Uif-Disclosure-TableSubCollection-WithinSection"
                   readOnly="true">
    <items>
      <inputField label="SubField 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="SubField 2" parent="Uif-InputField" propertyName="field2" required="true"/>
      <inputField label="SubField 3" parent="Uif-InputField" propertyName="field3" required="true"/>
      <inputField label="SubField 4" parent="Uif-InputField" propertyName="field4" required="true"/>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject"
                   headertext="Stacked Collection with its own tables inside details" id="Demo-RowDetails-Section4"
                   instructionalText="Details group contains a collection" layoutManager.applyDefaultCellWidths="false"
                   layoutManager.renderSequenceField="false" parent="Uif-TableCollectionSection" propertyName="list5"
                   readOnly="true">
    <layoutManager.expandDetailsActionPrototype>
      <spring:bean parent="Uif-ExpandDetailsImageAction"/>
    </layoutManager.expandDetailsActionPrototype>
    <layoutManager.richTable>
      <richTable parent="Uif-PagedRichTable">
        <templateOptions merge="true">
          <entry key="aoColumnDefs" value="[{&quot;sWidth&quot; : &quot;20px&quot;, &quot;aTargets&quot; : [0]}]"/>
        </templateOptions>
      </richTable>
    </layoutManager.richTable>
    <layoutManager.rowDetailsGroup>
      <group parent="Uif-VerticalBoxGroup">
        <items>
          <inputField label="Field 3" parent="Uif-InputField" propertyName="field3" required="true"/>
          <collectionGroup parent="Details-subCollection2" propertyName="subList"/>
        </items>
      </group>
    </layoutManager.rowDetailsGroup>
    <items>
      <inputField label="Field 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2" required="true"/>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject" headertext="SubCollection"
                   id="Details-subCollection2" parent="Uif-StackedSubCollection-WithinSection" readOnly="true">
    <items>
      <inputField label="SubField 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="SubField 2" parent="Uif-InputField" propertyName="field2" required="true"/>
    </items>
    <subCollection>
      <collectionGroup disclosure.render="false" layoutManager.richTable.render="false"
                       parent="Demo-StandardLayout-CollectionSection2-SubCollection" propertyName="subList">
        <items>
          <inputField label="Field 1" parent="Uif-InputField-LabelTop" propertyName="field1" required="true"/>
          <inputField label="Field 2" parent="Uif-InputField-LabelTop" propertyName="field2" required="true"/>
          <inputField label="Field 3" parent="Uif-InputField-LabelTop" propertyName="field3" required="true"/>
        </items>
      </collectionGroup>
    </subCollection>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject"
                   headertext="Table with details inside details" id="Demo-RowDetails-Section5"
                   layoutManager.applyDefaultCellWidths="false" layoutManager.renderSequenceField="false"
                   parent="Uif-TableCollectionSection" propertyName="list3" readOnly="true">
    <layoutManager.expandDetailsActionPrototype>
      <spring:bean parent="Uif-ExpandDetailsImageAction"/>
    </layoutManager.expandDetailsActionPrototype>
    <layoutManager.richTable>
      <richTable parent="Uif-PagedRichTable">
        <templateOptions merge="true">
          <entry key="aoColumnDefs" value="[{&quot;sWidth&quot; : &quot;20px&quot;, &quot;aTargets&quot; : [0]}]"/>
        </templateOptions>
      </richTable>
    </layoutManager.richTable>
    <layoutManager.rowDetailsGroup>
      <group parent="Uif-VerticalBoxGroup">
        <items>
          <inputField label="Field 3" parent="Uif-InputField" propertyName="field3" required="true"/>
          <collectionGroup parent="Details-subCollection3" propertyName="subList"/>
        </items>
      </group>
    </layoutManager.rowDetailsGroup>
    <items>
      <inputField label="Field 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2" required="true"/>
      <inputField label="Field 4" parent="Uif-InputField" propertyName="field3" required="true"/>
      <inputField label="Field 4" parent="Uif-InputField" propertyName="field3" required="true"/>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject" headertext="SubCollection"
                   id="Details-subCollection3" layoutManager.renderSequenceField="false"
                   parent="Uif-TableSubCollection-WithinSection" readOnly="true">
    <layoutManager.rowDetailsGroup>
      <group parent="Uif-VerticalBoxGroup">
        <items>
          <inputField label="SubField 3" parent="Uif-InputField" propertyName="field3" required="true"/>
          <inputField label="SubField 3" parent="Uif-InputField" propertyName="field4" required="true"/>
        </items>
      </group>
    </layoutManager.rowDetailsGroup>
    <items>
      <inputField label="SubField 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="SubField 2" parent="Uif-InputField" propertyName="field2" required="true"/>
    </items>
  </collectionGroup>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject" headertext="Row Details Default"
                   id="Demo-RowDetails-Section6" instructionalText="Row Details with default settings"
                   layoutManager.renderSequenceField="false" layoutManager.rowDetailsOpen="true"
                   layoutManager.showToggleAllDetails="true" parent="Uif-TableCollectionSection" propertyName="list1"
                   readOnly="false">
    <layoutManager.rowDetailsGroup>
      <group parent="Uif-VerticalBoxGroup">
        <items>
          <inputField label="Field 4" parent="Uif-InputField" propertyName="field4" required="true"/>
        </items>
      </group>
    </layoutManager.rowDetailsGroup>
    <items>
      <inputField label="Field 1" parent="Uif-InputField" propertyName="field1" required="true"/>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2" required="true"/>
      <inputField label="Field 3" parent="Uif-InputField" propertyName="field3" required="true"/>
    </items>
  </collectionGroup>
</spring:beans>
