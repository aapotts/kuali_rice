<spring:beans xmlns="http://www.kuali.org/schema" xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.kuali.org/schema http://www.kuali.org/krad/schema.xsd">
  <formView formClass="edu.sampleu.demo.kitchensink.UifComponentsTestForm" headertext="Client-side Disable"
            id="ClientDisableView" parent="Uif-FormView">
    <items>
      <pageGroup parent="Uif-Page">
        <items>
          <ref bean="Demo-DisableSection1"/>
          <ref bean="Demo-DisableSection2"/>
          <ref bean="Demo-DisableSection3"/>
          <ref bean="Demo-DisableSection4"/>
        </items>
      </pageGroup>
    </items>
    <theme>
      <viewTheme parent="Uif-KradTheme"/>
    </theme>
  </formView>
  <formView id="RichMessagesView_KNS" parent="ClientDisableView">
    <theme>
      <viewTheme parent="Uif-ClassicKnsTheme"/>
    </theme>
  </formView>
  <group headertext="Basic Functionality" id="Demo-DisableSection1" parent="Uif-HorizontalBoxSection">
    <items>
      <inputField instructionalText="Click option to disable and enable" label="Choose" parent="Uif-InputField"
                  propertyName="field118" width="auto">
        <control>
          <radioGroupControl parent="Uif-VerticalRadioControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="enable"/>
                <spring:property name="value" value="Enable"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="disable"/>
                <spring:property name="value" value="Disable"/>
              </spring:bean>
            </options>
          </radioGroupControl>
        </control>
      </inputField>
      <inputField parent="Uif-InputField" propertyName="field2">
        <control>
          <textControl disabled="@{#form.field118 eq 'disable'}" parent="Uif-TextControl"/>
        </control>
      </inputField>
      <inputField parent="Uif-InputField" propertyName="field3">
        <control>
          <textAreaControl disabled="@{#form.field118 eq 'disable'}" parent="Uif-TextAreaControl"/>
        </control>
      </inputField>
      <inputField label="Field 3" parent="Uif-InputField-LabelTop" propertyName="field3">
        <control>
          <selectControl disabled="@{#form.field118 eq 'disable'}" parent="Uif-DropdownControl"/>
        </control>
        <optionsFinder>
          <spring:bean class="edu.sampleu.travel.document.keyvalue.SimpleTestKeyValues">
            <spring:property name="blankOption" value="true"/>
          </spring:bean>
        </optionsFinder>
      </inputField>
      <inputField label="Field 4" parent="Uif-InputField-LabelTop" propertyName="field114">
        <control>
          <selectControl disabled="@{#form.field118 eq 'disable'}" parent="Uif-MultiSelectControl"/>
        </control>
        <optionsFinder>
          <spring:bean class="edu.sampleu.travel.document.keyvalue.SimpleTestKeyValues">
            <spring:property name="blankOption" value="true"/>
          </spring:bean>
        </optionsFinder>
      </inputField>
      <inputField instructionalText="RadioGroupControl using an optionsFinder" label="Radio 1"
                  parent="Uif-InputField-LabelTop" propertyName="field117" width="auto">
        <control>
          <radioGroupControl disabled="@{#form.field118 eq 'disable'}" parent="Uif-VerticalRadioControl"/>
        </control>
        <optionsFinder>
          <spring:bean class="edu.sampleu.travel.document.keyvalue.SimpleTestKeyValues"/>
        </optionsFinder>
      </inputField>
      <inputField defaultValue="true"
                  instructionalText="Single CheckboxControl with defaultValue=&quot;true&quot; so checkbox is checked by             default"
                  label="Checkbox" parent="Uif-InputField-LabelTop" propertyName="bField1">
        <control>
          <checkboxControl checkboxLabel="Checkbox Label" disabled="@{#form.field118 eq 'disable'}"
                           parent="Uif-CheckboxControl"/>
        </control>
      </inputField>
      <inputField instructionalText="CheckboxGroupControl using an optionsFinder" label="Checkboxes 1"
                  parent="Uif-InputField-LabelTop" propertyName="field115" width="auto">
        <control>
          <spring:bean parent="Uif-VerticalCheckboxesControl">
            <spring:property name="disabled" value="@{#form.field118 eq 'disable'}"/>
          </spring:bean>
        </control>
        <optionsFinder>
          <spring:bean class="edu.sampleu.travel.document.keyvalue.SimpleTestKeyValues"/>
        </optionsFinder>
      </inputField>
      <action actionLabel="Action Button" actionScript="alert('You clicked a button');"
              disabled="@{#form.field118 eq 'disable'}" parent="Uif-PrimaryActionButton"/>
      <action actionLabel="Action Link" actionScript="alert('You clicked a Link');"
              disabled="@{#form.field118 eq 'disable'}" parent="Uif-ActionLink"/>
    </items>
  </group>
  <group headertext="Enable/Disable OnChange" id="Demo-DisableSection2" parent="Uif-VerticalBoxSection">
    <items>
      <fieldGroup label="Enable Button OnChange" parent="Uif-HorizontalFieldGroup">
        <items>
          <inputField parent="Uif-InputField" propertyName="field50">
            <control>
              <textControl parent="Uif-TextControl"/>
            </control>
          </inputField>
          <action actionLabel="Action Button" actionScript="alert('You clicked a button');" disabled="true"
                  enabledWhenChangedPropertyNames="field50" parent="Uif-PrimaryActionButton"/>
        </items>
      </fieldGroup>
      <fieldGroup label="Disable Button OnChange" parent="Uif-HorizontalFieldGroup">
        <items>
          <inputField parent="Uif-InputField" propertyName="field51">
            <control>
              <textControl parent="Uif-TextControl"/>
            </control>
          </inputField>
          <action actionLabel="Action Button" actionScript="alert('You clicked a button');" disabled="false"
                  disabledWhenChangedPropertyNames="field51" parent="Uif-PrimaryActionButton"/>
        </items>
      </fieldGroup>
    </items>
  </group>
  <group headertext="evaluateDisabledOnKeyUp Flag" id="Demo-DisableSection3" parent="Uif-VerticalBoxSection">
    <items>
      <fieldGroup label="Enable Control onKeyUp" parent="Uif-HorizontalFieldGroup">
        <items>
          <inputField parent="Uif-InputField" propertyName="field52">
            <control>
              <textControl parent="Uif-TextControl"/>
            </control>
          </inputField>
          <inputField parent="Uif-InputField" propertyName="field54">
            <control>
              <textControl disabled="true" ensabledConditionControlNames="field52" evaluateDisabledOnKeyUp="true"
                           parent="Uif-TextControl"/>
            </control>
          </inputField>
        </items>
      </fieldGroup>
      <fieldGroup label="Type disable" parent="Uif-HorizontalFieldGroup">
        <items>
          <inputField
                  instructionalText="Type disable to disable                       the first button onKeyUp and the second button onChange - demonstrated for side by side comparison"
                  parent="Uif-InputField" propertyName="field53">
            <control>
              <textControl parent="Uif-TextControl"/>
            </control>
          </inputField>
          <action actionLabel="Action Button (keyUp)" actionScript="alert('You clicked a button');"
                  disabled="@{#form.field53 eq 'disable'}" evaluateDisabledOnKeyUp="true"
                  parent="Uif-PrimaryActionButton"/>
          <action actionLabel="Action Button (change)" actionScript="alert('You clicked a button');"
                  disabled="@{#form.field53 eq 'disable'}" parent="Uif-PrimaryActionButton"/>
        </items>
      </fieldGroup>
    </items>
  </group>
  <collectionGroup collectionObjectClass="edu.sampleu.demo.kitchensink.UITestObject" headertext="In Collections"
                   id="Demo-DisableSection4" layoutManager.numberOfColumns="4"
                   layoutManager.sequencePropertyName="field1" parent="Uif-TableCollectionSection" propertyName="list1">
    <items>
      <inputField label="Disable/Enable" parent="Uif-InputField" propertyName="field1" required="true">
        <control>
          <selectControl parent="Uif-DropdownControl">
            <options>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="enable"/>
                <spring:property name="value" value="Enable"/>
              </spring:bean>
              <spring:bean parent="Uif-KeyLabelPair">
                <spring:property name="key" value="disable"/>
                <spring:property name="value" value="Disable"/>
              </spring:bean>
            </options>
          </selectControl>
        </control>
      </inputField>
      <inputField label="Field 2" parent="Uif-InputField" propertyName="field2">
        <control>
          <textControl disabled="@{#lp.field1 eq 'disable'}" parent="Uif-TextControl"/>
        </control>
      </inputField>
      <inputField constraintText="Disabled when field2 is 10" label="Field 3" parent="Uif-InputField"
                  propertyName="field3">
        <control>
          <textControl disabled="@{#lp.field1 eq 'disable' or #lp.field2 eq '10'}" parent="Uif-TextControl"/>
        </control>
      </inputField>
    </items>
    <addLineActions>
      <action disabled="true" parent="Uif-AddLineAction">
        <enabledWhenChangedPropertyNames>
          <value>#lp.field2</value>
          <value>#lp.field3</value>
        </enabledWhenChangedPropertyNames>
      </action>
    </addLineActions>
  </collectionGroup>
</spring:beans>
