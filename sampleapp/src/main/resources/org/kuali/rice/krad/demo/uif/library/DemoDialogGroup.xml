<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  <!-- DialogGroup demo -->
  <bean id="Demo-DialogGroup-View" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/demo/uif/library/DemoDialogGroup.xml"/>
    <property name="javaFullClassPath" value="org.kuali.rice.krad.uif.container.DialogGroup"/>
    <property name="docBookAnchor" value="d6813e8513"/>
    <property name="exampleSize" value="XLARGE"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-DialogGroup-Example1"/>
        <ref bean="Demo-DialogGroup-Example2"/>
        <ref bean="Demo-DialogGroup-Example3"/>
        <ref bean="Demo-DialogGroup-Example4"/>
      </list>
    </property>
  </bean>
  <bean id="Demo-DialogGroup-Example1" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-DialogGroup-Example1 start-->
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Lightbox from hidden group" p:actionScript="showLightboxComponent('dialogGroupFromHidden');"/>
        <bean id="dialogGroupFromHidden" parent="Uif-DialogGroup">
          <property name="headerText" value="Question"/>
          <property name="promptText" value="Did you mean to open this dialog?"/>
        </bean>
        <!-- ex:Demo-DialogGroup-Example1 end-->
      </list>
    </property>
  </bean>
  <bean id="Demo-DialogGroup-Example2" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-DialogGroup-Example2 start-->
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Lightbox from HTML" p:actionScript="showLightboxContent('Hello, I am a lightbox with &lt;b&gt;HTML&lt;/b&gt; content.');"/>
        <!-- ex:Demo-DialogGroup-Example2 end-->
      </list>
    </property>
  </bean>
  <bean id="Demo-DialogGroup-Example3" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-DialogGroup-Example3 start-->
        <bean parent="Uif-PrimaryActionButton" p:actionScript="showLightboxComponent('dialogGroupWithQuestion');" p:actionLabel="Show Yes/No Dialog"/>
        <bean id="dialogGroupWithQuestion" parent="Uif-DialogGroup">
          <property name="headerText" value="Question About Dialog Boxes"/>
          <property name="promptText" value="Do you like dialog boxes?"/>
        </bean>
        <!-- ex:Demo-DialogGroup-Example3 end-->
      </list>
    </property>
  </bean>
  <bean id="Demo-DialogGroup-Example4" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-DialogGroup-Example4 start-->
        <bean parent="Uif-PrimaryActionButton" p:actionScript="showLightboxComponent('preDefinedDialogOkCancel');" p:actionLabel="Show OK/Cancel Dialog"/>
        <bean id="preDefinedDialogOkCancel" parent="Uif-OK-Cancel-DialogGroup">
          <property name="headerText" value="Confirmation Needed"/>
          <property name="promptText" value="Please confirm that you wish to do something."/>
        </bean>
        <!-- ex:Demo-DialogGroup-Example4 end-->
      </list>
    </property>
  </bean>

</beans>