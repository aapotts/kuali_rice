<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- Header demo -->
  <bean id="Demo-Header-View" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/demo/uif/library/DemoHeader.xml"/>
    <property name="javaFullClassPath" value="org.kuali.rice.krad.uif.element.Header"/>
    <property name="docBookAnchor" value="d6813e7830"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-Header-Example1"/>
        <ref bean="Demo-Header-Example2"/>
      </list>
    </property>
  </bean>

  <!-- Default -->
  <bean id="Demo-Header-Example1"  parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Header-Example1 start-->
        <bean parent="Uif-HeaderBase" p:headerText="Base Header"/>
        <bean parent="Uif-HeaderOne" p:headerText="Header One"/>
        <bean parent="Uif-HeaderTwo" p:headerText="Header Two"/>
        <bean parent="Uif-HeaderThree" p:headerText="Header Three"/>
        <bean parent="Uif-HeaderFour" p:headerText="Header Four"/>
        <bean parent="Uif-HeaderFive" p:headerText="Base Header"/>
        <bean parent="Uif-HeaderSix" p:headerText="Header Six"/>
        <bean parent="Uif-PageHeader" p:headerText="Page Header"/>
        <bean parent="Uif-SectionHeader" p:headerText="Section Header"/>
        <bean parent="Uif-SubSectionHeader" p:headerText="SubSection Header"/>
        <bean parent="Uif-SubCollectionHeader" p:headerText="SubCollection Header"/>
        <bean parent="Uif-EditablePageHeader" p:headerText="EditablePage Header"/>
        <bean parent="Uif-ReadOnlyPageHeader" p:headerText="ReadOnlyPage Header"/>
        <bean parent="Uif-ImageCaptionHeader" p:headerText="ImageCaption Header"/>
        <!-- ex:Demo-Header-Example1 end-->
      </list>
    </property>
  </bean>

  <!-- Header Groups -->
  <bean id="Demo-Header-Example2"  parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Header-Example2 start-->
        <bean parent="Uif-VerticalBoxSection" p:headerText="Header Groups Demo">
          <property name="header.upperGroup">
            <bean parent="Uif-HeaderUpperGroup">
              <property name="items">
                <list>
                  <bean parent="Uif-Message" p:messageText="Upper Group"/>
                </list>
              </property>
            </bean>
          </property>
          <property name="header.rightGroup">
            <bean parent="Uif-HeaderRightGroup">
              <property name="items">
                <list>
                  <bean parent="Uif-Message" p:messageText="Right Group"/>
                </list>
              </property>
            </bean>
          </property>
          <property name="header.lowerGroup">
            <bean parent="Uif-HeaderLowerGroup">
              <property name="items">
                <list>
                  <bean parent="Uif-Message" p:messageText="Lower Group"/>
                </list>
              </property>
            </bean>
          </property>
        </bean>
        <!-- ex:Demo-Header-Example2 end-->
      </list>
    </property>
  </bean>


</beans>