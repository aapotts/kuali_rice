<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Rice KRAD Web</name>
  <parent>
    <groupId>org.kuali.rice</groupId>
    <artifactId>rice-framework</artifactId>
    <version>2.3.0-M2-SNAPSHOT</version>
  </parent>

  <artifactId>rice-krad-web</artifactId>
  <packaging>war</packaging>

  <properties>
    <!-- Directory containing any/all files the minify plugin will be working with -->
    <minify.working.dir>${project.build.directory}/minify</minify.working.dir>

    <!-- Directory fragment where files generated by the minify plugin reside -->
    <minify.fragment>krad/min</minify.fragment>

    <!-- Location under ${minify.working.dir} where minified files get generated -->
    <minify.target.dir>${minify.working.dir}/${minify.fragment}</minify.target.dir>

    <!-- Final location for minified files that get packaged into the WAR -->
    <minify.output.dir>${project.build.directory}/${project.artifactId}-${project.version}/${minify.fragment}</minify.output.dir>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>com.samaxes.maven</groupId>
        <artifactId>maven-minify-plugin</artifactId>
        <executions>
          <execution>
            <id>default-minify</id>
            <phase>process-resources</phase>
            <configuration>
              <charset>${kuali.encoding}</charset>
              <webappSourceDir>${minify.working.dir}</webappSourceDir>
              <cssSourceDir>krad</cssSourceDir>
              <cssTargetDir>${minify.fragment}/css</cssTargetDir>
              <cssFinalFile>krad_${project.version}.css</cssFinalFile>
              <cssSourceFiles>
                <cssSourceFile>css/global/fss-reset-global.css</cssSourceFile>
                <cssSourceFile>css/global/fss-text.css</cssSourceFile>
                <cssSourceFile>plugins/jqueryUI/jquery-ui-1.9.2.css</cssSourceFile>
                <cssSourceFile>plugins/jgrowl/jquery.jgrowl.css</cssSourceFile>
                <cssSourceFile>plugins/rice/datatables/jquery.dataTables.css</cssSourceFile>
                <cssSourceFile>plugins/rice/datatables/TableTools.css</cssSourceFile>
                <cssSourceFile>plugins/fancybox/jquery.fancybox.css</cssSourceFile>
                <cssSourceFile>plugins/rice/textpopout/popoutTextarea.css</cssSourceFile>
                <cssSourceFile>plugins/rice/menu/tabs.css</cssSourceFile>
                <cssSourceFile>plugins/tooltip/jquery.bubblepopup.v2.3.1.css</cssSourceFile>
                <cssSourceFile>plugins/prettify/prettify.css</cssSourceFile>
                <cssSourceFile>css/global/base.css</cssSourceFile>
                <cssSourceFile>css/global/fss-layout.css</cssSourceFile>
              </cssSourceFiles>
              <jsSourceDir>krad</jsSourceDir>
              <jsTargetDir>${minify.fragment}/scripts</jsTargetDir>
              <jsFinalFile>krad_${project.version}.js</jsFinalFile>
              <jsSourceFiles>
                <jsSourceFile>plugins/jquery/jquery-1.8.3.js</jsSourceFile>
                <jsSourceFile>plugins/jqueryUI/jquery-ui-1.9.2.js</jsSourceFile>
                <jsSourceFile>plugins/jqueryUI/jquery.ui.autocomplete.html.js</jsSourceFile>
                <jsSourceFile>plugins/color/jquery.color.js</jsSourceFile>
                <jsSourceFile>plugins/cookie/jquery.cookie.js</jsSourceFile>
                <jsSourceFile>plugins/jgrowl/jquery.jgrowl.js</jsSourceFile>
                <jsSourceFile>plugins/blockUI/jquery.blockUI.js</jsSourceFile>
                <jsSourceFile>plugins/watermark/jquery.watermark.js</jsSourceFile>
                <jsSourceFile>plugins/validate/jquery.validate.js</jsSourceFile>
                <jsSourceFile>plugins/rice/menu/krad.navigationMenu.js</jsSourceFile>
                <jsSourceFile>plugins/rice/textpopout/krad.textareaPopout.js</jsSourceFile>
                <jsSourceFile>plugins/dirtyform/jquery.dirtyform.js</jsSourceFile>
                <jsSourceFile>plugins/scrollto/jquery.scrollTo-1.4.3-min.js</jsSourceFile>
                <jsSourceFile>plugins/rice/menu/krad.tabMenu.js</jsSourceFile>
                <jsSourceFile>plugins/rice/datatables/jquery.dataTables.js</jsSourceFile>
                <jsSourceFile>plugins/rice/datatables/ZeroClipboard.js</jsSourceFile>
                <jsSourceFile>plugins/rice/datatables/TableTools.js</jsSourceFile>
                <jsSourceFile>plugins/rice/datatables/jquery.dataTables.rowGrouping.js</jsSourceFile>
                <jsSourceFile>plugins/jstree/jquery.jstree.js</jsSourceFile>
                <jsSourceFile>plugins/validate/additional_validations.js</jsSourceFile>
                <jsSourceFile>plugins/jqform/jquery.form-3.31.0.js</jsSourceFile>
                <jsSourceFile>plugins/fancybox/jquery.fancybox.pack.js</jsSourceFile>
                <jsSourceFile>plugins/easydrag/jquery.easydrag.js</jsSourceFile>
                <jsSourceFile>plugins/json/jquery.json-2.2.js</jsSourceFile>
                <jsSourceFile>plugins/infusion/infusion-1.4.js</jsSourceFile>
                <jsSourceFile>plugins/infusion/infusion.reorderer.js</jsSourceFile>
                <jsSourceFile>plugins/prettify/prettify.js</jsSourceFile>
                <jsSourceFile>plugins/globalize/globalize.js</jsSourceFile>
                <jsSourceFile>plugins/timer/jquery.timer.js</jsSourceFile>
                <jsSourceFile>plugins/countdown/jquery.countdown.js</jsSourceFile>
                <jsSourceFile>scripts/krad.variables.js</jsSourceFile>
                <jsSourceFile>scripts/krad.message.js</jsSourceFile>
                <jsSourceFile>scripts/krad.widget.js</jsSourceFile>
                <jsSourceFile>scripts/krad.utility.js</jsSourceFile>
                <jsSourceFile>scripts/krad.initialize.js</jsSourceFile>
                <jsSourceFile>scripts/krad.request.js</jsSourceFile>
                <jsSourceFile>scripts/krad.response.js</jsSourceFile>
                <jsSourceFile>scripts/krad.actions.js</jsSourceFile>
                <jsSourceFile>scripts/krad.validate.js</jsSourceFile>
                <jsSourceFile>scripts/krad.session.js</jsSourceFile>
                <jsSourceFile>plugins/tooltip/jquery.bubblepopup.v2.3.1.js</jsSourceFile>
                <jsSourceFile>plugins/easing/jquery.easing-1.3.pack.js</jsSourceFile>
              </jsSourceFiles>
            </configuration>
            <goals>
              <goal>minify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-webapp</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp</directory>
                </resource>
              </resources>
              <outputDirectory>${minify.working.dir}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>prepare-package</phase>
            <configuration>
              <resources>
                <resource>
                  <directory>${minify.target.dir}</directory>
                  <includes>
                    <include>**/krad_${project.version}.*</include>
                  </includes>
                </resource>
              </resources>
              <outputDirectory>${minify.output.dir}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-fancybox-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/css</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/fancybox</directory>
                  <excludes>
                    <exclude>**/*.css</exclude>
                    <exclude>**/*.js</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-jgrowl-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/css</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/jgrowl</directory>
                  <excludes>
                    <exclude>**/*.css</exclude>
                    <exclude>**/*.js</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-jqueryUI-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/css/images</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/jqueryUI/images</directory>
                  <excludes>
                    <exclude>**/*.css</exclude>
                    <exclude>**/*.js</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-jstree-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/css</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/jstree</directory>
                  <excludes>
                    <exclude>**/*.css</exclude>
                    <exclude>**/*.js</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-jstree-additional-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/scripts</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/jstree</directory>
                  <excludes>
                    <exclude>**/*.js</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-rice-datatables-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/css</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/rice/datatables</directory>
                  <excludes>
                    <exclude>**/*.css</exclude>
                    <exclude>**/*.js</exclude>
                    <exclude>images/**</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-rice-datatables-images-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/css/images</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/rice/datatables/images</directory>
                  <excludes>
                    <exclude>**/*.css</exclude>
                    <exclude>**/*.js</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-rice-spinner-images-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/css/images</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/rice/spinner/images</directory>
                  <excludes>
                    <exclude>**/*.css</exclude>
                    <exclude>**/*.js</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-minified-tooltip-dependencies</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${minify.output.dir}/css</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/webapp/krad/plugins/tooltip</directory>
                  <excludes>
                    <exclude>**/*.css</exclude>
                    <exclude>**/*.js</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>rice-krad-web-framework</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>rice-core-impl</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>rice-core-web</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>rice-impl</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>mysql</groupId>
      <artifactId>${mysql.jdbc.artifactId}</artifactId>
      <version>${mysql.jdbc.version}</version>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-web</artifactId>
    </dependency>

    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-webmvc</artifactId>
    </dependency>
  </dependencies>
</project>